<div class="question"><%= @question.name %></div>
<% if @question.explanation.present? %>
  <div class="explanation"><%= br @question.explanation %></div>
<% end %>

<%= hidden_field_tag "answers[#{@no}][]", "0", id: nil %>
<ul>
<% @question.edges.each_with_index do |edge, i| %>
  <li>
    <label>
      <%= radio_button_tag "answers[#{@no}][]", edge.transition, (i == 0), id: nil %>
      <%= edge.value %>
    </label>
    <% if edge.explanation.present? %>
      <div class="explanation"><%= br edge.explanation %></div>
    <% end %>
  </li>
<% end %>
</ul>

<footer class="send">
  <%= f.submit t("guide.links.next"), name: :submit %>
</footer>
