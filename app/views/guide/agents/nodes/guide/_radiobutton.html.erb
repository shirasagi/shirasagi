<div class="question"><%= @question.name %></div>

<%= hidden_field_tag "answers[#{@no}][]", "0" %>
<ul>
<% @question.edges.each_with_index do |edge, i| %>
  <li>
    <label>
      <%= radio_button_tag "answers[#{@no}][]", edge.transition, (i == 0) %>
      <%= edge.value %>
    </label>
  </li>
<% end %>
</ul>

<footer class="send">
  <%= f.submit t("guide.links.next"), name: :submit %>
</footer>
