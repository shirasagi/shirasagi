<% return if @item.map_points.blank? %>

<%= render_map "#map-canvas", site: @cur_site, markers: @item.map_points, map: { zoom: @item.map_zoom_level } %>

<dl class="see mod-page">
  <div id="map-canvas" style="width: 100%; height: 320px"></div>
</dl>
<% @item.map_points.each do |map_point| %>
<p><%= map_point[:name] %><%= map_point[:loc] %></p>
<% end %>
