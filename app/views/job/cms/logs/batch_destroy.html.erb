<%= form_for :item, url: { action: :batch_destroy }, html: { method: :post, multipart: true } do |f| %>
<%= error_messages_for :item %>

<section class="main-box">
  <header><h2><%= t("views.confirm.delete") %></h2></header>

  <dl class="see">
    <dt><%= @item.t :save_term %></dt>
    <dd><%= f.select :save_term, @item.delete_term_options %></dd>
  </dl>
</section>

<footer class="send">
  <%= f.submit t("views.button.delete"), class: :delete %>
  <%= f.button t("views.button.cancel"), class: 'btn-default', type: :reset, onclick: "location.href='#{url_for(action: :index)}'; return false;" %>
</footer>
<% end %>
