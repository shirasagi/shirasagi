<div class="main-box">
  <table class="index">
    <thead>
    <tr>
      <th class="checkbox"><input type="checkbox" /></th>
      <th class="datetime"><%= @model.t :created %></th>
      <th><%= @model.t :group_count %></th>
      <th><%= @model.t :user_count %></th>
    </tr>
    </thead>

    <tbody>
    <% @items.each do |item| %>
      <tr class="list-item">
        <td class="checkbox">
          <input type="checkbox" name="ids[]" value="<%= item.id %>" />
          <nav class="tap-menu">
            <%= link_to t('ss.links.show'), action: :show, id: item %>
          </nav>
        </td>
        <td><%= link_to item.created.strftime("%Y/%m/%d %H:%M"), action: :show, id: item %></td>
        <td><%= item.group_count %></td>
        <td><%= item.user_count %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @items if @items.try(:current_page) %>
