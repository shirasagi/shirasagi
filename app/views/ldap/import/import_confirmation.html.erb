<%= form_for :item, url: { action: :import }, html: { id: "item-form", method: :post, multipart: true, autocomplete: :off } do |f| %>
  <%= error_messages_for :item %>

  <section class="main-box">
    <header><h2><%= t("ldap.confirm.import") %></h2></header>

    <p><%= t "ldap.confirm.import_description" %></p>
  </section>

  <footer class="send">
    <%= f.submit t("ldap.buttons.import"), class: "btn-primary save", data: { disable_with: t("ss.buttons.importing") } %>
    <%= f.button t("ss.buttons.cancel"), type: :reset, onclick: "location.href='#{url_for(action: :index)}'; return false;", class: "btn-default" %>
  </footer>
<% end %>
