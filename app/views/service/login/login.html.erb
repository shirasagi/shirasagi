<%= jquery do %>
  $('input.alnum').on({
    focus: function() { $(this).attr('type', 'tel').css('width', '100%'); },
    blur: function() { $(this).attr('type', 'text'); },
    keypress: function(ev) { if (ev.which == 13) { $('#item_password').focus(); return false; } }
  });
<% end %>

<article>
  <%= form_tag action: params[:action] do |f| %>
    <% if flash[:alert] %>
    <div class="error-message alert alert-warning"><%= flash[:alert] %></div>
    <% end %>

    <%= error_messages_for :item %>

    <div class="form-group mb-0">
      <label><%= @model.t :account %></label>
      <%= text_field :item, :account, class: "alnum", autofocus: true %>
    </div>

    <div class="form-group mb-4">
      <label><%== @model.t :password %></label>
      <%= password_field :item, :password %>
    </div>

    <footer class="send">
      <%= submit_tag t("ss.login"), class: "btn btn-outline-primary btn-lg btn-block w-100" %>
    </footer>
  <% end %>
</article>
