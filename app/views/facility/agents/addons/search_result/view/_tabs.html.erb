<nav class="tabs">
  <ul>
    <% query = params.to_unsafe_h.select{ |k, v| %(keyword category_ids service_ids location_ids).index(k) }.to_query %>
    <li class="tab map<%= @current == "map" ? " current" : "" %>">
      <%= link_to t("facility.tab.map"), "./map.html?#{query}" %>
    </li>
    <li class="tab list<%= @current == "result" ? " current" : "" %>">
      <%= link_to t("facility.tab.result"), "./result.html?#{query}" %>
    </li>
  </ul>
</nav>
