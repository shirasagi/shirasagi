<dl class="see mod-service">
  <dt><%= t("facility.service.name") %><%= @model.tt :services %></dt>
  <dd class="wide" style="line-height: 2.5">
    <%= f.hidden_field "service_ids[]", value: "", id: nil %>
    <% if @cur_node.present? %>
      <% @cur_node.st_services.each do |cate| %>
        <label>
          <%= f.check_box("service_ids[]", {}, cate._id) %>
          <%= cate.name %>
        </label>
      <% end %>
    <% end %>
  </dd>
</dl>
