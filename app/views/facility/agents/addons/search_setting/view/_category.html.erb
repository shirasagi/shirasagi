<div class="category">
  <%= hidden_field_tag 'category_ids[]', "" %>
  <% @cur_node.st_categories.and_public(@cur_date).order_by(order: 1).each do |cate| %>
    <div class="<%= cate.basename %>">
      <%= check_box_tag 'category_ids[]', cate.id, @category_ids.index(cate.id),
        { :id => "q_category_ids_#{cate.id}", :class => "prop"} %>
      <label for=<%= "q_category_ids_#{cate.id}" %>><%= cate.name %></label>
    </div>
  <% end %>
</div>
