<dl class="see body">
  <% if @cur_node.kana.present? %>
    <dt><%= @cur_node.class.t :kana %></dt>
    <dd><%= @cur_node.kana %></dd>
  <% end %>

  <% if @cur_node.postcode.present? %>
    <dt><%= @cur_node.class.t :postcode %></dt>
    <dd><%= @cur_node.postcode %></dd>
  <% end %>

  <% if @cur_node.address.present? %>
    <dt><%= @cur_node.class.t :address %></dt>
    <dd><%= @cur_node.address %></dd>
  <% end %>

  <% if @cur_node.tel.present? %>
    <dt><%= @cur_node.class.t :tel %></dt>
    <dd><%= @cur_node.tel %></dd>
  <% end %>

  <% if @cur_node.fax.present? %>
    <dt><%= @cur_node.class.t :fax %></dt>
    <dd><%= @cur_node.fax %></dd>
  <% end %>

  <% if @cur_node.related_url.present? %>
    <dt><%= @cur_node.class.t :related_url %></dt>
    <dd><%= link_to(@cur_node.related_url, @cur_node.related_url, target: "_blank", rel: "noopener") %></dd>
  <% end %>
</dl>
