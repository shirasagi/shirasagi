<dl class="see mod-location">
  <dt><%= t("facility.location.name") %><%= @model.tt :locations %></dt>
  <dd class="wide" style="line-height: 2.5">
    <%= f.hidden_field "location_ids[]", value: "", id: nil %>
    <% if @cur_node.present? %>
      <% @cur_node.st_locations.each do |cate| %>
        <label>
          <%= f.check_box("location_ids[]", {}, cate._id) %>
          <%= cate.name %>
        </label>
      <% end %>
    <% end %>
  </dd>
</dl>
