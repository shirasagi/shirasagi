<%= jquery do %>
  $(".reset").on("click", function () {
    $(".prop").prop("checked", false);
    $(".keyword").val("");
    return false;
  });

<% end %>

<%= form_tag search_path, multipart: true, method: "get" do %>
  <%= render file: "facility/agents/addons/search_setting/view/index" %>
  <footer class="send">
    <%= submit_tag t('facility.submit.search'), name: nil %>
    <%= submit_tag t('facility.submit.reset'), type: :reset, name: nil, class: :reset %>
  </footer>
<% end %>
