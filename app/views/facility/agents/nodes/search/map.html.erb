<%= javascript_include_tag "/assets/js/jquery.colorbox.js" %>
<%= stylesheet_link_tag "/assets/css/colorbox/colorbox.css", media: 'all' %>

<%= render_facility_search_map "#map-canvas", markers: @markers, site: @cur_site, preview: @preview %>

<%= render file: "facility/agents/addons/search_result/view/upper" %>
<%= render file: "facility/agents/addons/search_result/view/map" %>

<%= jquery do %>
  $(".ajax-box").on("click", function () {
    $.colorbox({
      html: "<%=j render(partial: 'modal', locals: { search_path: './map.html' }) %>"
    });
    return false;
  });
<% end %>
