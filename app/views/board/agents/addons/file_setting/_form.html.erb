<div class="see mod-board-file-setting">
  <div class="mb-3">
    <label><%= @model.t :file_limit %><%= @model.tt :file_limit %></label>
    <%= f.select :file_limit, @item.file_limit_options, class: "form-control" %>
  </div>

  <div class="mb-3">
    <label><%= @model.t :file_size_limit %><%= @model.tt :file_size_limit %></label>
    <%= f.select :file_size_limit, @item.file_size_limit_options, class: "form-control" %>
  </div>

  <div class="mb-3">
    <label><%= @model.t :file_ext_limit %><%= @model.tt :file_ext_limit %></label>
    <%= f.text_area :file_ext_limit, value: @item.file_ext_limit.join("\n"), class: "form-control" %>
  </div>

  <div class="mb-3">
    <label><%= @model.t :file_scan %><%= @model.tt :file_scan %></label>
    <%= f.select :file_scan, @item.file_scan_options, class: "form-control" %>
  </div>
</div>
