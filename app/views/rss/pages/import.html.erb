<%= form_for :item, url: { action: :import }, html: { id: "item-form", multipart: true, autocomplete: :off } do |f| %>
  <%= error_messages_for :item %>

<div class="addon-views">
  <div class="addon-view" id="addon-basic">
    <div class="addon-head"><h2><%= t("rss.confirm.import") %></h2></div>
    <div class="addon-body">
      <%= render file: "_import" %>
    </div>
  </div>
</div>

<footer class="send">
  <%= f.submit t("rss.buttons.import"), class: :save %>
  <%= f.button t("ss.buttons.cancel"), type: :reset, class: 'btn-default', onclick: "location.href='#{url_for(action: :index)}'; return false;" %>
</footer>
<% end %>
