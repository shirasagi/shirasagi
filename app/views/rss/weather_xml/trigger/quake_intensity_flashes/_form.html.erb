<% @item.earthquake_intensity ||= '5+' %>
<dl class="see">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :training_state %><%= @model.tt :training_state %></dt>
  <dd><%= f.select :training_state, @item.training_state_options %></dd>

  <dt><%= @model.t :earthquake_intensity %><%= @model.tt :earthquake_intensity %></dt>
  <dd><%= f.select :earthquake_intensity, @item.earthquake_intensity_options %></dd>

  <dt><%= @model.t :target_regions %><%= @model.tt :target_regions %></dt>
  <dd>
    <%= f.hidden_field "target_region_ids[]", value: "", class: "hidden-ids" %>
    <%= link_to :"rss.apis.weather_xml/quake_regions.index", rss_apis_weather_xml_quake_regions_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead>
      <tr>
        <th class="name"><%= Rss::WeatherXml::QuakeRegion.t :name %></th>
        <th style="width: 20%;"></th>
      </tr>
      </thead>
      <tbody>
      <% @item.target_regions.each do |region| %>
        <tr data-id="<%= region.id %>">
          <td><%= f.hidden_field "target_region_ids[]", value: region.id %> <%= region.name %></td>
          <td style="width: 20%;"><%= link_to t("views.button.delete"), "#", class: "deselect btn" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </dd>
</dl>
