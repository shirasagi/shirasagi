<dl class="see mod-rss-weather-xml-trigger-weather-alert">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :training_state %><%= @model.tt :training_state %></dt>
  <dd><%= f.select :training_state, @item.training_state_options %></dd>

  <dt><%= @model.t :kind %><%= @model.tt :kind %></dt>
  <dd>
    <label for="item_kind_warning">
      <%= f.check_box :kind_warning, { checked: @item.kind_warning == 'enabled' }, 'enabled', 'disabled' %> 警報
    </label>
    <label for="item_kind_advisory">
      <%= f.check_box :kind_advisory, { checked: @item.kind_advisory == 'enabled' }, 'enabled', 'disabled' %> 注意報
    </label>
  </dd>

  <dt><%= @model.t :regions %><%= @model.tt :regions %></dt>
  <dd>
    <%= f.hidden_field "target_region_ids[]", value: "", class: "hidden-ids" %>
    <%= link_to :"rss.apis.weather_xml/forecast_regions.index", rss_apis_weather_xml_forecast_regions_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead>
      <tr>
        <th class="name"><%= Rss::WeatherXml::ForecastRegion.t :name %></th>
        <th style="width: 20%;"></th>
      </tr>
      </thead>
      <tbody>
      <% @item.target_regions.each do |item| %>
        <tr data-id="<%= item.id %>">
          <td><%= f.hidden_field "target_region_ids[]", value: item.id %> <%= item.name %></td>
          <td style="width: 20%;"><%= link_to t("views.button.delete"), "#", class: "deselect btn" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </dd>
</dl>
