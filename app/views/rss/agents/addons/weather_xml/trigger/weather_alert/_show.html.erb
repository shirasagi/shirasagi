<% return if @item.trigger_weather_alert.blank? %>

<% @item.trigger_weather_alert.tap do |trigger| %>
  <dl class="see mod-rss-weather-xml-trigger-weather-alert">
    <dt><%= Rss::WeatherXml::Trigger::WeatherAlert.t :kind %></dt>
    <dd>
      <% if trigger.kind_warning == 'enabled' %>
        警報
      <% end %>
      <% if trigger.kind_advisory == 'enabled' %>
        注意報
      <% end %>
    </dd>

    <dt><%= Rss::WeatherXml::Trigger::WeatherAlert.t :regions %></dt>
    <dd>
      地域選択
    </dd>
  </dl>
<% end %>
