<%= scss do %>
div.tsv-preview {
  overflow-x: scroll;
  padding: 10px;
  border: 1px solid #bbb;
  background-color: #fff;
  td {
    max-width: 150px;
  }
}
<% end %>

[<%= @item.name %>]

<div class="tsv-preview">
  <table class="cells">
    <tbody>
      <% @data.each do |line| %>
      <tr>
        <% line.each do |col| %>
        <td><%= col %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

