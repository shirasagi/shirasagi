<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <dt><%= @model.t :text %></dt>
  <dd><%= auto_link br(@item.text), html: { target: "_blank" } %></dd>

  <dt><%= @model.t :tags %></dt>
  <dd><%= @item.tags %></dd>

  <dt><%= @model.t :dataset_id %></dt>
  <dd>
    <% if @item.dataset_ids.length > 0 %>
      <% if @item.datasets.length > 0 %>
      <%= @item.datasets[0].name %>
      <% else %>
      <%= "存在しません" %>
      <% end %>
    <% end %>
  </dd>

  <dt><%= @model.t :app_id %></dt>
  <dd>
    <% if @item.app_ids.length > 0 %>
      <% if @item.apps.length > 0 %>
      <%= @item.apps[0].name %>
      <% else %>
      <%= "存在しません" %>
      <% end %>
    <% end %>
  </dd>

  <dt><%= @model.t :point %></dt>
  <dd><%= @item.point %></dd>
</dl>
