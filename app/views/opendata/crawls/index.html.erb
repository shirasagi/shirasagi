
<%= render file: "_search" %>

<table class="index">
  <thead>
    <tr>
      <th class="checkbox"><input type="checkbox" /></th>
      <th class="crawl_state"><%= @model.t :crawl_state %></th>
      <th class="name"><%= @model.t :name %></th>
      <th class="resourcename"><%= t "mongoid.attributes.opendata/dataset.name" %></th>
      <th class="original_url"><%= @model.t :original_url %></th>
      <th class="datetime"><%= @model.t :original_updated %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td>
        <input type="checkbox" name="ids[]" value="<%= item[:id] %>" />
        <nav class="tap-menu">
          <%= link_to :show, { action: :show, id: item } %>
          <%= link_to :edit, { action: :edit, id: item } %>
          <%= link_to :delete, { action: :delete, id: item } %>
        </nav>
      </td>
      <td class="crawl_state <%= item[:crawl_state] %>"><%= t "opendata.crawl_state.#{item[:crawl_state]}" %></td>
      <td class="name"><%= link_to item[:name], { action: :show, id: item } %></td>
      <td class="resourcename"><%= item[:resourcename] %></td>
      <td class="original_url"><input type="button" value=<%= @model.t :tsv_id %> onClick="window.open('<%= item[:original_url] %>')">ã€€<%= item[:original_url] %></td>
      <% if item[:original_updated].present? %>
      <td class="datetime"><%= item[:original_updated].strftime("%Y/%m/%d %H:%M") %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items if @items.try(:current_page) %>

