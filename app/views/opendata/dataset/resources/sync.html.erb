<%= form_for :item, url: { action: :sync }, html: { method: :post, multipart: true } do |f| %>
  <%= error_messages_for :item %>

  <div class="addon-views">
    <div class="addon-view mb-5" id="addon-basic">
      <div class="addon-head"><h2><%= t("ldap.confirm.sync") %></h2></div>
      <div class="addon-body">
        <%= render file: "_sync" %>
      </div>
    </div>
  </div>

  <footer class="send">
    <%= f.submit t("ldap.buttons.sync"), class: 'btn-primary sync' %>
    <%= f.button t("ss.buttons.cancel"), class: 'btn-default', type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;" %>
  </footer>
<% end %>
