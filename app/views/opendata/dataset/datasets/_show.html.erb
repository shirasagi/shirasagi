<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :basename %></dt>
  <dd><%= @item.send :basename %></dd>
  <dd><%= @item.public? ? link_to(@item.full_url, @item.full_url, target: "_blank", rel: "noopener") : @item.full_url %></dd>
  <dd><div class="cms-preview-links"><%= safe_join cms_preview_links(@item), '|' %></div></dd>

  <dt><%= @model.t :text %></dt>
  <dd><%= auto_link br(@item.text), html: { target: "_blank", rel: "noopener" } %></dd>

  <dt><%= @model.t :tags %></dt>
  <dd><%= @item.send :tags %></dd>

  <dt><%= @model.t :creator_name %></dt>
  <dd><%= @item.creator_name %></dd>

  <dt><%= @model.t :point %></dt>
  <dd><%= @item.point %></dd>
</dl>
