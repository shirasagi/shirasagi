<dl class="see">
  <% if @model.allowed?(:edit, @cur_user, site: @cur_site, node: @cur_node) %>
    <dt><%= t("ss.links.import") %></dt>
    <dd><%= link_to(t('opendata.links.harvest_import_datasets'), { action: :import }) %></dd>
    <dd><%= link_to(t('opendata.links.harvest_destroy_datasets'), { action: :destroy_datasets }) %></dd>
  <% end %>

  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <dt><%= @model.t :source_url %></dt>
  <dd><%= @item.source_url %></dd>

  <dt><%= @model.t :api_type %></dt>
  <dd><%= @item.label :api_type %></dd>

  <dt><%= @model.t :resource_size_limit_mb %></dt>
  <dd><%= @item.resource_size_limit_mb %> <span class="postfix"><%= t('ss.units.mega_byte') %></span></dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.order %></dd>

  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>

  <dt><%= @model.t :basicauth_state %></dt>
  <dd><%= @item.label :basicauth_state %></dd>
</dl>
