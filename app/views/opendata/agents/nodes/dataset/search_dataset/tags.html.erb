<%= jquery do %>
$('.search-dataset-tag a').click(function() {
  $('select[name="s[tag]"]').val($(this).find('.name').text());
  $.colorbox.close();
});
<% end %>
<div class='search-dataset-tag'>
  <% @tags.each do |data| %>
  <article>
    <header>
      <h2>
        <a>
          <span class="name"><%= data["id"] %></span>
          <span class="count">(<%= data["count"] %>)</span>
        </a>
      </h2>
    </header>
  </article>
  <% end %>
  <% if @tags.count == 0 %>
    <div><%= I18n.t("opendata.labels.not_data") %></div>
  <% else %>
    <article>
      <header>
        <h2>
          <a>
            <%= t("opendata.search_datasets.deselect") %>
            <span class="name"></span>
          </a>
        </h2>
      </header>
    </article>
  <% end %>
</div>
