<%
  file = @item.file
  file.site = @cur_site
  selector = "map-canvas-#{SecureRandom.uuid}"
%>

<%= render_map "##{selector}", site: @cur_site, preview: @preview %>

<script type="text/javascript" charset="utf-8">
window.colorbox_onComplete = function() {
  Googlemaps_Map.setGeoJson('<%= @item.file.full_url %>');
  return false;
};
</script>

<div class="resource-content">
  <div class="resource-name"><%= @item.name %></div>

  <div class="resource-map">
    <div id="<%= selector %>" class="map-canvas" style="width: 100%; height: 400px;"></div>
  </div>
</div>
