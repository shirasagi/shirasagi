<%
categories ||= begin
  node = model.site(@cur_site).public.first
  ret = node.st_categories.presence || node.default_st_categories
  ret = ret.first.children.public.sort(order: 1) if ret.one?
  ret
end

def cate_form(f, item)
  item = item.becomes_with_route
  children = item.children.public.sort(order: 1)
  if children.size > 0
    cc = children.map { |c| c.children.size }.max != 0
    h = %(<label class="parent category">)
    if item.is_a?(Opendata::Node::Category)
      h << f.check_box("category_ids[]", {}, item._id)
    end
    h << %(#{item.name}</label>)
    h << %(<div class="child #{cc ? 'grandchild' : ''}">).html_safe
    children.each { |c| h += cate_form(f, c) }
    h << %(</div>).html_safe
  else
    h  = %(<label class="category">)
    if item.is_a?(Opendata::Node::Category)
      h << f.check_box("category_ids[]", {}, item._id)
    end
    h << %(#{item.name}</label>)
  end

  h.html_safe
end
%>

<% categories.each do |cate| %>
  <div class="parent category">
    <%= cate_form(f, cate) %>
  </div>
<% end %>
