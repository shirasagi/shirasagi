<%= form_for :item, url: @item_url, html: { id: "item-form", method: :put, multipart: true } do |f| %>
<%= error_messages_for :item %>

<%= render partial: "form", locals: { f: f } %>

<footer class="send">
  <div>
    <% name = @route ? "request" : "publish_save" %>
  	<%= f.submit t("ss.buttons.#{name}"), name: name, class: :save %>
  	<%= f.submit t("ss.buttons.closed_save"), name: :save, class: :save %>
  </div>
</footer>

<% end %>
