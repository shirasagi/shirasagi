<%= form_for :item, url: @cur_node.url, html: { id: "item-form", multipart: true } do |f| %>
<%= error_messages_for :item %>

<%= render partial: "form", locals: { f: f } %>

<footer class="send">
  <div>
    <% if @route %>
    	<%= f.submit t("ss.buttons.request"), name: :request, class: :save %>
    <% else %>
    	<%= f.submit t("ss.buttons.publish_save"), name: :publish_save, class: :save %>
    <% end %>
  	<%= f.submit t("ss.buttons.closed_save"), name: :save, class: :save %>
  </div>
</footer>

<% end %>
