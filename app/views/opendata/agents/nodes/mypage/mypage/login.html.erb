<ul>
  <% secrets = Rails.application.secrets %>
  <% if secrets.twitter_key %><li class="Twitter"><%= link_to I18n.t("opendata.labels.login_twitter"),"/mypage/twitter" %></li><% end %>
  <% if secrets.facebook_key %><li class="facebook"><%= link_to I18n.t("opendata.labels.login_facebook"), "/mypage/facebook" %></li><% end %>
  <% if secrets.yahoo_key %><li class="Yahoo"><%= link_to I18n.t("opendata.labels.login_yahoo"),"/mypage/yahoojp" %></li><% end %>
  <% if secrets.google_key %><li class="Google"><%= link_to I18n.t("opendata.labels.login_google"),"/mypage/google_oauth2" %></li><% end %>
  <% if secrets.github_key %><li class="github"><%= link_to I18n.t("opendata.labels.login_github"),"/mypage/github" %></li><% end %>
</ul>

<% if SS.config.opendata.use_member_form_login %>
  <%= form_tag "", class: "member-login" do |f| %>
    <%= error_messages_for :item %>

    <dl>
      <dt>Email</dt>
      <dd><%= email_field :item, :email %></dd>

      <dt>Password</dt>
      <dd><%= password_field :item, :password %></dd>
    </dl>

    <div class="send">
      <%= submit_tag t("views.login"), name: :login %>
    </div>
  <% end %>
<% end %>
