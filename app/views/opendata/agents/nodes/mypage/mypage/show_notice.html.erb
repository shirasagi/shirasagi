<% if @notice && @notice.commented_count != 0 %>
  <%= coffee do %>
    $ ->

    $(".confirm").click (event)->
      $.ajax
        url: "<%= mypage_path %>notice/confirm.html"
        type: "GET"
        success: (data)->
          $("#my-notice").html data
      event.preventDefault()
  <% end %>

  <%= link_to @notice.commented_count, "", class: "confirm" %>
<% end %>
