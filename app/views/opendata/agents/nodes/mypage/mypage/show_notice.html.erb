<%= coffee do %>
  $ ->

  $(".confirm").click (event)->
    $.ajax
      url: "/mypage/notice/confirm.html"
      type: "GET"
      success: (data)->
        $("#my-notice").html data
    event.preventDefault()

<% end %>

<% if @notice && @notice.commented_count != 0 %>
<%= link_to @notice.commented_count, "", class: "confirm" %>
<% end %>
