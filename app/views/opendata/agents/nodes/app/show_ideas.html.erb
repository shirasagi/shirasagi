<div class="detail">
  <div class="info-wrap">
    <div class="app-ideas">
      <div class="ideas">
        <% if @login_mode %>
          <a class="contribute" href="<%= "/mypage/idea/new?app=#{@app_idea.id}" %>">アイデアを投稿する</a>
        <% end %>
        <table class="index">
          <tbody>
          <% @ideas.each do |idea| %>
            <tr>
              <td class="name"><%= link_to idea.name, idea.url %></td>
              <td>コメント数(<% i = @idea_comment.where("idea_id": idea.id) %><% if i.present? %><%= i.count.to_i %><% else %>0<% end %>)</td>
              <td>更新日時 <%= tryb{idea.updated.strftime("%Y年%m月%d日 %H時%M分")} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
