<%= jquery do %>
  Opendata_Point.renderButton();
  $(".point .label a").colorbox({ fixed: true, width: "300px", height: "50%" })
<% end %>

<div class="count">
  <span class="label">
    <% if @app.point == 0 %>
      いいね！
    <% else %>
      <%= link_to "いいね！", @app.point_members_url %>
    <% end %>
  </span>
  <span class="number">
    <%= @app.point %>
  </span>
</div>

<div class="like"><%= link_to "いいね！", "#", class: "update #{@mode}" if @mode %></div>
