<dl class="see opendata-app-appfiles">
  <% if @item.file %>
  <dt><%= @model.t :file_id %></dt>
  <dd>
    <%= link_to @item.filename, "file" %>
    (<%= number_to_human_size @item.size %>)
  </dd>
  <% end %>

  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :text %></dt>
  <dd><%= auto_link br(@item.text), html: { target: "_blank" } %></dd>
</dl>
