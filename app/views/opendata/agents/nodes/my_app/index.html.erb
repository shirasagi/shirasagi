<table class="opendata-apps index">
  <thead>
    <tr>
      <th class="name">アプリケーション名</th>
      <th class="updated">更新日時</th>
      <th class="state">状態</th>
      <th class="point">いいね</th>
      <th class="downloaded">ダウンロード</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><a href="<%= "#{item.id}/" %>"><%= item.name %></a></td>
      <td><%= l item.updated.to_date, format: :long %></td>
      <td><%= item.label :state %></td>
      <td><%= item.point.to_i %></td>
      <td><%= item.downloaded.to_i %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items if @items.try(:current_page) %>
