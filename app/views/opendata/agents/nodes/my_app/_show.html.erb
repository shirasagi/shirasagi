<dl class="see opendata-app">
  <% if @item.file %>
  <dt><%= @model.t :file_id %></dt>
  <dd>
    <%= link_to @item.appfilename, "file" %>
    (<%= number_to_human_size @item.size %>)
  </dd>
  <% end %>

  <dt><%= @model.t :appurl %></dt>
  <dd><%= auto_link br(@item.appurl), html: { target: "_blank" } %></dd>

  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :text %></dt>
  <dd><%= auto_link br(@item.text), html: { target: "_blank" } %></dd>

  <dt><%= @model.t :license_id %></dt>
  <dd><%= tryb { @item.license.name } %></dd>

  <dt><%= @model.t :tags %></dt>
  <dd><%= @item.tags.join(", ") %></dd>

  <dt><%= @model.t :category_ids %></dt>
  <dd><%= @item.categories.map { |m| m.name }.join(", ") %></dd>

  <dt><%= @model.t :area_ids %></dt>
  <dd><%= @item.areas.map { |m| m.name }.join(", ") %></dd>

  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>
</dl>
