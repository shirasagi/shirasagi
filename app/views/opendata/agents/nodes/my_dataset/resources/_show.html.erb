<dl class="see opendata-dataset-resources">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <% if @item.file %>
  <dt><%= @model.t :file_id %></dt>
  <dd>
    <%= link_to @item.filename, "file" %>
    (<%= number_to_human_size @item.size %>)
  </dd>
  <% end %>

  <dt><%= @model.t :format %></dt>
  <dd><%= @item.send :format %></dd>

  <dt><%= @model.t :license_id %></dt>
  <dd><%= tryb { @item.license.name } %></dd>

  <dt><%= @model.t :text %></dt>
  <dd><%= auto_link br(@item.text), html: { target: "_blank" } %></dd>

  <% if @item.rdf_iri.present? %>
  <dt><%= @model.t :rdf_iri %></dt>
  <dd><%= link_to @item.rdf_iri, "#{sparql_path}?graph_name=#{@item.rdf_iri}" %></dd>
  <% end %>

  <% if @item.rdf_error.present? %>
  <dt><%= @model.t :rdf_error %></dt>
  <dd><%= @item.send :rdf_error %></dd>
  <% end %>
</dl>
