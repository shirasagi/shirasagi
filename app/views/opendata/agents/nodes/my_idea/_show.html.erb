<dl class="see opendata-idea">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :text %></dt>
  <dd><%= auto_link br(@item.text), html: { target: "_blank" } %></dd>

  <dt><%= @model.t :tags %></dt>
  <dd><%= @item.tags.join(", ") %></dd>

  <dt><%= @model.t :category_ids %></dt>
  <dd><%= @item.categories.map { |m| m.name }.join(", ") %></dd>

  <dt><%= @model.t :area_ids %></dt>
  <dd><%= @item.areas.map { |m| m.name }.join(", ") %></dd>

  <dt><%= @model.t :dataset_id %></dt>
  <dd>
    <% if @item.dataset_ids.length > 0 %>
      <% if @item.datasets.length > 0 %>
      <%= @item.datasets[0].send :name %>
      <% else %>
      <%= "存在しません" %>
      <% end %>
    <% end %>
  </dd>

  <dt><%= @model.t :app_id %></dt>
  <dd>
    <% if @item.app_ids.length > 0 %>
      <% if @item.apps.length > 0 %>
      <%= @item.apps[0].send :name %>
      <% else %>
      <%= "存在しません" %>
      <% end %>
    <% end %>
  </dd>

  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>
</dl>
