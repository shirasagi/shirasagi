
<% if @idea_ap.app_ids.length > 0 %>
<div class="detail">
  <% app = @idea_ap.apps[0] %>
  <div class="info-wrap">
    <% if app %>
      <div class="app"><%= link_to app.name, app.url %></div>
      <% if app.executed then executed = app.executed else executed = 0 end %>
      <div class="app_executed">実行回数(<%= executed %>)</div>
      <div class="app_updated">更新日時 <%= tryb{app.updated.strftime("%Y年%1m月%1d日 %1H時%1M分")} %></div>
    <% else %>
      <div class="app"><%= "存在しません" %></div>
    <% end %>
  </div>
</div>
<% end %>
