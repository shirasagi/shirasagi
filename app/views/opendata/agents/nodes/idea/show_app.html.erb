
<% if @idea_ap.app_ids.length > 0 %>
<div class="detail">
  <% app = @idea_ap.apps[0] %>
  <div class="info-wrap">
    <div class="app_header">関連アプリ</div>
    <% if app %>
      <div class="app"><%= link_to app.name, app.url %></div>
      <div class="app_text"><%= app.text %></div>
    <% else %>
      <div class="app"><%= "存在しません" %></div>
    <% end %>
  </div>
</div>
<% end %>
