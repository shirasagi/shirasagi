<%= coffee do %>
$ ->

  $("#idea-point .update").click (event)->
    $.ajax
      url: "<%= @idea.point_add_url %>"
      success: (data)->
        $("#idea-point").html data
    event.preventDefault()

  $("#idea-point .label a").colorbox({ fixed: true, width: "300px", height: "50%" })

<% end %>

<div class="count">
  <span class="number">
    <%= @idea.point %>
  </span>
  <span class="label">
    <% if @idea.point == 0 %>
      いいね！数
    <% else %>
      <%= link_to "いいね！数", @idea.point_members_url %>
    <% end %>
  </span>
</div>

<%= link_to "いいね！", "#", class: "update #{@mode}" if @mode %>
