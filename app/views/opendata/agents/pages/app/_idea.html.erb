<table class="index">
  <tbody>
  <% @app_idea.each do |idea| %>
    <tr>
      <td class="name"><%= link_to idea.name, idea.url %></td>
      <td>コメント数(<% if idea.comments.present? %><%= idea.comments.count.to_i %><% else %>0<% end %>)</td>
      <td>更新日時 <%= tryb{idea.updated.strftime("%Y年%m月%d日")} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
