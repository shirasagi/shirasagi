<% if @cur_member %>
<%= jquery do %>
  $.ajax({
    url: "<%= mypage_path %>notice/show.html",
    success: function (data) {
      $("#my-notice").html(data);
    }
  });

  <% end %>

  <span id="my-notice"></span>
  <%= link_to "#{@cur_member.name}さん", "#{mypage_path}", class: "member", rel: "nofollow" %>
  <%= link_to t("ss.logout"), "#{member_login_path}logout.html", class: "logout", rel: "nofollow" %>
<% else %>
  <%= link_to t("ss.login"), "#{mypage_path}", class: "login", rel: "nofollow" %>
<% end %>
