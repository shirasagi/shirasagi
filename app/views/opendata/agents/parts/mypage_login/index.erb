<%= coffee do %>

  # show notification
  $.ajax
    url: "/mypage/notice/show.html"
    success: (data)->
      $("#my-notice").html data

<% end %>

<% if @cur_member %>
<span id="my-notice"></span>
<a class="member" href="/mypage/"><%= @cur_member.name %>さん</a>
<a class="logout" href="/mypage/logout"><%= t("views.logout") %></a>
<% else %>
<a class="login" href="/mypage/login"><%= t("views.login") %></a>
<% end %>
