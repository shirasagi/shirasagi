<% return "" if @item.reports.blank? %>

<dl class="see mod-opendata-dataset_import-report">
  <dd class="wide">
    <table class="index">
      <% @item.reports.order(created: -1).limit(5).each do |report| %>
        <tr>
          <td>
            <%= link_to opendata_harvest_importer_report_path(importer_id: @item.id, id: report.id) do %>
              <%= ss_time_tag report.created %><%= " (#{number_to_human_size(report.size)})" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </dd>
</dl>
