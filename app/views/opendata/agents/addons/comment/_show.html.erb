<dl class="see">
  <dd class="wide">
    <%= link_to opendata_idea_comments_path(idea_id: @item) do %>
      <button><%= t("opendata.manage_comments") %></button>
    <% end %>
  </dd>

  <% if @comments.present? %>
  <dd class="wide">
    <table class="index">
      <tbody>
        <% @comments.order(name: 1).each do |cm| %>
        <tr>
          <td><%= cm.text %></td>
          <td>
            <% if cm.member %>
            <%= cm.member.name %>
            <% else %>
            ゲストユーザー
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </dd>
  <% end %>
</dl>
