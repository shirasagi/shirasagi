<dl class="see mod-idea-page-setting">
  <dt><%= @model.t :show_point %></dt>
  <dd><%= @item.label :show_point %></dd>

  <dt><%= @model.t :show_tabs %></dt>
  <dd>
    <% %w(released popular attention).each do |option| %>
      <% if @item.show_tab?(option) %>
        <%= t("opendata.sort_options.#{option}") %>
      <% end %>
      <% title = @item.tab_title(option) %>
      <% if title.present? %>
        (表示: <%= title %>)
      <% end %>
    <% end %>
  </dd>
</dl>
