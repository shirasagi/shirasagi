<%
return if @item.categories.blank?

def name_hier(category)
  names = []
  names << category.name
  while category.parent.present?
    category = category.parent
    names << category.name
  end
  names.reverse.join('/')
end
%>
<dl class="see">
  <dd class="wide"><%=br @item.categories.map { |cate| name_hier(cate) } %></dd>
</dl>
