<%= coffee do %>

deselectItem=() ->
  $(this).parents("tr:first").remove()
  if $("table.selected-dataset-groups tr[data-id]").size() == 0
    $("table.selected-dataset-groups").hide()
  return false

$ ->
  $("table.selected-dataset-groups a.deselect").click(deselectItem)
  if $("table.selected-dataset-groups tbody .deselect").size() == 0
    $("table.selected-dataset-groups").hide()

<% end %>

<dl class="see mod-opendata_dataset_groups">
  <dt><%= @model.t :dataset_group_ids %></dt>
  <dd>
    <%= f.hidden_field "dataset_group_ids[]", value: "", class: "hidden-groups-ids" %>
    <%= link_to t("opendata.search_dataset_groups.index"), opendata_search_dataset_groups_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index selected-dataset-groups">
      <thead>
        <tr>
          <th class="name"><%= @model.t :name %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @item.dataset_groups.each do |group| %>
        <tr data-id="<%= group.id %>">
          <td><%= f.hidden_field "dataset_group_ids[]", value: group.id %> <%= group.name %></td>
          <td><%= link_to t("opendata.search_dataset_groups.deselect"), "#", class: :deselect %></td>
        </tr>
        <% end %>
        <tr style="display:none" <%= raw(@item.present? ? "data-id=#{@item.id}" : "") %>></tr>
      </tbody>
    </table>
  </dd>
</dl>
