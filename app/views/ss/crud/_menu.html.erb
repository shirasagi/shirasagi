<nav class="nav-menu">
  <% if params[:action] =~ /index/ %>
    <%= link_to(t('ss.links.new'), { action: :new }, class: :new) if @model.allowed?(:edit, @cur_user) %>
    <% download_url = url_for(action: :download_all) rescue nil %>
    <% if download_url %>
      <%= ss_stimulus_tag({ "ss/dialog" => { through_by_modifier: 'shift' } }, { type: :a, href: download_url, class: "download" }) do %><%= t('ss.links.download') %><% end %>
    <% end %>
    <%= link_to t('ss.links.import'), action: :import rescue nil %>
  <% elsif params[:action] =~ /new|create|download_all|import|destroy_all/ %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% elsif params[:action] =~ /edit|update|delete/ %>
    <%= link_to(t('ss.links.back_to_show'), { action: :show, id: @item }, class: "back-to-show") if @model.allowed?(:read, @cur_user) %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% else %>
    <%= link_to(t('ss.links.edit'), { action: :edit, id: @item }, class: :edit) if @model.allowed?(:edit, @cur_user) %>
    <%= link_to(t('ss.links.delete'), { action: :delete, id: @item }, class: :delete) if @model.allowed?(:delete, @cur_user) %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% end %>
</nav>
