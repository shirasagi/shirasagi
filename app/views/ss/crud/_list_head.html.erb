<div class="list-head">
  <label class="check"><input type="checkbox" /></label>

  <div class="list-head-action">
    <%= render template: "_list_head_tags" %>
    <div class="list-head-action-destroy">
      <%= ss_button_to t("ss.links.delete"), "", class: "destroy-all btn btn-list-head-action", method: "delete", confirm: t('ss.confirm.delete') %>
    </div>
    <% if @model.include?(Cms::Model::Node) || @model.include?(Cms::Addon::Release) && @model.respond_to?(:allowed?) && @model.allowed?(:delete, @cur_user, site: @cur_site, node: @cur_node) %>
      <div class="list-head-action-update">
        <%= ss_button_to t("ss.links.make_them_public"), "", class: "change-state-all btn btn-list-head-action",
                        method: "put", confirm: t('ss.confirm.change_state'), params: { state: 'public' } %>
        <%= ss_button_to t("ss.links.make_them_close"), "", class: "change-state-all btn btn-list-head-action",
                        method: "put", confirm: t('ss.confirm.change_state'), params: { state: 'closed' } %>
      </div>
    <% end %>
  </div>

  <%= render template: "_search" %>
</div>
