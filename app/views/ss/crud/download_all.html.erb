<%= form_for :item, url: { action: :download_all }, html: { id: "item-form", method: :post, multipart: true, autocomplete: :off, data: { turbo: ss_dialog.present? } } do |f| %>
  <%= error_messages_for :item %>

  <%= hidden_field_tag :_updated, params[:_updated] || @item.updated if @item.respond_to?(:updated) %>

  <div class="addon-views">
    <div class="addon-view" id="addon-basic">
      <div class="addon-head"><h2><%= t('gws/survey.confirm.download') %></h2></div>
      <div class="addon-body">
        <%= render template: '_download', locals: {f: f} %>
      </div>
    </div>
  </div>

  <footer class="send">
    <%= f.submit t('ss.buttons.download'), class: 'btn-primary save' %>
    <% if ss_dialog %>
      <%= button_tag t('ss.buttons.close'), type: "button", name: "close", class: 'btn-default' %>
    <% else %>
      <%= link_to t('ss.buttons.cancel'), { action: :index }, { class: 'btn-default' } %>
    <% end %>
  </footer>
<% end %>

<%= jquery do %>
  SS.confirmUnloading();
<% end %>
