<div id="ss-file-view">
  <div class="toolbar-container">
    <div class="toolbar">
      <span class="btn-group toolbar-zoom">
        <%= button_tag(type: "button", name: "btn-zoom-out", class: "btn btn-zoom-out") do %>
          <i class="material-icons md-18">zoom_out</i>
        <% end %>
        <input id="zoom-slider" name="zoom-slider" type="range">
        <%= button_tag(type: "button", name: "btn-zoom-in", class: "btn btn-zoom-in") do %>
          <i class="material-icons md-18">zoom_in</i>
        <% end %>
      </span>

      <span class="btn-group toolbar-foreground-color">
        <label>表示色</label>
        <%= text_field_tag("foreground-color", "#000000", class: 'js-color') %>
        <%= button_tag(type: "button", name: "btn-foreground-color-picker", class: "btn btn-color-picker") do %>
          <i class="material-icons md-18">colorize</i>
        <% end %>
      </span>

      <span class="btn-group toolbar-background-color">
        <label>背景色</label>
        <%= text_field_tag("background-color", "#ffffff", class: 'js-color') %>
        <%= button_tag(type: "button", name: "btn-background-color-picker", class: "btn btn-color-picker") do %>
          <i class="material-icons md-18">colorize</i>
        <% end %>
      </span>

      <span class="btn-group toolbar-contrast-ratio">
        <label>コントラスト比</label>
        <span class="contrast-ratio">-.--</span>
        <%= button_tag("計算", type: "button", name: "btn-contrast-ratio", class: "btn btn-contrast-ratio") %>
      </span>
    </div>
  </div>

  <div class="canvas-container">
  </div>
</div>

<%= javascript_tag do %>
  var options = <%== { itemUrl: @item.url, contrastRatioPath: url_for(action: :contrast_ratio, format: "json") }.to_json %>;
  new SS_FileView("#ss-file-view", options);
<% end %>
