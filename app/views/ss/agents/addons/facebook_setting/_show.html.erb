<dl class="see mod-ss-facebook-setting">
  <dt><%= @model.t :facebook_app_id %></dt>
  <dd><%= @item.facebook_app_id %></dd>

  <dt><%= @model.t :facebook_page_url %></dt>
  <dd><%= @item.facebook_page_url %></dd>

  <dt><%= @model.t :opengraph_type %></dt>
  <dd><%= @item.label :opengraph_type %></dd>

  <dt><%= @model.t :opengraph_defaul_image_url %></dt>
  <dd><%= @item.opengraph_defaul_image_url %></dd>

  <dt><%= @model.t :facebook_access_token %></dt>
  <dd><%= @item.facebook_access_token %></dd>

  <dt><%= @model.t :facebook_max_text_length %></dt>
  <dd><%= @item.label :facebook_max_text_length %></dd>

  <dt><%= @model.t :facebook_appends_here_state %></dt>
  <dd>
    <% if @item.facebook_appends_here_state == 'show' %>
      <%= @item.facebook_appends_here_prefix || @item.facebook_appends_here_prefix_default %>
    <% else %>
      <%= @item.label :facebook_appends_here_state %>
    <% end %>
  </dd>
</dl>
