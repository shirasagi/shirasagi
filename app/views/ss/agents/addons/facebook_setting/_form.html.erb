<%= jquery do %>
  SS_AddonTabs.hide(".mod-ss-facebook-setting");
<% end %>
<dl class="see mod-ss-facebook-setting">
  <dt><%= @model.t :facebook_app_id %><%= @model.tt :facebook_app_id %></dt>
  <dd><%= f.text_field :facebook_app_id %></dd>

  <dt><%= @model.t :facebook_page_url %><%= @model.tt :facebook_page_url %></dt>
  <dd><%= f.text_field :facebook_page_url %></dd>

  <dt><%= @model.t :opengraph_type %><%= @model.tt :opengraph_type %></dt>
  <dd><%= f.select :opengraph_type, @item.opengraph_type_options %></dd>

  <dt><%= @model.t :opengraph_defaul_image_url %><%= @model.tt :opengraph_defaul_image_url %></dt>
  <dd><%= f.text_field :opengraph_defaul_image_url %></dd>

  <dt><%= @model.t :facebook_access_token %><%= @model.tt :facebook_access_token %></dt>
  <dd><%= f.text_field :facebook_access_token %></dd>

  <dt><%= @model.t :facebook_max_text_length %><%= @model.tt :facebook_max_text_length %></dt>
  <dd><%= f.select :facebook_max_text_length, @item.facebook_max_text_length_options %></dd>

  <dt><%= @model.t :facebook_appends_here_state %><%= @model.tt :facebook_appends_here_state %></dt>
  <dd>
    <%= f.select :facebook_appends_here_state, @item.facebook_appends_here_state_options, include_blank: true %>
    <%= f.text_field :facebook_appends_here_prefix, placeholder: @item.facebook_appends_here_prefix_default %>
  </dd>
</dl>
