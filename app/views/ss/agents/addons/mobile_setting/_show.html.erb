<dl class="see mod-mobile-setting">
  <dt><%= @model.t :mobile_state %></dt>
  <dd><%= @item.label :mobile_state %></dd>

  <dt><%= @model.t :mobile_size %></dt>
  <dd><%= number_to_human_size(@item.mobile_size) %></dd>

  <dt><%= @model.t :mobile_location %></dt>
  <dd>
    <%= @item.mobile_location %>
    <% if @item.mobile_enabled? %>
      (<%= link_to @item.mobile_full_url, @item.mobile_full_url, target: "_blank", rel: "noopener" %>)
    <% end %>
  </dd>

  <dt><%= @model.t :mobile_css %></dt>
  <dd><%= br(@item.mobile_css) %></dd>
</dl>
