<% return "" if @item.files.blank? %>

<div class="see">
  <div id="selected-files">
    <% @item.files.each do |file| %>
      <div id="file-<%= file.id %>" class="file-view">
        <%= link_to file.url, class: :thumb, target: "_blank" do %>
          <% if file.image? %>
            <%= image_tag file.thumb_url, alt: file.name %>
          <% else %>
            <span class="ext icon-<%= file.extname %>"><%= file.extname %></span>
          <% end %>
        <% end %>

        <div class="name">
          <label>
            <%= file.name %>
          </label><br />
          <label>
            <%= link_to(file.link_url, file.link_url) if file.link_url %>
          </label><br />
        </div>
      </div>
    <% end %>
  </div>
</div>
