<%= form_for :item, url: { action: :index }, html: { method: :delete, multipart: true } do |f| %>
<%= error_messages_for :item %>

<div class="addon-views">
  <div class="addon-view" id="addon-basic">
    <header><h2><%= t("views.confirm.delete") %></h2></header>
    <dl class="see">
      <dt>Term</dt>
      <dd>1900/01/01 - Today</dd>
    </dl>
  </div>
</div>

<footer class="send">
  <%= f.submit t(:delete), class: :delete %>
  <%= f.button t(:cancel), onclick: "location.href='#{url_for(action: :index)}'; return false;" %>
</footer>
<% end %>
