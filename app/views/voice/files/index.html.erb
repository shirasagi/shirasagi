<div class="list-search">
  <%= render template: "_search" %>
</div>

<div class="main-box">
  <table class="index">
    <thead>
      <tr>
        <th><%= @model.t :url %></th>
        <th class="datetime"><%= @model.t :updated %></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr class="list-item">
        <td>
          <nav class="tap-menu">
            <%= link_to t('ss.links.show'), action: :show, id: item %>
            <%= link_to t('ss.links.delete'), action: :delete, id: item %>
            <%= link_to t('ss.links.view_site'), item.url, target: :_blank, rel: "noopener" %>
          </nav>
          <%= link_to item.url, action: :show, id: item %></td>
        <td><%= ss_time_tag item.updated %></td>
      </tr>
      <% end %>
      <% if @items.blank? %>
      <tr>
        <td colspan="3"><%= @message %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @items if @items.try(:current_page) %>
