<div class="list-search">
  <%= render file: "_search" %>
</div>

<div class="main-box">
  <table class="index">
    <thead>
      <tr>
        <th><%= @model.t :url %></th>
        <th class="datetime"><%= @model.t :updated %></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr class="list-item">
        <td>
          <nav class="tap-menu">
            <%= link_to :show, action: :show, id: item %>
            <%= link_to :delete, action: :delete, id: item %>
            <%= link_to :view_site, item.url, target: :_blank %>
          </nav>
          <%= link_to item.url, action: :show, id: item %></td>
        <td><%= item.updated.strftime("%Y/%m/%d %H:%M") %></td>
      </tr>
      <% end %>
      <% if @items.blank? %>
      <tr>
        <td colspan="3"><%= @message %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @items if @items.try(:current_page) %>
