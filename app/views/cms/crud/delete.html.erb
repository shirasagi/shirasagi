<%= form_for :item, url: { action: :show }, html: { method: :delete, multipart: true } do |f| %>
<%= error_messages_for :item %>

<div class="addon-views">
  <div class="addon-view mb-5" id="addon-basic">
    <h2 class="h5 text-danger"><%= t("ss.confirm.delete") %></h2>
    <%= render file: "_delete" %>

    <% contains_urls_path = url_for(action: 'contains_urls') rescue nil %>
    <% if contains_urls_path && @contains_urls.present? %>
      <dl class="see row">
        <dt class="col-sm-4"><%= link_to t("cms.confirm.check_contains_urls"), contains_urls_path, target: "_blank" %></dt>
        <dd class="col-sm-8"></dd>
      </dl>
    <% end %>

  </div>
</div>

<footer class="send text-center">
  <%= f.submit t("ss.buttons.delete"), class: 'delete btn btn-outline-danger' %>
  <%= f.button t("ss.buttons.cancel"), class: 'btn btn-outline-secondary', type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;" %>
</footer>
<% end %>
