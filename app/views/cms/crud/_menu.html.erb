<div class="d-flex flex-wrap align-item-center justify-content-between mb-0">
  <nav>
    <% if params[:action] =~ /index/ %>
      <% if @model.allowed?(:edit, @cur_user, site: @cur_site, node: @cur_node) %>
        <%= link_to t('ss.links.new'), { action: :new }, class: "new btn btn-outline-primary" %>
      <% end %>
      <% if @model.allowed?(:read, @cur_user, site: @cur_site, node: @cur_node) %>
        <%= link_to(t('ss.links.download'), { action: :download }, class: "new btn btn-outline-secondary") rescue nil %>
      <% end %>
      <% if @model.allowed?(:edit, @cur_user, site: @cur_site, node: @cur_node) %>
        <%= link_to(t('ss.links.import'), { action: :import }, class: "new btn btn-outline-secondary") rescue nil %>
      <% end %>
    <% elsif params[:action] =~ /new|create|lock|download|import/ %>
      <%= link_to t('ss.links.back_to_index'), { action: :index }, class: "back-to-index btn btn-outline-secondary" %>
    <% elsif params[:action] =~ /edit|update|delete|move|command|contains_urls/ %>
      <% if @item.allowed?(:read, @cur_user, site: @cur_site, node: @cur_node) %>
        <%= link_to t('ss.links.back_to_show'), { action: :show, id: @item }, class: "back-to-show btn btn-outline-secondary" %>
      <% end %>
      <%= link_to t('ss.links.back_to_index'), { action: :index }, class: "back-to-index btn btn-outline-secondary" %>
    <% else %>
      <% if @item.allowed?(:edit, @cur_user, site: @cur_site, node: @cur_node) %>
        <%= link_to t('ss.links.edit'), { action: :edit, id: @item }, class: "edit btn btn-outline-secondary" %>
      <% end %>
      <% if @item.allowed?(:edit, @cur_user, site: @cur_site, node: @cur_node) %>
        <%= link_to(t('ss.links.copy'), { action: :copy, id: @item }, class: "copy btn btn-outline-secondary") rescue nil %>
      <% end %>
      <% if @item.allowed?(:move, @cur_user, site: @cur_site, node: @cur_node) %>
        <%= link_to(t('ss.links.move'), { action: :move, id: @item }, class: "move btn btn-outline-secondary") rescue nil %>
      <% end %>
      <% if @item.allowed?(:release, @cur_user, site: @cur_site, node: @cur_node) %>
        <% if Cms::Command.allowed?(:use, @cur_user, site: @cur_site, node: @cur_node) %>
          <%= link_to(t('ss.links.command'), { action: :command, id: @item }, class: "command btn btn-outline-secondary") rescue nil %>
        <% end %>
      <% end %>
      <% if @item.allowed?(:delete, @cur_user, site: @cur_site, node: @cur_node) %>
        <%= link_to t('ss.links.delete'), { action: :delete, id: @item }, class: "delete btn btn-outline-secondary" %>
      <% end %>
      <%= link_to t('ss.links.back_to_index'), { action: :index }, class: "back-to-index btn btn-outline-secondary" %>
    <% end %>
  </nav>

  <%= paginate @items if @items.try(:current_page) %>
</div>
