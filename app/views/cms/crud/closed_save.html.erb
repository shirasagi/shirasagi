<%= form_for :item, url: { action: :closed_save }, html: { method: :put, multipart: true } do |f| %>
<%= error_messages_for :item %>

<div class="addon-views">
  <%
    head = t("ss.confirm.depublish")
    if @edit_alert_flg
      head = "#{head}<br>#{t("ss.confirm.contains_url_expect")}".html_safe
    end
  %>
  <%= render "ss/crud/addon", addon: { id: "addon-basic", head: head } do %>
    <%= render file: "_delete" %>

    <% contains_urls_path = url_for(action: 'contains_urls') rescue nil %>
    <% if contains_urls_path && @contains_urls.present? %>
      <dl class="see">
        <% if @edit_alert_flg %>
          <%= render file: "cms/crud/contains_urls" %>
        <% else %>
          <dt><%= link_to t("cms.confirm.check_contains_urls"), contains_urls_path, target: "_blank" %></dt>
          <dd></dd>
        <% end %>
      </dl>
    <% end %>
  <% end %>
</div>

<footer class="send">
  <% unless @edit_alert_flg %>
    <%= f.submit t("ss.buttons.closed_save"), class: 'btn-danger save' %>
  <% end %>
  <%= f.button t("ss.buttons.cancel"), class: 'btn-default', type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;" %>
</footer>
<% end %>
