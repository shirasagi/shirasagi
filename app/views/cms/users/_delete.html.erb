<div class="ss-confirm-text">
  <% if @item.deletion_locked? %>
    <%= t 'ss.info.soft_delete_locked' %>
  <% elsif @item.enabled? %>
    <%= t 'ss.info.soft_delete' %>
  <% elsif @item.disabled? %>
    <%= t 'ss.info.hard_delete' %>
  <% end %>
</div>

<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>
</dl>
