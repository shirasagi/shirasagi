<%= jquery do %>
  function changeDefaultTheme() {
    var theme = $("select[name='item[default_theme]']").val();
    if (theme == "enabled") {
      $("select[name='item[state]']").prop('disabled', true);
      $('form').bind('submit', function () {
        $(this).find("select[name='item[state]']").prop('disabled', false);
      });
    }else{
     $("select[name='item[state]']").prop('disabled', false);
    }
  };

  function changeState() {
    var state = $("select[name='item[state]']").val();
    if (state == "closed") {
      $("select[name='item[default_theme]']").prop('disabled', true);
      $('form').bind('submit', function () {
        $(this).find("select[name='item[default_theme]']").prop('disabled', false);
      });
    }else{
      $("select[name='item[default_theme]']").prop('disabled', false);
    }
  };

  $("select[name='item[default_theme]']").change(function() {
    changeDefaultTheme();
  });

  $("select[name='item[state]']").change(function() {
    changeState();
  });

  changeDefaultTheme();
  changeState();
<% end %>
