<%
  route = @cur_node.view_route || @cur_node.route
  mod = route.to_s.sub(/\/.+?$/, "")
%>

<% if ::File.exist?("#{Rails.root}/app/views/#{route}/_navi.html.erb") %>
  <%= render "#{route}/navi" %>
<% elsif ::File.exist?("#{Rails.root}/app/views/#{mod}/main/_navi.html.erb") %>
  <%= render "#{mod}/main/navi" %>
<% else %>
  <%= render partial: controller.navi_view_file %>
<% end %>
