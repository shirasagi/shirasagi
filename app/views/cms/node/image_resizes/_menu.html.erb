<nav class="nav-menu">
  <% if params[:action] =~ /edit|update|delete|move|contains_urls/ %>
    <% if @item.allowed?(:read, @cur_user, site: @cur_site, node: @cur_node) %>
      <%= link_to t('ss.links.back_to_show'), { action: :show }, class: "back-to-show" %>
    <% end %>
  <% else %>
    <% if @item.allowed?(:edit, @cur_user, site: @cur_site, node: @cur_node) %>
      <%= link_to t('ss.links.edit'), { action: :edit }, class: :edit %>
    <% end %>
    <% if @item.persisted? && @item.allowed?(:delete, @cur_user, site: @cur_site, node: @cur_node) %>
      <%= link_to t('ss.links.delete'), url_for(action: :destroy), class: :delete, method: :delete, data: { confirm: t("ss.confirm.delete") } %>
    <% end %>
  <% end %>
</nav>
