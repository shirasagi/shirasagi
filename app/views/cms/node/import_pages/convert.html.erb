<%= form_for :item, url: { action: :convert }, html: { method: :put, multipart: true } do |f| %>
<%= error_messages_for :item %>

<section class="main-box">
  <header><h2><%= t("cms.confirm.convert_to_cms_page") %></h2></header>
  <%= f.hidden_field :route, value: "cms/page" %>

  <dl class="see">
    <dd class="wide"><%= t("cms.confirm.converted_html") %></dt>
  </dl>

  <footer class="send">
    <%= f.submit t("ss.buttons.convert"), class: :save %>
    <%= f.button t("ss.buttons.cancel"), type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;", class: "btn-default" %>
  </footer>
</section>
<% end %>
