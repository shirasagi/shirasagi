<nav class="nav-menu">
  <% if params[:action] =~ /index/ %>
    <%= link_to(t('ss.links.back'), cms_line_service_group_hook_path(id: @hook)) %>
    <%= link_to(t('ss.links.new'), { action: :new }, class: :new) if @model.allowed?(:edit, @cur_user, site: @cur_site) %>
  <% elsif params[:action] =~ /new|create|destroy_all/ %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% elsif params[:action] =~ /edit|update|delete/ %>
    <%= link_to(t('ss.links.back_to_show'), { action: :show, id: @item }, class: "back-to-show") if @model.allowed?(:read, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% else %>
    <%= link_to(t('ss.links.edit'), { action: :edit, id: @item }, class: :edit) if @model.allowed?(:edit, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.delete'), { action: :delete, id: @item }, class: :delete) if @model.allowed?(:delete, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% end %>
</nav>
