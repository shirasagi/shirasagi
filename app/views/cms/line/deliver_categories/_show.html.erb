<%= code_editor ".mod-cms-line-deliver_categories .html", mode: :html, readonly: true %>

<dl class="see mod-cms-line-deliver_categories">
  <dt><%= @model.t :type %></dt>
  <dd><%= @item.label :type %></dd>

  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <dt><%= @model.t :filename %></dt>
  <dd><%= @item.basename %></dd>

  <dt><%= @model.t :category_html %></dt>
  <dd>
    <% if @item.category_html.present? %>
    <%= text_area_tag :category_html, @item.category_html, class: "html", style: "height: 150px;"  %>
    <% end %>
  </dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.order %></dd>

  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>
</dl>
