<%= form_for :item, url: { action: :copy }, html: { id: "item-form", method: :put, multipart: true } do |f| %>

<section class="main-box">
  <header><h2><%= t("ss.confirm.clone") %></h2></header>
  <%= error_messages_for :copy %>

  <dl class="see">
    <dt><%= @model.t :name %><%= @model.tt :name %></dt>
    <dd>
      <%= f.text_field :name, class: :name %>
    </dd>
  </dl>
</section>

<footer class="send">
  <%= f.submit t("ss.buttons.save"), class: "save", data: { disable_with: t("ss.buttons.saving") } %>
  <%= f.button t("ss.buttons.cancel"), class: "btn-default", type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;" %>
</footer>

<% end %>
