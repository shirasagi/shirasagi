<div class="cms-tabs">
  <%= link_to cms_all_contents_download_path do %>
    <span class="tab-name"><%= t("cms.all_content.download_tab") %></span>
  <% end %>
  <%= link_to cms_all_contents_import_path, class: 'current' do %>
    <span class="tab-name"><%= t("cms.all_content.import_tab") %></span>
  <% end %>
</div>

<%= form_for :item, url: {action: :import}, html: {method: :post} do |f| %>
  <%= error_messages_for :item %>

  <div class="addon-views">
    <div class="addon-view" id="cms-all-contents-import">
      <div class="addon-head"><h2><%= t("cms.all_content.import_head") %></h2></div>
      <div class="addon-body">
        <dl class="see">
          <dt><%= t("ss.file") %></dt>
          <dd><%= f.file_field :file %></dd>
        </dl>
        <p class="description"><%= t("cms.all_content.import_description") %></p>
      </div>
      <footer class="send">
        <%= f.submit t("ss.import"), class: :save, onclick: "return confirm('#{t("ss.confirm.import")}')" %>
      </footer>
    </div>
  </div>
<% end %>
