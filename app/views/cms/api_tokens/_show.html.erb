<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <dt><%= @model.t :jwt %></dt>
  <dd><%= @item.to_jwt %></dd>

  <dt><%= @model.t :jwt_id %></dt>
  <dd><%= @item.jwt_id %></dd>

  <% if @item.expiration_date %>
    <dt><%= @model.t :expiration_date %></dt>
    <dd><%= ss_time_tag(@item.expiration_date) %></dd>
  <% end %>

  <dt><%= @model.t :user_id %></dt>
  <dd><%= @item.user.name %></dd>

  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>
</dl>
