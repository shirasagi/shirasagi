<%= jquery do %>
var chageApi = function(ele) {
  var val = $(ele).val();
  $(".translate-api.api").hide();
  if (val) {
    $(".translate-api." + val).show();
  }
};
$(".translate-api .select-api").on("change", function(){ chageApi(this) });
chageApi($(".translate-api .select-api"));
<% end %>

<dl class="see translate-api" style="margin-bottom: 15px;">
  <dt><%= @model.t :translate_api %></dt>
  <dd><%= f.select :translate_api, @item.translate_api_options, { include_blank: true }, { class: "select-api" } %></dd>
</dl>

<dl class="see translate-api api mock">
  <dt><%= @model.t :translate_mock_api_request_count %><%= @model.tt :translate_mock_request_count %></dt>
  <dd><%= f.number_field :translate_mock_api_request_count %></dd>

  <dt><%= @model.t :translate_mock_api_request_word_count %><%= @model.tt :translate_mock_request_word_count %></dt>
  <dd><%= f.number_field :translate_mock_api_request_word_count %></dd>
</dl>

