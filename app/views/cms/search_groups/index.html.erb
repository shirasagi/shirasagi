<%= coffee do %>

$ ->
  SS_SearchUI.modal()

<% end %>

<div style="margin-bottom: 20px; padding: 10px; border: 1px solid #ddd;">
<%= form_for :s, url: { action: :index }, html: { method: "GET", class: :search, multipart: true } do |f| %>
  <%= f.text_field :name, value: params[:s].try(:[], :name) %>
  <%= f.submit  t("cms.search_groups.search") %>
<% end %>
</div>

<table class="index">
  <thead>
    <tr>
      <% if @multi %>
      <th style="width: 20px;"><input type="checkbox" /></th>
      <% end %>
      <th class="name"><%= @model.t :name %></th>
    </tr>
  </thead>
  <tbody class="items">
    <% @items.each do |item| %>
      <tr data-id="<%= item.id %>">
        <% if @multi %>
        <td class="checkbox">
          <input type="checkbox" name="ids[]" value="<%= item.id %>" />
        </td>
        <% end %>
        <td><%= link_to item.name, "#", class: @multi ? "select-item" : "select-single-item" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="margin-bottom: 20px; padding: 10px; border: 1px solid #ddd;">
  <%= button_tag t("cms.search_groups.select"), { type: :button, class: "select-items" } %>
</div>

<%= paginate @items if @items.try(:current_page) %>
