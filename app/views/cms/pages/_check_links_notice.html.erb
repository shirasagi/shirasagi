<%
  return if @item.try(:branch?)
  return if @item.try(:latest_check_links_report).blank?

  error = @item.check_links_error
  return if error.nil?
%>

<div class="cms-notice workflow-remind">
  <h2><%= t("cms.notices.check_links_report_header", count: error.urls.size.to_s(:delimited), time: I18n.l(@item.latest_check_links_report.created, format: :picker)) %></h2>
  <p><%= t("cms.notices.check_links_report_body") %></p>
  <ul>
    <% error.urls.each do |url| %>
      <li><%= url %></li>
    <% end %>
  </ul>

  <p><%= t("cms.notices.check_links_report_annotation") %></p>
</div>
