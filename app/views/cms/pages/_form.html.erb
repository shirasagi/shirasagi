<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :basename %></dt>
  <dd><%= f.text_field :basename, class: "filename" %></dd>

  <dt><%= @model.t :state %></dt>
  <dd><%= f.select :state, @item.state_options %></dd>

  <dt><%= @model.t :layout_id %></dt>
  <dd><%= f.select :layout_id, ancestral_layouts(@item.node), include_blank: " " %></dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= f.number_field :order %></dd>
</dl>
