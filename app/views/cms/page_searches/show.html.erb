<% addons = @item ? @item.class.addons : [] %>

<div class="addon-views">
  <%= render "ss/crud/addon", addon: { id: "addon-basic", head: t("ss.basic_info") } do %>
    <%= render template: "_show" %>
  <% end %>
  <%= render template: "_addons_show", locals: { addons: addons } if addons.size > 0 %>
</div>

<footer class="send ss-sticky ss-sticky-bottom">
  <%= link_to t("ss.buttons.search"), { action: :search }, class: 'btn-primary search' %>
</footer>
