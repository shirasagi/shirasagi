<% buf = render(file: @item.form_file, locals: { f: f }) if @item.form_file %>
<% return if buf.blank? %>

<%
  addon_options = {}
  addon_options[:id] = "column-#{@model.name.underscore.gsub('/', '-')}"
  addon_options[:head] = @model.model_name.human
  addon_options[:toggle] = true
%>
<%= render "ss/crud/addon", addon: addon_options do %>
  <%= buf %>
<% end %>
