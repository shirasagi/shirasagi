<%= form_for :item, url: { action: :import }, html: { method: :post } do |f| %>
  <%= error_messages_for :item %>

  <section class="main-box">
    <header><h2><%= t("ss.import") %></h2></header>

    <dl class="see">
      <dt><%= t "ss.file"%><%= @model.tt :in_file %></dt>
      <dd>
        <%= f.hidden_field :in_file %>
        <%= f.file_field :in_file %>
      </dd>
    </dl>
  </section>

  <footer class="send">
    <%= f.submit t("ss.buttons.import"), class: :save, data: { confirm: t("ss.confirm.import"), disable_with: t("ss.buttons.importing") } %>
    <%= link_to t("ss.buttons.cancel"), url_for(action: :index), class: 'btn-default' %>
  </footer>
 <% end %>
