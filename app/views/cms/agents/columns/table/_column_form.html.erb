<%= javascript_include_tag "cms/table_editor" %>
<% value ||= nil %>
<% controller ||= false %>
<%= render 'cms/agents/columns/main/base', f: f, column: column, value: value, controller: controller do %>
  <%= hidden_field_tag("#{f.object_name}[][in_wrap][value]", value.try(:value)) %>
  <%= I18n.t("cms.column_table.height") %><input type="text" id="height" style="width:50px" />
  <%= I18n.t("cms.column_table.width") %><input type="text" id="width" style="width:50px" />
  <%= I18n.t("cms.column_table.header") %><%= select_tag :hedaer, options_for_select(column.header_type_options), id: "header" %>
  <button type="button" id="create-table"><%= I18n.t("cms.column_table.create") %></button>

  <div id="table-editor" onContextmenu="return false;">
    <% if value.try(:value).present? %>
      <%= value.value.html_safe %>
    <% end %>
  </div>

  <div class="table-menu" id="table-menu">
    <ul>
      <li id="change-th">thに変換する</li>
      <li id="change-td">tdに変換する</li>
      <li id="remove-tr">行を削除する</li>
      <li id="remove-tds">列を削除する</li>
      <li id="append-top">上に行を挿入する</li>
      <li id="append-bottom">下に行を挿入する</li>
      <li id="append-right">右に列を挿入する</li>
      <li id="append-left">左に列を挿入する</li>
    </ul>
  </div>
<% end %>
