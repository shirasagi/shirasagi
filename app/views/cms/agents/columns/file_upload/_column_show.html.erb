<% value ||= nil %>
<% file = value.try(:file) %>
<%= render 'cms/agents/columns/main/base', show: true, column: column, value: value do %>
  <% if file.present? %>
    <div id="selected-files">
      <div class="file-view">
        <%= link_to file.url, class: :thumb, target: "_blank" do %>
          <% if file.image? %>
            <%= image_tag file.thumb_url, alt: file.name %>
          <% else %>
            <span class="ext icon-<%= file.extname %>"><%= file.extname %></span>
          <% end %>
        <% end %>

        <div class="name">
          <label>
            <%= file.name %>
          </label><br />
        </div>
        <div>
          <% case column.file_type %>
          <% when "image" %>
            <label><%= Cms::Column::Value::FileUpload.t(:image_text) %>: <%= value.try(:image_text) %></label><br />
            <label><%= I18n.t("cms.options.column_image_html_type.#{value.try(:image_html_type)}") %></label>
          <% when "video" %>
            <label><%= Cms::Column::Value::FileUpload.t(:video_description) %>: <%= value.try(:video_description) %></label>
          <% when "banner" %>
            <label><%= Cms::Column::Value::FileUpload.t(:banner_link) %>: <%= value.try(:banner_link) %></label>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
