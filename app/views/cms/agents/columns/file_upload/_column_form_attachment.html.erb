<% name = "#{f.object_name}[][in_wrap][attachment_text]" %>

<%= jquery do %>
Cms_Form.addSyntaxCheck("<%= id %>", {
  resolve: "text",
  name: "<%= column.name %>",
  getContent: function () { return $('#<%= id %> [name="<%= name %>"]').val(); },
  setContent: function (content) { return $('#<%= id %> [name="<%= name %>"]').val(content); },
});
<% end %>

<%= text_field_tag(name, value.try(:attachment_text), column.form_options(:attachment_text).merge(id: nil)) %>
