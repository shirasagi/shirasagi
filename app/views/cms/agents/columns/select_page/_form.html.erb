<%= jquery do %>
$('.sortable-index tbody').sortable();
<% end %>

<dl class="see column-cms-select_page">
  <dt><%= @model.t :place_holder %><%= @model.tt :place_holder %></dt>
  <dd><%= f.text_field :place_holder %></dd>

  <dt><%= @model.t :page_ids %><%= @model.tt :page_ids %></dt>
  <dd>
    <%= f.hidden_field "page_ids[]", value: "", class: "hidden-ids" %>
    <% page_params = {} %>
    <%= link_to t("cms.apis.pages.index"), cms_apis_pages_path(page_params), class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected sortable-index">
      <thead>
        <tr>
          <th class="name"><%= @model.t :name %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @item.ordered_pages.each do |page| %>
        <tr data-id="<%= page.id %>">
          <td><%= f.hidden_field "page_ids[]", value: page.id %> <%= page.name %></td>
          <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>
