<% pages = @cur_page.related_pages.and_public(@cur_date).order_by(@cur_page.related_page_sort_hash) %>
<% if pages.present? %>
<section class="related-pages">
  <header><h2><%= @cur_page.t :related_pages %></h2></header>
  <div class="pages">
    <ul>
      <% pages.each do |item| %>
        <%= content_tag(:li, class: item.categories.pluck(:filename).map { |c| c.tr('/', '-') }.presence) do %>
          <%= link_to item.name, item.url %>
        <% end %>
      <% end %>
    </ul>
  </div>
</section>
<% end %>
