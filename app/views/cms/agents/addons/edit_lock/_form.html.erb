<% unless @item.new_record? %>
  <% has_action_lock = url_for(action: :lock) rescue nil %>
  <% if has_action_lock %>
    <%= jquery do %>
      SS_AddonTabs.hide(".mod-cms-edit_lock");
      var editLock = new Cms_EditLock(".mod-cms-edit_lock", "<%= url_for action: :lock %>", "<%= url_for action: :unlock %>");
    <% end %>

    <fieldset disabled>
      <div class="see mod-cms-edit_lock form-row">
        <div class="col-12 mb-3">
          <label><%= @model.t :lock_owner %><%= @model.tt :lock_owner %></label>
          <input class="form-control" type="text" value="<%= @item.lock_owner.long_name %>" />
        </div>
        <div class="col-12 mb-3">
          <label><%= @model.t :lock_until %></label>
          <input class="form-control" type="text" value="<%= @item.lock_until.strftime("%Y/%m/%d %H:%M") %>" />
        </div>
      </div>
    </fieldset>
  <% end %>
<% end %>
