<%= html_editor ".mod-cms-body .html", removeFormatTags: "", advanced: Cms::Editor.allowed?(:advanced, @cur_user, site: @cur_site) %>
<%= jquery do %>
  Link_Checker.url           = "<%= SS.config.cms.link_check_url %>";
  Link_Checker.rootUrl       = "<%= @cur_site.full_url %>";
  Syntax_Checker.autoCorrect = <%= SS.config.cms.auto_correct_page_html == true %>;
  Cms_Form.render();
<% end %>

<dl class="see mod-cms-body">
  <dd class="wide"><%= f.text_area :html, class: "html", style: "height: 400px;" %></dd>
  <dd class="wide">
  <%= button_tag t("cms.syntax_check"), { type: :button, class: "syntax-check" } %>
  <%= button_tag t("cms.link_check"), { type: :button, class: "link-check" } %>
  </dd>
</dl>
