<%= jquery do %>
  $('.sortable-index tbody').sortable();
<% end %>

<dl class="see mod-site_search-group">
  <dt><%= @model.t :st_group_ids %><%= @model.tt :st_group_ids %></dt>
  <dd>
    <%= f.hidden_field "st_group_ids[]", value: "", id: nil, class: "hidden-ids" %>
    <%= link_to t("ss.apis.groups.index"), cms_apis_groups_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected sortable-index">
      <thead>
        <tr>
          <th class="name"><%= Cms::Group.t :name %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @item.st_groups.each do |group| %>
          <% next if group.id == @cur_group.id %>
          <tr data-id="<%= group.id %>">
            <td><%= f.hidden_field "st_group_ids[]", value: group.id, id: nil %> <%= group.name %></td>
            <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>
