<% return "" unless @cur_site.twitter_token_enabled? || @cur_site.facebook_token_enabled? %>

<%= jquery do %>
  SS_AddonTabs.hide(".mod-ss-node-auto-post-setting");
<% end %>

<dl class="see mod-ss-node-auto-post-setting">
  <% if @cur_site.facebook_token_enabled? %>
  <dt><%= @model.t :node_facebook_auto_post %><%= @model.tt :node_facebook_auto_post %></dt>
  <dd><%= f.select :node_facebook_auto_post, @item.node_facebook_auto_post_options, include_blank: true %></dd>
  <% end %>

  <% if @cur_site.twitter_token_enabled? %>
  <dt><%= @model.t :node_twitter_auto_post %><%= @model.tt :node_twitter_auto_post %></dt>
  <dd><%= f.select :node_twitter_auto_post, @item.node_twitter_auto_post_options, include_blank: true %></dd>
  <% end %>

  <dt><%= @model.t :node_sns_auto_delete %><%= @model.tt :node_sns_auto_delete %></dt>
  <dd><%= f.select :node_sns_auto_delete, @item.node_sns_auto_delete_options, include_blank: true %></dd>

  <dt><%= @model.t :node_edit_auto_post %><%= @model.tt :node_edit_auto_post %></dt>
  <dd><%= f.select :node_edit_auto_post, @item.node_edit_auto_post_options, include_blank: true %></dd>
</dl>
