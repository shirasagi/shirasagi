<%= coffee do%>
$ ->
  SS_AddonTabs.toggleView(".mod-cms-release")

  $(".mod-cms-release .datetime").datetimepicker
    lang: "ja"
    roundTime: 'ceil'
    step: 15

<% end %>

<dl class="see mod-cms-release">
  <dt><%= @model.t :state %></dt>
  <dd><%= f.select :state, @item.state_options %></dd>

  <dt><%= @model.t :released %><%= @model.tt :released %></dt>
  <dd><%= f.text_field :released, class: "datetime", value: tryb{@item.released.strftime("%Y/%m/%d %H:%M")} %>
</dl>
