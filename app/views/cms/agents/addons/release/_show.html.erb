<dl class="see">
  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>

  <% if @item.respond_to?(:released) %>
    <dt><%= @model.t :released %></dt>
      <dd>
      <% if !@item.respond_to?(:released_type) || @item.released_type == "fixed" %>
        <%= @item.released.try { |time| content_tag(:time, I18n.l(time, format: :long), datetime: time.iso8601) } %>
      <% else %>
        <%= @item.label :released_type %>
        <%= @item.released.try { |time| content_tag(:time, "(" + I18n.l(time, format: :long) + ")", datetime: time.iso8601) } %>
      <% end %>
    </dd>
  <% end %>
</dl>
