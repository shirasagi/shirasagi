<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
%>

<dl class="see mod-cms-meta">
  <dt><%= @model.t :keywords %><%= @model.tt :keywords %></dt>
  <dd>
    <% opts = @cur_site.auto_keywords_enabled? ? {} : { class: "presence" } %>
    <%= f.text_field :keywords, opts %>
  </dd>

  <dt><%= @model.t :description %></dt>
  <dd>
    <dt><%= @model.t :description_setting %><%= @model.tt :description_setting %></dt>
    <dd>
      <%= f.radio_button :description_setting, "manual", checked: @item.description_setting == "manual" %>
      <%= f.label :description_setting, t("cms.cms/addon/meta.description_setting_manual"), value: "manual" %>

      <%= f.radio_button :description_setting, "auto", checked: @item.description_setting == "auto" %>
      <%= f.label :description_setting, t("cms.cms/addon/meta.description_setting_auto"), value: "auto" %>
    </dd>
    <dt><%= t("cms.cms/addon/meta.description_body") %><%= tt("cms/addon/meta.description_body") %></dt>
    <dd>
      <% opts = @cur_site.auto_description_enabled? ? {} : { class: "presence" } %>
      <% opts[:readonly] = @item.description_setting == "auto" %>
      <%= f.text_area :description, opts %>
    </dd>
  </dd>

  <dt><%= @model.t :summary_html %><%= @model.tt :summary_html %></dt>
  <dd><%= f.text_area :summary_html %></dd>
</dl>

<%= javascript_tag do %>
  $(function() {
    const previousSetting = $('input[name="item[description_setting]"]:checked').val();
    const descriptionField = $('#item_description');

    // 初期状態のクラス設定
    if (descriptionField.prop('readonly')) {
      descriptionField.addClass('readonly');
    }

    $('input[name="item[description_setting]"]').on('change', function() {
      const currentSetting = $(this).val();

      // 読み取り専用状態とクラスの切り替え
      descriptionField.prop('readonly', currentSetting === 'auto');
      descriptionField.toggleClass('readonly', currentSetting === 'auto');

      if (!descriptionField.val()) {
        return;
      }

      if (previousSetting === 'auto' && currentSetting === 'manual') {
        if (confirm('<%= t("cms.confirm.change_to_manual") %>')) {
          descriptionField.val('');
        } else {
          $('input[value="' + previousSetting + '"]').prop('checked', true);
          descriptionField.prop('readonly', true);
          descriptionField.addClass('readonly');
          return;
        }
      }

      previousSetting = currentSetting;
    });
  });
<% end %>
