  <dt><%= @model.t :facebook_auto_post %><%= @model.tt :facebook_auto_post %></dt>
  <dd><%= @item.label :facebook_auto_post %></dd>
  <dd><a href="<%= @item.facebook_url %>" target="_blank"><%= @item.facebook_url %></a></dd>
  <% end %>

  <% if @cur_site.twitter_token_enabled? %>
