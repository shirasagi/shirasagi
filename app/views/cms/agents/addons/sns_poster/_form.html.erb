<%= jquery do %> SS_AddonTabs.hide(".mod-cms-sns_poster"); <% end %>
<%
  if @cur_node.node_facebook_auto_post != "none"
    facebook_auto_post = @item.facebook_auto_post || @cur_node.node_facebook_auto_post
  else
    facebook_auto_post = @item.facebook_auto_post || @cur_site.site_facebook_auto_post
  end
  if @cur_node.node_twitter_auto_post != "none"
    twitter_auto_post = @item.twitter_auto_post || @cur_node.node_twitter_auto_post
  else
    twitter_auto_post = @item.twitter_auto_post || @cur_site.site_twitter_auto_post
  end
  if @cur_node.node_sns_auto_delete != "none"
    sns_auto_delete = @item.sns_auto_delete || @cur_node.node_sns_auto_delete
  else
    sns_auto_delete = @item.sns_auto_delete || @cur_site.site_sns_auto_delete
  end
  if @cur_node.node_edit_auto_post != "none"
    edit_auto_post = @item.edit_auto_post || @cur_node.node_edit_auto_post
  else
    edit_auto_post = @item.edit_auto_post || @cur_site.site_edit_auto_post
  end
%>

<dl class="see mod-cms-sns_poster">
  <dt><%= @model.t :facebook_auto_post %><%= @model.tt :facebook_auto_post %></dt>
  <dd><%=
    if @item.facebook_token_enabled?
      f.select :facebook_auto_post, @item.facebook_auto_post_options, :selected => facebook_auto_post
    else
      I18n.t("views.warning.token_blank")
    end
  %></dd>

  <dt><%= @model.t :twitter_auto_post %><%= @model.tt :twitter_auto_post %></dt>
  <dd><%=
    if @item.twitter_token_enabled?
      f.select :twitter_auto_post, @item.twitter_auto_post_options, :selected => twitter_auto_post
    else
      I18n.t("views.warning.token_blank")
    end
  %></dd>

  <dt><%= @model.t :sns_auto_delete %><%= @model.tt :sns_auto_delete %></dt>
  <dd><%=
    if @item.facebook_token_enabled? ||  @item.twitter_token_enabled?
      f.select :sns_auto_delete, @item.sns_auto_delete_options, :selected => sns_auto_delete
    else
      I18n.t("views.warning.token_blank")
    end
  %></dd>

  <dt><%= @model.t :edit_auto_post %><%= @model.tt :edit_auto_post %></dt>
  <dd><%=
    if @item.facebook_token_enabled? ||  @item.twitter_token_enabled?
      f.select :edit_auto_post, @item.edit_auto_post_options, :selected => edit_auto_post
    else
      I18n.t("views.warning.token_blank")
    end
  %></dd>
</dl>
