<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
%>

<dl class="see">
  <dt><%= @model.t :logo_application_name %><%= @model.tt :logo_application_name %></dt>
  <dd><%= f.text_field :logo_application_name, placeholder: SS.config.ss.application_name %></dd>

  <dt><%= @model.t :logo_application_link %><%= @model.tt :logo_application_link %></dt>
  <dd><%= f.select :logo_application_link, @item.logo_application_link_options %></dd>

  <dt><%= @model.t :logo_application_image_id %><%= @model.tt :logo_application_image_id %></dt>
  <dd><%= f.ss_file_field :logo_application_image, accepts: SS::File::IMAGE_FILE_EXTENSIONS %>
</dl>
