<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
  addon[:display_body] = "show" if @item.page_layout_id
%>
<dl class="see">
  <dt><%= @model.t :page_layout_id %></dt>
  <dd><%= tryb { @item.page_layout.name }%></dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.send :order %></dd>

  <dt><%= @model.t :shortcuts %></dt>
  <dd><%= Cms.shortcut_values_to_labels(@item.shortcuts).join(", ") %></dd>

  <dt><%= @model.t :view_route %></dt>
  <dd><%= Cms::Node.new.route_options.map(&:reverse).to_h[@item.view_route] if @item.view_route.present? %></dd>
</dl>
