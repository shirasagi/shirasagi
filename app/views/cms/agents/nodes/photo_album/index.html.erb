<div class="member-photos photos">
  <% @items.each do |file, page| %>
    <div class="photo">
      <%= link_to page.url do %>
        <%= image_tag file.thumb_url, alt: file.name, class: :thumb %>
        <span class="title"><%= page.name.truncate(35) %></span>
      <% end %>
    </div>
  <% end %>
</div>

<%= paginate @items if @items.try(:current_page) %>
