    <article id="main">
      <div class="content-search card mb-5">
        <div class="card-body">
          <form>
            <div class="search-group d-flex align-items-center flex-wrap">
              <h2>絞り込み</h2>
              <div class="d-flex align-items-center flex-wrap">
                <div class="form-group">
                  <select class="form-control">
                    <option>ステータスを選択する</option>
                    <option>公開中</option>
                    <option>公開待ち</option>
                    <option>非公開</option>
                    <option>公開終了間近</option>
