<% body = capture { yield } %>
<turbo-frame id="<%= @frame_id || "item-frame" %>">
  <%= body %>

  <%= javascript_tag do %>
    document.documentElement.addEventListener("turbo:frame-load", function() {
      SS.render("#<%= @frame_id || "item-frame" %>");
      SS_SearchUI.render();
    }, { once: true });
  <% end %>
</turbo-frame>
