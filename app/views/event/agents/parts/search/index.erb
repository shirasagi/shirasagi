<%= jquery do %>
Event_Form.render();
<% end %>
<div class="mod-event">
<%= form_for :item, url: "#{@cur_part.search_url}", method: "get" do %>
    <h2 class="wide"><%= t("event.keyword") %></h2>
    <div class="wide"><%= text_field_tag :search_keyword, nil, class: "keyword" %></div>

    <h2 class="wide"><%= t("event.category.setting") %></h2>
    <div class="category wide">
    <% @categories.each do |cate| %>
      <div class="<%= cate.id %>">
        <%= check_box_tag 'category_ids[]', cate.id, nil,
          { :id => "p_category_ids_#{cate.id}", :class => "prop"} %>
        <label for=<%= "p_category_ids_#{cate.id}" %>><%= cate.name %></label>
      </div>
    <% end %>
    </div>

    <h2 class="wide"><%= t("event.dates.setting") %></h2>
    <div class="wide location dates">
      <%= text_field_tag "event[][start_date]", nil, { id: nil, class: "date js-date start" } %>
      - <%= text_field_tag "event[][close_date]", nil, { id: nil, class: "date js-date close" } %>
    </div>
    <div class="mod-event" style="display: none;"><%= text_area_tag :event_dates, nil, { class: "event-dates btn" } %></div>
    <footer class="send">
      <%= submit_tag t('event.submit.search'), name: nil %>
      <%= submit_tag t('event.submit.reset'), name: nil, type: :reset, class: :search_clear %>
    </footer>
<% end %>
</div>
