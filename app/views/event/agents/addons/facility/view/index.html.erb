<% if @cur_page.facilities.present? %>
  <dl class="see">
    <dt><%= @cur_page.t :facilities %></dt>
    <dd class="page">
        <% @cur_page.facilities.each do |item| %>
          <%= content_tag(:li, class: item.categories.pluck(:filename).map { |c| c.tr('/', '-') }.presence) do %>
            <%= link_to item.name, item.url %>
          <% end %>
        <% end %>
    </dd>
  </dl>
<% end %>
