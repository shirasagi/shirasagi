<%= form_for :item, url: { action: :import_csv }, html: { method: :post } do |f| %>
<%= error_messages_for :item %>

<section class="main-box">
  <header><h2><%= t(:import) %></h2></header>

  <dl class="see">
    <dt><%= t(:file) %></dt>
    <dd><%= f.file_field :file %></dd>
    <dt><%= t "views.import_log" %></dt>
    <dd><%= link_to t("job.log"), job_cms_logs_path, target: "_blank" %></dd>
  </dl>
</section>

<footer class="send">
  <%= f.submit t(:import), class: :save, onclick: "return confirm('#{t("views.confirm.import")}')" %>
  <%= f.button t("views.button.cancel"), onclick: "location.href='#{url_for(action: :index)}'; return false;" %>
</footer>
<% end %>
