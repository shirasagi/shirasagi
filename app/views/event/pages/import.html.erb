<%= form_for :item, url: { action: :import }, html: { method: :post } do |f| %>
<%= error_messages_for :item %>

<section class="main-box">
  <header><h2><%= t("ss.import") %></h2></header>

  <dl class="see">
    <dt><%= t("ss.file") %><%= tt("event/page.file_import") %></dt>
    <dd><%= f.file_field :file %></dd>
    <dt><%= t "ss.import_log" %></dt>
    <dd><%= link_to t("job.log"), job_cms_logs_path, target: "_blank" %></dd>
  </dl>
</section>

<footer class="send">
  <%= f.submit t("ss.import"), class: 'btn-primary save', onclick: "return confirm('#{t("ss.confirm.import")}')" %>
  <%= f.button t("ss.buttons.cancel"), class: 'btn-default', type: :reset, onclick: "location.href='#{url_for(action: :index)}'; return false;" %>
</footer>
<% end %>
