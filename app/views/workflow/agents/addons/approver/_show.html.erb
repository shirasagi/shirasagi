  margin: 0px 0px 15px;
  padding: 5px 15px;
  border: 1px solid #ccc;
  h1 {
    margin: -5px -15px 15px;
    padding: 8px 10px;
    border-bottom: 1px solid #ccc;
    background-color: #eee;
  }
  .buttons {
    margin: 10px 0px 10px;
    button {
      margin: 0px 10px 0px 0px;
      padding: 0px 30px;
    }
  }
