<dl class="see workflow-basic">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <dt><%= @model.t :pull_up %></dt>
  <dd><%= @item.label :pull_up %></dd>

  <dt><%= @model.t :on_remand %></dt>
  <dd><%= @item.label :on_remand %></dd>

  <dt><%= @model.t :group_ids %></dt>
  <dd>
    <%= render SS::MoreContentComponent.new(cur_site: @cur_site, cur_user: @cur_user, max_height: "20em") do %>
      <%= br @item.groups.order_by(name: 1).map{|c| c.name } %>
    <% end %>
  </dd>
</dl>
