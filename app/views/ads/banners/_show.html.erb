<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :link_url %></dt>
  <dd><%= link_to @item.link_url, @item.link_url, target: "_blank", rel: "noopener" %></dd>

  <dt><%= @model.t :file_id %></dt>
  <dd><%= show_image_info @item.file %></dd>

  <dt><%= @model.t :link_target %></dt>
  <dd><%= (@item.present? && @item.link_target == "_blank") ? I18n.t('ads.options.link_target.blank') : I18n.t('ads.options.link_target.self') %></dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.send :order %></dd>

  <dt><%= @model.t :additional_attr %></dt>
  <dd><%= @item.additional_attr %></dd>
</dl>
