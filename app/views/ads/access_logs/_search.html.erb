<%

@s = OpenStruct.new params[:s]
@s[:year]  ||= Time.zone.today.year
@s[:month] ||= Time.zone.today.month

%>
<div class="search-form">
  <%= form_for :s, url: "", html: { class: "search", method: :get } do |f| %>
    <span style="margin-right: 10px;">
      <%= f.select :year, @years %>
      <%= f.select :month, @months, include_blank: t("ads.yearly") %>
    </span>
    <%= f.submit t('ss.buttons.search'), name: nil, class: 'btn' %>
    <%= f.button t('ss.buttons.reset'), name: nil, type: 'button', onclick: "location.href='?'", class: 'btn' %>
  <% end %>
</div>
