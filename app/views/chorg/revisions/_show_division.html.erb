<dt class="chorg-revisions-<%= type %>"><%= t :"chorg.views.revisions/#{params[:action]}.#{type}" %></dt>
<dd class="chorg-revisions-<%= type %>">
  <%= link_to t("chorg.menus.revisions.division"), { controller: :changesets, action: :new, rid: @item, type: "division" }, class: :btn %>
  <table class="index">
    <thead>
      <tr>
        <th><%= t("chorg.views.revisions/#{params[:action]}.#{type}_after") %></th>
        <th><%= t("chorg.views.revisions/#{params[:action]}.#{type}_before") %></th>
      </tr>
    </thead>
    <tbody>
    <% changesets.each do |changeset| %>
      <tr class="list-item">
        <td>
          <%= link_to changeset.after_division, { controller: :changesets, action: :show, rid: @item, type: changeset.type, id: changeset } %>
          <nav class="tap-menu">
            <%= link_to t('ss.links.show'), { controller: :changesets, action: :show, rid: @item, type: changeset.type, id: changeset } %>
            <%= link_to t('ss.links.edit'), { controller: :changesets, action: :edit, rid: @item, type: changeset.type, id: changeset } %>
            <%= link_to t('ss.links.delete'), { controller: :changesets, action: :delete, rid: @item, type: changeset.type, id: changeset } %>
          </nav>
        </td>
        <td>
          <%= changeset.before_division %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</dd>
