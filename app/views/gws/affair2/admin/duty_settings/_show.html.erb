  <dt><%= @model.t :employee_type %></dt>
  <dd><%= @item.label :employee_type %></dd>

  <dt><%= @model.t :worktime_type %></dt>
  <dd>
    <%= @item.label :worktime_type %>
    <%= hidden_field_tag "item[worktime_type]", @item.worktime_type, id: nil %>
  </dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.order %></dd>
</dl>
