<%= jquery do %>
var $item = $('[name="item[worktime_type]"]');
var toggleWorktimeType = function() {
  var val = $item.val();
  if (val == "constant") {
    $("#addon-gws-agents-addons-affair2-duty_setting-worktime").show();
    $("#addon-gws-agents-addons-affair2-duty_setting-workday").show();
  } else {
    $("#addon-gws-agents-addons-affair2-duty_setting-worktime").hide();
    $("#addon-gws-agents-addons-affair2-duty_setting-workday").hide();
  }
}
$item.on("change", toggleWorktimeType);
toggleWorktimeType();
<% end %>

