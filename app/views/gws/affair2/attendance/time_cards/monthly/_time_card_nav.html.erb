<div class="nav-group">
  <%= tag.nav(class: "nav-menu select-year-month", data: { controller: "ss--redirect-on-change", url: url_for(action: :index, year_month: ':year_month:') }) do %>
    <%= select_tag(:year_month, options_for_select(year_month_options, params[:year_month]), { include_blank: true, data: { default: default_year_month } }) %>
    <% if @cur_month.to_date > @active_year_range.first %>
      <%= link_to(t('gws/attendance.prev_month'), { action: :index, year_month: month.last_month.strftime('%Y%m') }, class: :btn) %>
    <% end %>
    <% if @cur_month.to_date < @active_year_range.last %>
      <%= link_to(t('gws/attendance.next_month'), { action: :index, year_month: month.next_month.strftime('%Y%m') }, class: :btn) %>
    <% end %>
  <% end %>
  <% if item && item.locked? %>
    <span><%= t('gws/attendance.already_locked') %></span>
  <% end %>
  <% if item %>
    <nav class="nav-operation">
      <% if item.allowed?(:format, @cur_user, site: @cur_site) %>
        <%= link_to(t('ss.buttons.setting'), { action: :setting }, class: :btn) %>
      <% end %>
      <%= link_to(t('ss.buttons.download'), { action: :download }, class: :btn) %>
      <%= link_to(t('ss.buttons.print'), { action: :print }, class: :btn) %>
    </nav>
  <% end %>
</div>
