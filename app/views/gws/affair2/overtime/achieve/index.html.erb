<div class="gws-attendance">
  <div class="attendance-box">
    <div class="attendance-box-main">
      <div class="nav-group">
        <%= tag.nav(class: "nav-menu", data: { controller: "ss--redirect-on-change", url: url_for(action: :index, group: ':group:') }) do %>
          <%= select_tag(:group, options_for_select(group_options, params[:group]), { include_blank: true, data: { default: default_group } }) %>
        <% end %>
      </div>
    </div>
  </div>
  <table class="index">
    <thead>
      <tr>
        <th><%= Gws::User.t :name %></th>
        <th><%= Gws::User.t :organization_uid %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |item| %>
        <tr>
          <td><%= link_to item.long_name, { action: :show, id: item } %></td>
          <td><%= item.organization_uid %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
