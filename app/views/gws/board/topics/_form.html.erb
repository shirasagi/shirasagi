<dl class="see">
  <dt class="required"><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name, autofocus: true %></dd>

  <dt><%= @model.t :mode %><%= @model.tt :mode %></dt>
  <dd><%= f.select :mode, @item.mode_options %></dd>

  <dt><%= @model.t :permit_comment %><%= @model.tt :permit_comment %></dt>
  <dd><%= f.select :permit_comment, @item.permit_comment_options %></dd>

  <dt><%= @model.t :severity %><%= @model.tt :severity %></dt>
  <dd><%= f.select :severity, @item.severity_options, include_blank: true %></dd>
</dl>
