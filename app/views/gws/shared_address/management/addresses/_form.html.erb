<dl class="see">
  <dt><%= @model.t :member_id %><%= @model.tt :member_id %></dt>
  <dd>
    <%= f.hidden_field "member_id", value: "", class: "hidden-ids" %>
    <%= link_to t("ss.apis.users.index"), gws_apis_users_path(single: 1), class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead><tr><th class="name"><%= Gws::User.t :name %></th><th class="deselect"></th></tr></thead>
      <tbody>
      <% if @item.member %>
          <tr data-id="<%= @item.member_id %>">
            <td><%= f.hidden_field "member_id", value: @item.member_id, id: nil %> <%= gws_public_user_long_name(@item.member.long_name) %></td>
            <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </dd>

  <dt><%= @model.t :address_group_id %><%= @model.tt :address_group_id %></dt>
  <dd><%= f.select :address_group_id, @item.address_group_options, include_blank: true %></dd>

  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :kana %><%= @model.tt :kana %></dt>
  <dd><%= f.text_field :kana %></dd>

  <dt><%= @model.t :company %><%= @model.tt :company %></dt>
  <dd><%= f.text_field :company %></dd>

  <dt><%= @model.t :title %><%= @model.tt :title %></dt>
  <dd><%= f.text_field :title %></dd>

  <dt><%= @model.t :tel %><%= @model.tt :tel %></dt>
  <dd><%= f.text_field :tel %></dd>

  <dt><%= @model.t :email %><%= @model.tt :email %></dt>
  <dd><%= f.text_field :email %></dd>

  <dt><%= @model.t :memo %><%= @model.tt :memo %></dt>
  <dd><%= f.text_area :memo, style: "height: 200px;" %></dd>
</dl>
