<% addons = @item ? @item.class.addons : [] %>

<div class="addon-views">
  <div class="addon-view" id="addon-basic">
    <div class="addon-head"><h2><%= t "ss.basic_info"%></h2></div>
    <div class="addon-body">
      <%= render template: "_show" %>
    </div>
  </div>
  <%= render template: "_column_show" %>
  <%= render template: "_addons_show", locals: { addons: addons } if addons.size > 0 %>
</div>
