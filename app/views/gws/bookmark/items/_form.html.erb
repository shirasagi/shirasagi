<dl class="see">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :url %><%= @model.tt :url %></dt>
  <dd><%= f.text_field :url %></dd>

  <dt><%= @model.t :link_target %><%= @model.tt :link_target %></dt>
  <dd><%= f.select :link_target, @item.link_target_options %></dd>

  <dt><%= @model.t :bookmark_model %><%= @model.tt :bookmark_model %></dt>
  <dd><%= f.select :bookmark_model, @item.bookmark_model_options %></dd>

  <dt><%= @model.t :order %><%= @model.tt :order %></dt>
  <dd><%= f.number_field :order, min: 0 %></dd>

  <dt><%= @model.t :folder_id %><%= @model.tt :folder_id %></dt>
  <dd>
    <%= f.hidden_field :folder_id, value: '', id: nil, class: 'hidden-ids' %>
    <%= link_to t('gws/share.apis.folders.index'), gws_bookmark_apis_folders_path(single: true), class: 'ajax-box' %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead><tr><th class="name"><%= @model.t :name %></th><th class="deselect"></th></tr></thead>
      <tbody>
      <% if @item.folder.present? %>
        <tr data-id="<%= @item.folder_id %>">
          <td><%= f.hidden_field :folder_id, value: @item.folder_id, id: nil %> <%= @item.folder.name %></td>
          <td><%= link_to t("ss.buttons.delete"), '#', class: 'deselect btn' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </dd>
</dl>
