<%= form_for :bookmark, url: gws_apis_bookmarks_path, html: { id: 'bookmark-create' } do |f| %>
  <%= f.hidden_field :default_name, value: params.dig(:bookmark, :name) %>
  <%= f.hidden_field :url, value: params.dig(:bookmark, :url) %>
  <%= f.hidden_field :bookmark_model, value: @bookmark_model %>
  <%= @model.t :name %>
  <%= f.text_field :name, value: (@item.try(:name) || params.dig(:bookmark, :name)) %>
<% end %>
<% if @item %>
  <%= form_for :bookmark, url: gws_apis_bookmark_path(id: @item), method: :delete, html: { id: 'bookmark-destroy' } do |f| %>
    <%= f.hidden_field :url, value: params.dig(:bookmark, :url) %>
  <% end %>
<% end %>
<%= submit_tag I18n.t('ss.buttons.save'), form: 'bookmark-create', class: 'btn' %>
<%= submit_tag I18n.t('ss.buttons.delete'), form: 'bookmark-destroy', class: 'btn' if @item %>