<% return unless @cur_site.notice_back_number_menu_visible? %>

<div class="gws-tabs gws-notice-tabs">
  <%= link_to gws_notice_readables_path, class: [ "readables", request.path.start_with?(gws_notice_readables_path) ? "current" : nil ] do %>
    <span class="tab-name"><%= t('ss.navi.readable') %></span>
  <% end %>
  <%= link_to gws_notice_back_numbers_path, class: [ "back_numbers", request.path.start_with?(gws_notice_back_numbers_path) ? "current" : nil ] do %>
    <span class="tab-name"><%= t('gws/notice.back_number') %></span>
  <% end %>
</div>
