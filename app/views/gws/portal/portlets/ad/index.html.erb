<script>
$(function(){
  $('.bxslider').bxSlider({
    auto: true,
    slideWidth: 600,
    speed: <%= @portlet.time.to_i %>,
    mode: 'horizontal'
  });
});
</script>
<div class="main-box">
  <div class="portlet-title"><%= @portlet.name %></div>
  <ul class="bxslider">
    <% @portlet.files.shuffle.each do |file| %>
      <li>
        <% if file.try(:image) %>
          <%= link_to image_tag(file.image.url, width: 600), file.link_url %>
        <% elsif file.try(:image?) %>
          <%= link_to image_tag(file.url, width: 600), file.link_url %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
