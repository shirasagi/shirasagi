<div class="main-box">
  <div class="portlet-title"><%= @portlet.name %></div>

  <ul class="list-items">
    <% (@portlet.links || []).each do |item| %>
      <% target = item[:target].presence || Gws::Link.default_link_target %>
      <li class="list-item">
        <div class="info">
          <% if item[:url].present? %>
            <%= link_to item[:name].presence || item[:url], sns_redirect_path(ref: item[:url]), target: target, rel: target == "_blank" ? "noopener" : nil %>
          <% elsif item[:name].present? %>
            <%= item[:name] %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
