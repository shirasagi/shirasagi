<div class="main-box">
  <div class="portlet-title"><%= @portlet.name %></div>

  <ul class="list-items">
    <% (@portlet.links || []).each do |item| %>
    <li class="list-item">
      <div class="info">
        <% if item[:url].present? %>
          <%= link_to item[:name].presence || item[:url], item[:url] %>
        <% elsif item[:name].present? %>
          <%= item[:name] %>
        <% end %>
      </div>
    </li>
    <% end %>
  </ul>
</div>
