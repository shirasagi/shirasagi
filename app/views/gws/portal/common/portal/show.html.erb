<%= jquery do %>
  var portal = new Gws_Portal(".gws-portlets", { readonly: true });
  portal.addItems(<%== @items.to_json %>);
<% end %>

<%= render file: "gws/portal/common/portal/_notices" if @portal_user == @cur_user %>

<div class="gridster gws-portlets gws-portlets-static">
  <ul class="portlets"></ul>

  <% @items.each do |item| %>
  <div class="portlet-html portlet-model-<%= item.portlet_model %>" data-id="<%= item.id %>">
    <% if item.readable?(@cur_user, site: @cur_site) %>
      <% @portlet = item %>
      <%= render file: item.portlet_view_file %>
    <% else %>
      <div class="main-box portlet--closed">
        <div class="portlet-title"><%= item.name %></div>
          <%= t('gws/portal.messages.closed_portlet') %>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
