<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :color %></dt>
  <dd>
    <% if @item.color.present? %>
    <span class="gws-share-color-block" style="<%= "background-color: #{@item.color}; color: #{@item.text_color}" %>"><%= @item.name %></span>
    <span style="<%= "color: #{@item.color};" %>"><%= @item.name %></span>
    <% end %>
  </dd>

  <dt><%= @model.t :target %></dt>
  <dd><%= @item.label :target %></dd>
</dl>
