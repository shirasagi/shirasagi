<%= form_for :s, url: '', html: { method: :get, class: :search } do |f| %>
  <%= f.select :sort, @model.new.sort_options, {}, { data: { controller: "ss--submit-on-change" } } %>
  <%= f.select :state, @model.new.state_options, { include_blank: true }, { data: { controller: "ss--submit-on-change" } } %>
  <%= f.text_field :keyword, style: 'width: 140px;' %>
  <input type="submit" value="<%= t('ss.buttons.search') %>" class="btn" />
<% end %>
