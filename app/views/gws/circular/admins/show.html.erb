<% parent = params[:controller].split('/').last %>
<% @item_menu_proc = proc do |item| %>
  <% if item.member?(@cur_user) %>
    <%=
      link_to new_gws_circular_comment_path(parent: parent, post_id: item), class: 'btn primary' do
        tag.span("reply", class: "material-icons-outlined md-15") + tag.span(t('gws/board.links.comment'), class: "button-label")
      end
    %>
  <% end %>
<% end %>

<% @comment_menu_proc = proc do |item, comment| %>
  <% if item.allowed?(:edit, @cur_user, site: @cur_site) || comment.user_id == @cur_user.id %>
    <%= link_to tag.span("edit", class: "material-icons-outlined md-15"), edit_gws_circular_comment_path(parent: parent, post_id: item, id: comment), class: 'btn', title: t('ss.links.edit') %>
  <% end %>
  <% if item.allowed?(:delete, @cur_user, site: @cur_site) || comment.user_id == @cur_user.id  %>
    <%= link_to tag.span("delete", class: "material-icons-outlined md-15"), delete_gws_circular_comment_path(parent: parent, post_id: item, id: comment), class: 'btn', title: t('ss.links.delete') %>
  <% end %>
<% end %>

<%= render template: 'gws/circular/main/show' %>
