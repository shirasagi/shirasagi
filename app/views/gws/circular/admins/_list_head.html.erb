<div class="list-head">
  <label class="check"><input type="checkbox" /></label>

  <div class="list-head-action">
    <% if @model.allowed?(:edit, @cur_user, site: @cur_site) %>
      <%= ss_button_to t("ss.links.delete"), url_for(action: :soft_delete_all), model: @model, class: "soft-delete-all btn btn-list-head-action", method: "post", confirm: t('ss.confirm.soft_delete') %>
    <% end %>
    <%= ss_button_to t('gws/circular.post.download'), url_for(action: :download_all), model: @model, class: "download-all btn btn-list-head-action", method: "post", confirm: t('gws/circular.confirm.download') %>
  </div>

  <div class="list-head-search">
    <%= render template: '_search' %>
  </div>
</div>
