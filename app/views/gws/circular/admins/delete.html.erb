<%= form_for :item, url: { action: :disable }, html: { method: :get, multipart: true } do |f| %>
  <%= error_messages_for :item %>

  <div class="addon-views">
    <div class="addon-view" id="addon-basic">
      <div class="addon-head"><h2><%= t('gws/circular.confirm.disable') %></h2></div>
      <div class="addon-body">
        <%= render file: '_delete' %>
      </div>
    </div>
  </div>

  <footer class="send">
    <%= f.submit t('gws/circular.links.disable_all'), class: 'btn-danger delete' %>
    <%= f.button t("ss.buttons.cancel"), class: 'btn-default', type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;" %>
  </footer>
<% end %>
