<%= jquery do %>
    $("input.date").datetimepicker()
<% end %>

<dl class="see">
  <dt class="required"><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name, autofocus: true %></dd>
  <dt><%= @model.t :due_date %><%= @model.tt :due_date %></dt>
  <dd><%= f.text_field :due_date, class: 'date', value: tryb { @item.due_date.strftime('%Y/%m/%d') } %></dd>
  <dt><%= @model.t :mark_type %><%= @model.tt :mark_type %></dt>
  <dd><%= f.select :mark_type, @item.mark_type_options %></dd>
</dl>
