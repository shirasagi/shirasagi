<nav class="nav-menu">
  <% if params[:action] =~ /index/ %>
  <% elsif params[:action] =~ /edit|update/ %>
    <%= link_to(t('ss.links.back_to_show'), { action: :show, id: @item }, class: "back-to-show") if @model.allowed?(:read, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% else %>
    <%= link_to(t('ss.links.edit'), { action: :edit, id: @item }, class: :edit) if @model.allowed?(:edit, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% end %>
</nav>
