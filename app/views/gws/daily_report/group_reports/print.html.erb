<%
  form = Gws::DailyReport::Form.site(@cur_site).where(daily_report_group_id: @group.id).first
%>

<%= render 'ss/crud/print_preview_head', links: [[ I18n.t('ss.links.back'), { action: :index } ]] %>

<div class="addon-views sheet">
  <div class="addon-view print" id="addon-basic">
    <div class="addon-body print">
      <table class="index">
    <thead>
    <tr>
      <th><%= Gws::User.t(:name) %></th>
      <% if form %>
        <% if @model.allowed?(:access, @cur_user, site: @cur_site) %>
          <th class="limited-access"><%= @model.t(:limited_access) %></th>
        <% end %>
        <th><%= @model.t(:small_talk) %></th>
        <% form.columns.each do |column| %>
          <th><%= column.name %></th>
        <% end %>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% Gws::User.site(@cur_site).where(group_ids: @group.id).each do |user| %>
      <% report = @items.where(user_id: user, form_id: form.try(:id), daily_report_date: @cur_date.to_date).first %>
      <tr>
        <td>
          <div><%= gws_public_user_long_name(user.long_name) %></div>
        </td>
        <% if report %>
          <% if @model.allowed?(:access, @cur_user, site: @cur_site) %>
            <% if report.share_limited_access.present? %>
              <td class="share-cell">
                <div class="share-value"><%= t('gws/daily_report.shared') %></div>
                <%= br report.limited_access %>
              </td>
            <% else %>
              <td><%= br report.limited_access %></td>
            <% end %>
          <% end %>
          <% if report.share_small_talk.present? %>
            <td class="share-cell">
              <div class="share-value"><%= t('gws/daily_report.shared') %></div>
              <%= br report.small_talk %>
            </td>
          <% else %>
            <td><%= br report.small_talk %></td>
          <% end %>
          <% report.column_values.each do |column_value| %>
            <% if report.share_column_ids.include?(column_value.column.id.to_s) %>
              <td class="share-cell">
                <div class="share-value"><%= t('gws/daily_report.shared') %></div>
                <%= br column_value.value %>
              </td>
            <% else %>
              <td><%= br column_value.value %></td>
            <% end %>
          <% end %>
        <% elsif form %>
          <% if @model.allowed?(:access, @cur_user, site: @cur_site) %>
            <td></td>
          <% end %>
          <td></td>
          <% form.columns.each do |column| %>
            <td></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
    </div>
  </div>
</div>

<%= jquery do %>
  SS_Font.render();
<% end %>
