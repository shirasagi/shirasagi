<%= jquery do %>Gws_Discussion_Thread.render(<%= @cur_user.id %>);<% end %>

<div class="gws-discussion">
  <%= form_for :item, url: { action: :reply, id: @item.id }, html: { method: :put, class: "reply", multipart: true, autocomplete: :off } do |f| %>
    <%= render partial: 'thread', locals: { f: f, topic: @item, limit: 0 } %>
  <% end %>
</div>
