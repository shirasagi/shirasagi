<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.order %></dd>

  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label(:state) %></dd>

  <dt><%= @model.t :url %></dt>
  <dd>
    <%=
      if @item.url.present?
        link_to @item.url, sns_redirect_path(ref: @item.url)
      end
    %>
  </dd>

  <dt><%= @model.t :description %></dt>
  <dd><%= sanitize ss_auto_link_urls br(@item.description, html_escape: false) %></dd>

  <dt><%= @model.t :memo %></dt>
  <dd><%= auto_link br(@item.memo) %></dd>

  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>
</dl>
