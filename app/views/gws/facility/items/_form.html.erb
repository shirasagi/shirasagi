<dl class="see">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name, autofocus: pc_browser? %></dd>

  <dt><%= @model.t :category_id %><%= @model.tt :category_id %></dt>
  <dd><%= f.select :category_id, @item.category_options, include_blank: '' %></dd>

  <dt><%= @model.t :order %><%= @model.tt :order %></dt>
  <dd><%= f.number_field :order %></dd>

  <dt><%= @model.t :minutes_limit %><%= @model.tt :minutes_limit %></dt>
  <dd>
    <%= f.number_field :min_minutes_limit %><%= I18n.t('gws/facility.prompts.minutes') %>
    <%= t("ss.wave_dash") %>
    <%= f.number_field :max_minutes_limit %><%= I18n.t('gws/facility.prompts.minutes') %>
  </dd>

  <dt><%= @model.t :max_days_limit %><%= @model.tt :max_days_limit %></dt>
  <dd><%= f.number_field :max_days_limit %><%= I18n.t('gws/facility.prompts.days') %></dd>

  <dt><%= @model.t :reservation_start_date %><%= @model.tt :reservation_start_date %></dt>
  <dd><%= f.ss_datetime_field :reservation_start_date %></dd>

  <dt><%= @model.t :reservation_end_date %><%= @model.tt :reservation_end_date %></dt>
  <dd><%= f.ss_datetime_field :reservation_end_date %></dd>

  <dt><%= @model.t :activation_date %><%= @model.tt :activation_date %></dt>
  <dd><%= f.ss_datetime_field :activation_date %></dd>

  <dt><%= @model.t :expiration_date %><%= @model.tt :expiration_date %></dt>
  <dd><%= f.ss_datetime_field :expiration_date %></dd>

  <dt><%= @model.t :approval_check_state %><%= @model.tt :approval_check_state %></dt>
  <dd><%= f.select :approval_check_state, @item.approval_check_state_options, include_blank: true %></dd>
</dl>
