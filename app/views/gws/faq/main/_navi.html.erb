<nav class="mod-navi current-navi">
  <h2><%= link_to @cur_site.menu_faq_label || t('modules.gws/faq'), gws_faq_topics_path(mode: '-', category: '-'), class: "icon-faq" %></h2>
  <h3><%= link_to t('ss.navi.readable'), gws_faq_topics_path(mode: '-', category: '-') %></h3>

  <% if Gws::Faq::Post.allowed?(:edit, @cur_user, site: @cur_site) %>
    <h3><%= link_to t('ss.navi.editable'), gws_faq_topics_path(mode: 'editable', category: '-') %></h3>
  <% end %>
  <% if Gws::Faq::Post.allowed?(:trash, @cur_user, site: @cur_site) %>
    <h3><%= link_to t('ss.navi.trash'), gws_faq_topics_path(mode: 'trash', category: '-'), class: 'trash' %></h3>
  <% end %>
  <% if Gws::Faq::Category.allowed?(:read, @cur_user, site: @cur_site) %>
    <h3><%= link_to t('gws.category'), gws_faq_categories_path, class: "management" %></h3>
  <% end %>
</nav>

