<div class="gws-column-form-grid-list">
  <fieldset class="gws-column-form-grid">
    <legend><%= model.t :name %><%= model.tt :name %></legend>

    <div class="gws-column-form-input-group">
      <%= label_tag "#{f.object_name}[name]", model.t(:name) %>
      <div>
        <%= text_field_tag "#{f.object_name}[name]", item.name, autofocus: pc_browser? %>
      </div>
    </div>
  </fieldset>

  <fieldset class="gws-column-form-grid">
    <legend><%= t("mongoid.models.gws/column/number_field") %></legend>

    <div class="gws-column-form-input-group">
      <%= f.label :min_decimal, model.t(:min_decimal) %><%= model.tt :min_decimal %>
      <div>
        <%= f.number_field :min_decimal %>
      </div>
    </div>

    <div class="gws-column-form-input-group">
      <%= f.label :max_decimal, model.t(:max_decimal) %><%= model.tt :max_decimal %>
      <div>
        <%= f.number_field :max_decimal %>
      </div>
    </div>

    <div class="gws-column-form-input-group">
      <%= f.label :initial_decimal, model.t(:initial_decimal) %><%= model.tt :initial_decimal %>
      <div>
        <%= f.number_field :initial_decimal %>
      </div>
    </div>

    <div class="gws-column-form-input-group">
      <%= f.label :scale, model.t(:scale) %><%= model.tt :scale %>
      <div>
        <%= f.number_field :scale %>
      </div>
    </div>

    <div class="gws-column-form-input-group">
      <%= f.label :minus_type, model.t(:minus_type) %><%= model.tt :minus_type %>
      <div class="gws-column-form-radio-button-list">
        <% item.minus_type_options.each do |label, value| %>
          <label class="gws-column-form-radio-button-item">
            <%= f.radio_button :minus_type, value %>
            <%= label %>
          </label>
        <% end %>
      </div>
    </div>
  </fieldset>

  <fieldset class="gws-column-form-grid">
    <legend><%= t("modules.addons.gws/column/text_like") %></legend>

    <div class="gws-column-form-input-group">
      <%= f.label :required, model.t(:required) %><%= model.tt :required %>
      <div class="gws-column-form-radio-button-list">
        <% item.required_options.each do |label, value| %>
          <label class="gws-column-form-radio-button-item">
            <%= f.radio_button :required, value %>
            <%= label %>
          </label>
        <% end %>
      </div>
    </div>
  </fieldset>
</div>
