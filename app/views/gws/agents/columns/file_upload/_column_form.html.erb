<% value ||= nil %>
<% files = value.try(:files) %>
<%
  form_options = column.form_options
  form_options['class'] = [ form_options['class'].presence ].flatten.compact
  form_options['class'] << 'file-id'
%>
<%= render file: 'gws/agents/columns/main/_common_label', locals: { column: column } %>
<% column.upload_file_count.times.each do |index| %>
  <dd>
    <% file = files[index] rescue nil %>
    <% column.prefix_label %>
    <%= link_to(column.place_holder.presence || t('ss.links.upload'), sns_apis_temp_files_path(user: @cur_user), class: %w(ajax-box btn btn-file-upload), data: { column_id: column.id.to_s, index: index }) %>
    <% column.postfix_label %>
    <span class="humanized-name column-<%= column.id %>"><%= file.try(:humanized_name) %></span>
    <%= hidden_field_tag("#{object_name}[#{column.id}][]", file.try(:id), form_options) %>
    <%= link_to('#', class: 'btn-file-delete', style: file ? '' : 'display: none') do %>
      <i class="material-icons" style="font-size: 120%;">&#xE872;</i>
    <% end %>
  </dd>
<% end %>
