<% value ||= nil %>
<% file = value.try(:file) %>
<%= render file: 'gws/agents/columns/main/_common_label', locals: { column: column } %>
<dd>
  <%= link_to(t('ss.links.upload'), gws_apis_temp_files_path, class: %w(ajax-box btn btn-file-upload), data: { column_id: column.id.to_s }) %>
  <span class="humanized-name column-<%= column.id %>"><%= file.try(:humanized_name) %></span>
  <%= hidden_field_tag("#{object_name}[#{column.id}]", file.try(:id), column.form_options) %>
</dd>
