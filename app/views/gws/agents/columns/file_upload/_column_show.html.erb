<% value ||= nil %>
<% files = value.try(:files) %>
<%= render file: 'gws/agents/columns/main/_common_label', locals: { column: column, show: true } %>
<dd>
  <% if files.present? %>
    <% files.each do |file| %>
    <div id="file-<%= file.id %>" class="fileview" style="display: table">
      <span class="prefix" style="display: table-cell; text-align: center; vertical-align: middle; padding: 4px"><%= column.prefix_label %></span>
      <span class="icon" style="display: table-cell; text-align: center; vertical-align: middle; padding: 4px; width: 48px">
        <% if file.image? %>
        <%= image_tag(file.thumb_url, alt: file.name, style: 'max-width: 40px; max-height: 40px') %>
        <% else %>
        <i class="material-icons">&#xE24D;</i><br>
        <span class="ext icon-<%= file.extname %>"><%= file.extname %></span>
        <% end %>
      </span>
      <span class="filename" style="display: table-cell; vertical-align: middle; padding: 4px">
        <%= link_to(file.humanized_name, file.url, file.image? ? {} : { download: true }) %>
      </span>
      <span class="postfix" style="display: table-cell; text-align: center; vertical-align: middle; padding: 4px"><%= column.postfix_label %></span>
    </div>
    <% end %>
  <% end %>
</dd>
