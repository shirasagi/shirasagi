<dl class="see mod-gws-user-affair_setting">
  <dt><%= @model.t :staff_category %><%= @model.tt :staff_category %></dt>
  <dd><%= f.select :staff_category, @item.staff_category_options %></dd>

  <dt><%= @model.t :staff_address_uid %><%= @model.tt :staff_address_uid %></dt>
  <dd><%= f.text_field :staff_address_uid %></dd>
</dl>

<dl class="see mod-gws-user-affair_setting" style="margin-top: 20px;">
  <dt><%= @model.t :gws_superior_group_ids %><%= @model.tt :gws_superior_group_ids %></dt>
  <dd>
    <%= f.hidden_field "in_gws_superior_group_ids[]", value: "", class: "hidden-ids", id: nil %>
    <%= link_to t("ss.apis.groups.index"), gws_apis_groups_path, class: "ajax-box" %>
  </dd>
  <dd>
    <%= render SS::MoreContentComponent.new(cur_site: @cur_site, cur_user: @cur_user, max_height: "20em") do %>
      <table class="index ajax-selected">
        <thead>
        <tr>
          <th class="name"><%= Gws::Group.t :name %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @item.find_gws_superior_groups.each do |group| %>
          <tr data-id="<%= group.id %>">
            <td><%= f.hidden_field "in_gws_superior_group_ids[]", value: group.id, id: nil %> <%= group.name %></td>
            <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </dd>
</dl>

