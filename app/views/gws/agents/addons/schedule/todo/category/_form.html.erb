<dl class="see mod-gws-schedule-todo-category gws-category-tree">
  <dt class="wide"><%= @model.tt :category_ids %></dt>
  <dd class="wide">
    <%= f.hidden_field "category_ids[]", value: "", class: "hidden-ids" %>
    <%= link_to t("gws/schedule/todo.apis.categories.index"), gws_schedule_todo_apis_categories_path(single: 1), class: "ajax-box" %>
  </dd>
  <dd class="wide">
    <table class="index ajax-selected">
      <thead><tr><th class="name"><%= Gws::Schedule::TodoCategory.t :name %></th><th class="deselect"></th></tr></thead>
      <tbody>
        <% @item.categories.each do |item| %>
        <tr data-id="<%= item.id %>">
          <td><%= f.hidden_field "category_ids[]", value: item.id, id: nil %> <%= item.name %></td>
          <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>
