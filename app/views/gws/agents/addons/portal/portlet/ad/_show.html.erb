<dl class="see mod-ss-body">
  <dt><%= @model.t :ad_width %></dt>
  <dd>
    <% if @item.ad_width %>
      <%= @item.ad_width.to_s(:delimited) %> px
    <% end %>
  </dd>

  <dt><%= @model.t :ad_speed %></dt>
  <dd>
    <% if @item.ad_speed && @item.ad_speed > 0 %>
      <%= @item.ad_speed.to_s(:delimited) %> <%= t("datetime.prompts.milli_second") %>
    <% else %>
      <%= t('webmail.default_settings') %> / <%= Sys::Ad::DEFAULT_SLIDE_SPEED.to_s(:delimited) %> <%= t("datetime.prompts.milli_second") %>
    <% end %>
  </dd>

  <dt><%= @model.t :ad_pause %></dt>
  <dd>
    <% if @item.ad_pause && @item.ad_pause > 0 %>
      <%= @item.ad_pause.to_s(:delimited) %> <%= t("datetime.prompts.milli_second") %>
    <% else %>
      <%= t('webmail.default_settings') %> / <%= Sys::Ad::DEFAULT_SLIDE_PAUSE.to_s(:delimited) %> <%= t("datetime.prompts.milli_second") %>
    <% end %>
  </dd>
</dl>
