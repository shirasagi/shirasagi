<dl class="see mod-ss-body">
  <dt><%= @model.t :ad_width %></dt>
  <dd>
    <% if @item.ad_width %>
      <%= @item.ad_width.to_fs(:delimited) %> px
    <% end %>
  </dd>

  <% if @item.ad_speed && @item.ad_speed > 0 && @item.ad_pause && @item.ad_pause > 0 %>
    <dt><%= @model.t :ad_speed %></dt>
    <dd><%= @item.ad_speed.to_fs(:delimited) %> <%= t("datetime.prompts.milli_second") %></dd>

    <dt><%= @model.t :ad_pause %></dt>
    <dd><%= @item.ad_pause.to_fs(:delimited) %> <%= t("datetime.prompts.milli_second") %></dd>
  <% else %>
    <dt><%= @model.t :ad_speed %> / <%= @model.t :ad_pause %></dt>
    <dd><%= t("gws/portal/ad.autoplay_disabled") %></dd>
  <% end %>
</dl>
