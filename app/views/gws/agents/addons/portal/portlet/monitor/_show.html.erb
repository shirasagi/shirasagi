<dl class="see">
  <dt><%= @model.t :monitor_category_ids %></dt>
  <dd>
    <% @item.monitor_categories.each do |category| %>
      <% next unless category %>
      <span class="gws-category-label" style="<%= category_label_css(category) %>"><%= category.trailing_name %></span>
    <% end %>
  </dd>

  <dt><%= @model.t :monitor_answerable_article %></dt>
  <dd><%= @item.label :monitor_answerable_article %></dd>

  <dt><%= @model.t :limit %></dt>
  <dd><%= @item.send :limit %></dd>
</dl>
