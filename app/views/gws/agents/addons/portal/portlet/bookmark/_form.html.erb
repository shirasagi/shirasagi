<dl class="see">
  <% if @model == Gws::Portal::UserPortlet %>
    <dt><%= @model.t :bookmark_folder_id %><%= @model.tt :bookmark_folder_id %></dt>
    <dd>
      <%= f.hidden_field :bookmark_folder_id, value: '', id: nil, class: 'hidden-ids' %>
      <%= link_to t('gws/share.apis.folders.index'), gws_bookmark_apis_folders_path(single: true), class: 'ajax-box' %>
    </dd>
    <dd>
      <table class="index ajax-selected">
        <thead><tr><th class="name"><%= @model.t :name %></th><th class="deselect"></th></tr></thead>
        <tbody>
        <% if @item.bookmark_folder.present? %>
          <tr data-id="<%= @item.bookmark_folder_id %>">
            <td><%= f.hidden_field :bookmark_folder_id, value: @item.bookmark_folder_id, id: nil %> <%= @item.bookmark_folder.name %></td>
            <td><%= link_to t("ss.buttons.delete"), '#', class: 'deselect btn' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </dd>
  <% end %>

  <dt><%= @item.t :bookmark_model %></dt>
  <dd><%= f.select :bookmark_model, @item.bookmark_model_options, include_blank: true %></dd>

  <dt><%= @item.t :limit %> </dt>
  <dd><%= f.number_field :limit %></dd>
</dl>
