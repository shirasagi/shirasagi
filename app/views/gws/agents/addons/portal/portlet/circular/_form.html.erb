<%
  @item.circular_article_state ||= @cur_site.circular_article_state
  @item.circular_sort ||= @cur_site.circular_sort
%>
<dl class="see">
  <dt><%= @model.t :circular_category_ids %></dt>
  <dd>
    <%= f.hidden_field "circular_category_ids[]", value: "", id: nil, class: "hidden-ids" %>
    <%= link_to t("gws.apis.categories.index"), gws_circular_apis_categories_path(single: true), class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead><tr><th class="name"><%= Gws::Board::Category.t :name %></th><th class="deselect"></th></tr></thead>
      <tbody>
        <% @item.circular_categories.each do |item| %>
        <tr data-id="<%= item.id %>">
          <td><%= f.hidden_field "circular_category_ids[]", value: item.id, id: nil %> <%= item.name %></td>
          <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </dd>

  <dt><%= @item.t :limit %> </dt>
  <dd><%= f.number_field :limit %></dd>

  <dt><%= @model.t :circular_article_state %><%= @model.tt :circular_article_state %></dt>
  <dd><%= f.select :circular_article_state, @item.circular_article_state_options %></dd>

  <dt><%= @model.t :circular_sort %><%= @model.tt :circular_sort %></dt>
  <dd><%= f.select :circular_sort, @item.circular_sort_options %></dd>
</dl>
