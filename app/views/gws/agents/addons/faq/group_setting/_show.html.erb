<%= jquery do %> SS_AddonTabs.hide(".addon-gws-faq-group-setting"); <% end %>

<dl class="see addon-gws-faq-group-setting">
  <dt><%= @model.t :faq_new_days %></dt>
  <dd><%= @item.send :faq_new_days %> <%= t("datetime.prompts.day") %></dd>

  <dt><%= @model.t :faq_file_size %><%= @model.tt :faq_file_size %></dt>
  <dd></dd>

  <dt class="depth-2"><%= @model.t(:faq_file_size_per_topic).sub(/.*\//, '') %></dt>
  <dd><%= number_to_human_size(@item.faq_file_size_per_topic) %></dd>

  <dt class="depth-2"><%= @model.t(:faq_file_size_per_post).sub(/.*\//, '') %></dt>
  <dd><%= number_to_human_size(@item.faq_file_size_per_post) %></dd>

  <dt><%= @model.t :faq_browsed_delay %></dt>
  <dd><%= @item.faq_browsed_delay %> <%= t("datetime.prompts.second") %></dd>

  <dt><%= @model.t :faq_files_break %></dt>
  <dd><%= @item.label :faq_files_break %></dd>
</dl>
