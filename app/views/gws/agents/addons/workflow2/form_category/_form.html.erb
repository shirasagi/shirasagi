<dl class="see">
  <dt><%= @model.t :category_ids %><%= @model.tt :category_ids %></dt>
  <dd>
    <%= f.hidden_field "category_ids[]", value: "", class: "hidden-ids", id: nil %>
    <%= link_to t("gws.apis.categories.index"), gws_workflow2_apis_form_categories_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead><tr><th class="name"><%= Gws::Workflow2::Form::Category.t :name %></th><th class="deselect"></th></tr></thead>
      <tbody>
      <% @item.categories.each do |item| %>
        <tr data-id="<%= item.id %>">
          <td><%= f.hidden_field "category_ids[]", value: item.id, id: nil %> <%= item.name %></td>
          <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </dd>
</dl>
