<dl class="see">
  <dt><%= @model.t :destination_group_ids %></dt>
  <dd>
    <%= render SS::MoreContentComponent.new(cur_site: @cur_site, cur_user: @cur_user, max_height: "20em") do %>
      <%= br @item.destination_groups.active.pluck(:name) %>
    <% end %>
  </dd>

  <dt><%= @model.t :destination_user_ids %></dt>
  <dd>
    <%= render SS::MoreContentComponent.new(cur_site: @cur_site, cur_user: @cur_user, max_height: "20em") do %>
      <%= br @item.destination_users.active.order_by_title(@cur_site).map { |user| gws_public_user_long_name(user.long_name, cur_site: @cur_site) } %>
    <% end %>
  </dd>
</dl>
