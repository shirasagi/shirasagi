<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
%>
<% render_menu_setting = proc do |name, edit_icon: true| %>
  <dl class="see addon-gws-system-menu-setting menu-setting-<%= name %>">
    <dt><%= @model.t("menu_#{name}_state") %></dt>
    <dd>
      <div class="input-group gap-5 align-items-center">
        <% if edit_icon %>
          <% if @item.send("menu_#{name}_icon_image").present? %>
            <%= image_tag @item.send("menu_#{name}_icon_image").url, class: "icon-#{name.to_s.dasherize}", style: "width: 32px; height: 32px;", aria: { hidden: true } %>
          <% else %>
            <span class="ss-icon ss-icon-<%= name.to_s.dasherize %>" role="img" aria-hidden="true"></span>
          <% end %>
        <% end %>
        <span>
          <% if @item.send("menu_#{name}_visible?") %>
            <%= @item.send("menu_#{name}_effective_label") %>
          <% else %>
            <%= @item.label("menu_#{name}_state") %>
          <% end %>
        </span>
      </div>
    </dd>
  </dl>
<% end %>

