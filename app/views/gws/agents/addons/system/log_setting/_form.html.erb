<%= jquery do %> SS_AddonTabs.hide(".addon-gws-system-log-setting"); <% end %>

<% render_log_setting = proc do |type| %>
  <dl class="see addon-gws-system-log-setting">
    <dt><%= @model.t("log_#{type}_severity") %><%= @model.tt("log_#{type}_severity") %></dt>
    <dd>
      <%= f.select "log_#{type}_severity", @item.send("log_#{type}_severity_options"), include_blank: t('gws.history.system_default_severity') %>
    </dd>
  </dl>
<% end %>

<dl class="see addon-gws-system-log-setting">
  <dt><%= @model.t(:log_save_days) %><%= @model.tt(:log_save_days) %></dt>
  <dd>
    <%= f.select :log_save_days, @item.log_save_days_options, include_blank: t('gws.history.system_default_save_days') %>
  </dd>
</dl>

