<%= jquery do %> SS_AddonTabs.hide(".addon-gws-system-log-setting"); <% end %>

<% render_log_setting = proc do |type| %>
  <dl class="see addon-gws-system-log-setting">
    <dt>
      <%= @model.t("log_#{type}_severity") %>
    </dt>
    <dd>
      <%= @item.label("log_#{type}_severity").presence || t('gws.history.system_default_save_days') %>
    </dd>
  </dl>
<% end %>

<dl class="see addon-gws-system-log-setting">
  <dt><%= @model.t(:log_save_days) %></dt>
  <dd>
    <% if @item.log_save_days %>
    <%= @item.log_save_days %>
    <%= t('datetime.prompts.day') %>
    <% else %>
    <%= t('gws.history.system_default_save_days') %>
    <% end %>
  </dd>
</dl>

