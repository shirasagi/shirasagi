<dl class="see mod-gws-group-affair_setting">
  <dt><%= @model.t :group_code %></dt>
  <dd><%= @item.group_code %></dd>

  <% if @item.superior_groups.present? %>
    <dt><%= @model.t :superior_group_ids %></dt>
    <dd><%=br @item.superior_groups.pluck(:name) %></dd>
  <% end %>

  <% if @item.superior_users.present? %>
    <dt><%= @model.t :superior_user_ids %></dt>
    <dd><%=br @item.superior_users.map { |item| item.long_name } %></dd>
  <% end %>
</dl>
