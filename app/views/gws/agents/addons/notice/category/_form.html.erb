<%= jquery do %> //SS_AddonTabs.hide(".mod-gws-notice-category"); <% end %>

<dl class="see mod-gws-notice-category gws-category-tree">
  <dt><%= @model.t :category_ids %><%= @model.tt :category_ids %></dt>
  <dd>
    <%= f.hidden_field "category_ids[]", value: "", class: "hidden-ids" %>
    <%= link_to t("gws.apis.categories.index"), gws_notice_apis_categories_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead><tr><th class="name"><%= Gws::Notice::Category.t :name %></th><th class="deselect"></th></tr></thead>
      <tbody>
        <% @item.categories.each do |item| %>
        <tr data-id="<%= item.id %>">
          <td><%= f.hidden_field "category_ids[]", value: item.id, id: nil %> <%= item.name %></td>
          <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>
