<%
  return if !@item.term_enabled?

  addon ||= local_assigns.fetch(:addon, {})
  addon[:head] = @cur_site.notice_calendar_menu_label.presence || t('ss.navi.calendar')
%>

<dl class="see mod-gws-notice-calendar">
  <dt><%= @model.t :term %></dt>
  <dd>
    <%= link_to_calendar @item, text: term(@item) %>
  </dd>

  <% if params["controller"] =~ /editable/ && @item.color.present? %>
  <dt><%= @model.t :color %></dt>
  <dd><%= content_tag :span, @item.name, style: "background-color: #{@item.color}; color: #{@item.text_color}" %></dd>
  <% end %>
</dl>
