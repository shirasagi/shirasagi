<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
%>

<dl class="see">
  <dt><%= @model.t :notice_new_days %><%= @model.tt :notice_new_days %></dt>
  <dd class="short"><%= f.number_field :notice_new_days %> <span class="postfix"><%= t("datetime.prompts.day") %></span></dd>

  <dt><%= @model.t :notice_severity %><%= @model.tt :notice_severity %></dt>
  <dd><%= f.select :notice_severity, @item.notice_severity_options %></dd>

  <dt><%= @model.t :notice_browsed_state %><%= @model.tt :notice_browsed_state %></dt>
  <dd><%= f.select :notice_browsed_state, @item.notice_browsed_state_options %></dd>

  <dt><%= @model.t :notice_toggle_browsed %><%= @model.tt :notice_toggle_browsed %></dt>
  <dd><%= f.select :notice_toggle_browsed, @item.notice_toggle_browsed_options %></dd>

  <dt><%= @model.t :notice_folder_navi_open_state %><%= @model.tt :notice_folder_navi_open_state %></dt>
  <dd><%= f.select :notice_folder_navi_open_state, @item.notice_folder_navi_open_state_options, include_blank: true %></dd>
  <dd><%= ss_input_guide :notice_folder_navi_open_state, model: @model %></dd>

  <% %w(back_number calendar).each do |type| %>
    <dt><%= @model.t("notice_#{type}_menu_state") %><%= @model.tt("notice_#{type}_menu_state") %></dt>
    <dd>
      <div class="input-group gap-5 align-items-center">
        <%= f.select "notice_#{type}_menu_state", @item.send("notice_#{type}_menu_state_options") %>
        <%= f.text_field("notice_#{type}_menu_label", value: @item.send("notice_#{type}_menu_label"), placeholder: @item.send("notice_#{type}_menu_label_placeholder")) %>
      </div>
    </dd>
  <% end %>
</dl>
