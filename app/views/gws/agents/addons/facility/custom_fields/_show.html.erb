<dl class="see mod-gws-facility-custom_fields">
  <dd class="wide"><%= link_to(I18n.t('gws/facility.manage_custom_fields'), gws_facility_item_custom_fields_path(item_id: @item), class: :btn) %></dd>
  <% if @item.custom_fields.present? %>
  <dd class="wide">
    <table class="index">
      <thead>
      <tr>
        <th class="name"><%= Gws::Facility::CustomField.t(:name) %></th>
        <th class="input_type"><%= Gws::Facility::CustomField.t(:input_type) %></th>
        <th class="required"><%= Gws::Facility::CustomField.t(:required) %></th>
        <th class="datetime"><%= Gws::Facility::CustomField.t(:updated) %></th>
      </tr>
      </thead>
      <tbody>
      <% @item.custom_fields.order_by(order: 1, id: 1).each do |custom_field| %>
      <tr>
        <td class="name"><%= custom_field.name %></td>
        <td class="input_type"><%= custom_field.label(:input_type) %></td>
        <td class="required"><%= custom_field.label(:required) %></td>
        <td class="datetime"><%= tryb { I18n.l(custom_field.updated) } %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </dd>
  <% end %>
</dl>
