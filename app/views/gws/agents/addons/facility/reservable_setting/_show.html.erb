<%= jquery do %>
  <% if !@item.reservable_setting_present? %>
  SS_AddonTabs.hide(".gws-addon-facility-reservable-setting");
  <% end %>
<% end %>

<div class="see gws-addon-facility-reservable-setting">
  <dl class="see">
    <dt><%= @model.t :reservable_group_ids %></dt>
    <dd>
      <table class="index">
        <thead><tr><th class="name"><%= Gws::Group.t :name %></th></thead>
        <tbody>
          <% @item.reservable_groups.each do |group| %>
          <tr><td><%= group.name %></td></tr>
          <% end %>
        </tbody>
      </table>
    </dd>

    <dt><%= @model.t :reservable_member_ids %></dt>
    <dd>
      <table class="index">
        <thead><tr><th class="name"><%= Gws::User.t :name %></th></thead>
        <tbody>
          <% @item.reservable_members.order_by_title(@cur_site).each do |user| %>
          <tr><td><%= user.long_name %></td></tr>
          <% end %>
        </tbody>
      </table>
    </dd>
  </dl>
</div>
