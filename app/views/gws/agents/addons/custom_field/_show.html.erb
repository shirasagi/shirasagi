<%
  def allowed_input_type(input_types, &block)
    if @item.input_type.blank? || input_types.include?(@item.input_type)
      return yield
    end
  end
%>

<dl class="see mod-gws-custom_field">
  <dt><%= @model.t :input_type %></dt>
  <dd><%= @item.label :input_type %></dd>

  <dt><%= @model.t :tooltips %></dt>
  <dd><%= br @item.tooltips.join("\n") %></dd>

  <dt><%= @model.t :required %></dt>
  <dd><%= @item.label :required %></dd>

  <% allowed_input_type(%w(text_field text_area email_field)) do %>
    <dt><%= @model.t :max_length %></dt>
    <dd><%= @item.max_length %></dd>
  <% end %>

  <% allowed_input_type(%w(text_field text_area email_field date_field)) do %>
    <dt><%= @model.t :place_holder %></dt>
    <dd><%= @item.place_holder %></dd>

    <dt><%= @model.t :additional_attr %></dt>
    <dd><%= @item.additional_attr %></dd>
  <% end %>

  <% allowed_input_type(%w(radio_button select check_box)) do %>
    <dt><%= @model.t :select_options %></dt>
    <dd><%=br @item.select_options.join("\n") %></dd>
  <% end %>

  <% if @model.input_type_include_upload_file? %>
    <% allowed_input_type(%w(upload_file)) do %>
      <dt><%= @model.t :upload_file_count %></dt>
      <dd><%= number_to_human(@item.upload_file_count) %></dd>

      <dt><%= @model.t :max_upload_file_size %></dt>
      <dd><%= number_to_human_size(@item.max_upload_file_size) %></dd>

      <dt><%= @model.t :resizing %></dt>
      <dd>
        <%= number_to_human_size(@item.resizing_width) %>
        <% if @item.resizing_width.present? || @item.resizing_height.present? %>
        x
        <% end %>
        <%= number_to_human_size(@item.resizing_height) %>
      </dd>
    <% end %>
  <% end %>
</dl>
