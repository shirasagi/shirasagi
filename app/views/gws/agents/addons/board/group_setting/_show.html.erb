<%= jquery do %> SS_AddonTabs.hide(".addon-gws-board-group-setting"); <% end %>

<dl class="see addon-gws-board-group-setting">
  <dt><%= @model.t :board_new_days %></dt>
  <dd><%= @item.send :board_new_days %> <%= t("datetime.prompts.day") %></dd>

  <dt><%= @model.t :board_file_size %><%= @model.tt :board_file_size %></dt>
  <dd></dd>

  <dt class="depth-2"><%= @model.t(:board_file_size_per_topic).sub(/.*\//, '') %></dt>
  <dd><%= number_to_human_size(@item.board_file_size_per_topic) %></dd>

  <dt class="depth-2"><%= @model.t(:board_file_size_per_post).sub(/.*\//, '') %></dt>
  <dd><%= number_to_human_size(@item.board_file_size_per_post) %></dd>

  <dt><%= @model.t :board_browsed_delay %></dt>
  <dd><%= @item.board_browsed_delay %> <%= t("datetime.prompts.second") %></dd>

  <dt><%= @model.t :board_files_break %></dt>
  <dd><%= @item.label :board_files_break %></dd>

  <dt><%= @model.t :board_links_break %></dt>
  <dd><%= @item.label :board_links_break %></dd>
</dl>
