<dl class="see gws-addon-monitor-group">
  <dt><%= t("modules.addons.gws/monitor/group") %><%= @model.tt :group_name %></dt>
  <% if @item.new_record? %>
    <dd>
    <%= f.hidden_field "attend_group_ids[]", value: "", class: "hidden-ids" %>
    <%= link_to t("ss.apis.groups.index"), gws_apis_groups_path, class: "ajax-box" %>
    <%= link_to t("ss.buttons.copy"), "#", class: "btn js-copy-groups" %>
    <%= link_to t("ss.buttons.paste"), "#", class: "btn js-paste-groups" %>
    </dd>
  <% end %>
  <dd>
    <table class="index ajax-selected">
      <thead><tr><th class="name"><%= Gws::Group.t :name %></th><th class="deselect"></th></tr></thead>
      <tbody>
      <% if @item.new_record? %>
        <% @item.attend_groups.each do |group| %>
          <tr data-id="<%= group.id %>">
            <td><%= f.hidden_field "attend_group_ids[]", value: group.id, id: nil %> <%= group.name %></td>
            <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
          </tr>
        <% end %>
      <% else %>
        <% @item.attend_groups.each do |group| %>
          <tr data-id="<%= group.id %>">
            <td><%= f.hidden_field "attend_group_ids[]", value: group.id, id: nil %> <%= group.name %></td>
            <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn", style: "display: none" %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </dd>
</dl>
