<%= jquery do %> SS_AddonTabs.hide(".addon-gws-monitor-group-setting"); <% end %>

<dl class="see addon-gws-monitor-group-setting">
  <dt><%= @model.t :monitor_new_days %></dt>
  <dd><%= @item.send :monitor_new_days %> <%= t("datetime.prompts.day") %></dd>

  <dt><%= @model.t :monitor_file_size %><%= @model.tt :monitor_file_size %></dt>
  <dd></dd>

  <dt class="depth-2"><%= @model.t(:monitor_file_size_per_topic).sub(/.*\//, '') %></dt>
  <dd><%= number_to_human_size(@item.monitor_file_size_per_topic) %></dd>

  <dt class="depth-2"><%= @model.t(:monitor_file_size_per_post).sub(/.*\//, '') %></dt>
  <dd><%= number_to_human_size(@item.monitor_file_size_per_post) %></dd>

  <dt><%= @model.t :monitor_delete_threshold %></dt>
  <dd><%= @item.label(:monitor_delete_threshold) %></dd>

  <!--
  <%# reminder_start_section and default_reminder_start_section have no side-effect. %>
  <%# these attributes are useless. %>
  <%# so, hide these attributes temporarily. %>
  <dt><%= @model.t :default_reminder_start_section %>	</dt>
  <dd><%= @item.label(:default_reminder_start_section) %></dd>
  -->
</dl>

