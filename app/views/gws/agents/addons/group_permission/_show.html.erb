<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
%>

<dl class="see mod-gws-owner_permission">
  <% if @item.class.permission_included_custom_groups? %>
  <dt><%= @model.t :custom_group_ids %></dt>
  <dd><%=tryb { br @item.custom_groups.pluck(:name) } %></dd>
  <% end %>

  <dt><%= @model.t :group_ids %></dt>
  <dd><%=br @item.groups.pluck(:name) %></dd>

  <dt><%= @model.t :user_ids %></dt>
  <dd><%=br gws_public_user_long_names(@item.users.pluck(:name)) %></dd>

  <% unless SS.config.ss.disable_permission_level %>
    <dt><%= @model.t :permission_level %></dt>
    <dd><%= @item.label :permission_level %></dd>
  <% end %>
</dl>
