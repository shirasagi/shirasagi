<%= jquery do %> SS_AddonTabs.hide(".addon-gws-discussion-group-setting"); <% end %>

<dl class="see addon-gws-discussion-group-setting">
  <dt><%= @model.t :discussion_quota %></dt>
  <dd><%= @item.discussion_quota %> <%= t('ss.units.mega_byte') if @item.discussion_quota %></dd>

  <dt><%= @model.t :discussion_filesize_limit %></dt>
  <dd><%= @item.discussion_filesize_limit %> <%= t('ss.units.mega_byte') if @item.discussion_filesize_limit %></dd>

  <dt><%= @model.t :discussion_new_days %></dt>
  <dd><%= @item.send :discussion_new_days %> <%= t("datetime.prompts.day") %></dd>

  <dt><%= @model.t :discussion_unseen_interval %></dt>
  <dd><%= @item.label :discussion_unseen_interval %></dd>

  <dt><%= @model.t :discussion_recent_limit %></dt>
  <dd><%= @item.send :discussion_recent_limit %></dd>

  <dt><%= @model.t :discussion_todo_limit %></dt>
  <dd><%= @item.send :discussion_todo_limit %></dd>

  <dt><%= @model.t :discussion_comment_limit %></dt>
  <dd><%= @item.send :discussion_comment_limit %></dd>
</dl>
