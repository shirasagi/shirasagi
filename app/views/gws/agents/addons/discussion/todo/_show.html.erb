<%
  return if !Gws::Discussion.allowed?(:use, @cur_user, site: @cur_site)

  discussion_forum = @item.discussion_forum
  return if discussion_forum.blank?
  return if !discussion_forum.public?
  return if !discussion_forum.member?(@cur_user)
%>

<dl class="see">
  <dt><%= @model.t :discussion_forum_id %></dt>
  <dd><%= link_to discussion_forum.name, gws_discussion_forum_topics_path(mode: "-", forum_id: discussion_forum) %></dd>
</dl>
