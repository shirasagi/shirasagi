<%
  column_options = Gws::Tabular.build_column_options(@item.form, site: @cur_site)
%>
<dl class="see" data-field-name="title_column_ids">
  <dt><%= @model.t :title_column_ids %><%= @model.tt :title_column_ids %></dt>
  <dd>
    <%=
      title_column_options = Gws::Tabular.filter_column_options(column_options, :title)
      component = Gws::Tabular::DndFormComponent.new(
        object_name: f.object_name, method_name: :title_column_ids, options: title_column_options, selected: @item.title_column_ids)
      render component
    %>
  </dd>
</dl>

<dl class="see" data-field-name="meta_column_ids">
  <dt><%= @model.t :meta_column_ids %><%= @model.tt :meta_column_ids %></dt>
  <dd>
