<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
%>

<dl class="see addon-gws-memo-group-setting">
  <dt><%= @model.t :memo_quota %></dt>
  <dd><%= @item.memo_quota %> <%= t('ss.units.mega_byte') if @item.memo_quota %></dd>

  <dt><%= @model.t :memo_filesize_limit %></dt>
  <dd><%= @item.memo_filesize_limit %> <%= t('ss.units.mega_byte') if @item.memo_filesize_limit %></dd>

  <dt><%= @model.t :memo_reminder %></dt>
  <dd><%= @item.memo_reminder_name %></dd>
</dl>
