<%= jquery do %> SS_AddonTabs.hide(".addon-gws-qna-group-setting"); <% end %>

<% @item.in_qna_file_size_per_topic_mb ||= @item.qna_file_size_per_topic / (1_024 * 1_024) if @item.qna_file_size_per_topic %>
<% @item.in_qna_file_size_per_post_mb ||= @item.qna_file_size_per_post / (1_024 * 1_024) if @item.qna_file_size_per_post %>

<dl class="see addon-gws-qna-group-setting">
  <dt><%= @model.t :qna_new_days %><%= @model.tt :qna_new_days %></dt>
  <dd class="short"><%= f.number_field :qna_new_days %> <span class="postfix"><%= t("datetime.prompts.day") %></span></dd>

  <dt><%= @model.t :qna_file_size %><%= @model.tt :qna_file_size %></dt>
  <dd></dd>

  <dt class="depth-2"><%= @model.t(:qna_file_size_per_topic).sub(/.*\//, '') %><%= @model.tt :qna_file_size_per_topic %></dt>
  <dd class="short"><%= f.number_field :in_qna_file_size_per_topic_mb %> <span class="postfix"><%= t("ss.units.mega_byte") %></span></dd>

  <dt class="depth-2"><%= @model.t(:qna_file_size_per_post).sub(/.*\//, '') %><%= @model.tt :qna_file_size_per_post %></dt>
  <dd class="short"><%= f.number_field :in_qna_file_size_per_post_mb %> <span class="postfix"><%= t("ss.units.mega_byte") %></span></dd>

  <dt><%= @model.t :qna_browsed_delay %><%= @model.tt :qna_browsed_delay %></dt>
  <dd class="short"><%= f.number_field :qna_browsed_delay %> <span class="postfix"><%= t("datetime.prompts.second") %></span></dd>

  <dt><%= @model.t :qna_files_break %><%= @model.tt :qna_files_break %></dt>
  <dd><%= f.select :qna_files_break, @item.qna_files_break_options %></dd>
</dl>
