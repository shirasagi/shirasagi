<dl class="see addon-gws-qna-group-setting">
  <dt><%= @model.t :qna_new_days %></dt>
  <dd><%= @item.send :qna_new_days %> <%= t("datetime.prompts.day") %></dd>

  <dt><%= @model.t :qna_file_size %><%= @model.tt :qna_file_size %></dt>
  <dd></dd>

