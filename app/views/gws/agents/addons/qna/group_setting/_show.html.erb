  <dt class="depth-2"><%= @model.t(:qna_file_size_per_post).sub(/.*\//, '') %></dt>
  <dd><%= number_to_human_size(@item.qna_file_size_per_post) %></dd>

  <dt><%= @model.t :qna_browsed_delay %></dt>
  <dd><%= @item.qna_browsed_delay %> <%= t("datetime.prompts.second") %></dd>

  <dt><%= @model.t :qna_files_break %></dt>
  <dd><%= @item.label :qna_files_break %></dd>
