<dl class="see">
  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>

  <% if @item.released.present? %>
  <dt><%= @model.t :released %></dt>
  <dd><%= tryb{@item.send(:released).strftime("%Y/%m/%d %H:%M")} %></dd>
  <% end %>

  <% if @item.release_date.present? %>
  <dt><%= @model.t :release_date %></dt>
  <dd><%= tryb{@item.send(:release_date).strftime("%Y/%m/%d %H:%M")} %></dd>
  <% end %>

  <% if @item.close_date.present? %>
  <dt><%= @model.t :close_date %></dt>
  <dd><%= tryb{@item.send(:close_date).strftime("%Y/%m/%d %H:%M")} %></dd>
  <% end %>
</dl>
