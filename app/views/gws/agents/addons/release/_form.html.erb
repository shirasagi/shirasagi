<%= jquery do %>
  SS_AddonTabs.hide(".mod-gws-release");
<% end %>

<dl class="see mod-gws-release">
  <dt><%= @model.t :state %><%= @model.tt :state %></dt>
  <dd><%= f.select :state, @item.state_options %></dd>

  <dt><%= @model.t :released %><%= @model.tt :released %></dt>
  <dd><%= f.text_field :released, class: "datetime js-datetime", value: tryb { @item.released.strftime("%Y/%m/%d %H:%M") } %></dd>

  <dt><%= @model.t :release_date %><%= @model.tt :release_date %></dt>
  <dd><%= f.text_field :release_date, class: "datetime js-datetime", value: tryb { @item.release_date.strftime("%Y/%m/%d %H:%M") } %></dd>

  <dt><%= @model.t :close_date %><%= @model.tt :close_date %></dt>
  <dd><%= f.text_field :close_date, class: "datetime js-datetime", value: tryb { @item.close_date.strftime("%Y/%m/%d %H:%M") } %></dd>
</dl>
