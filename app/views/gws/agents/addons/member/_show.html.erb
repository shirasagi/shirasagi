<% if @model.member_include_custom_groups? && @item.member_custom_groups.present? %>
<dl class="see">
  <dt><%= @model.t :member_custom_group_ids %></dt>
  <dd>
    <%= render SS::MoreContentComponent.new(cur_site: @cur_site, cur_user: @cur_user, max_height: "10em") do %>
      <%= br @item.member_custom_groups.map(&:name) %>
    <% end %>
  </dd>
</dl>
<% end %>

<dl class="see">
  <dt><%= @model.t :member_group_ids %></dt>
  <dd>
    <%= render SS::MoreContentComponent.new(cur_site: @cur_site, cur_user: @cur_user, max_height: "10em") do %>
      <%= br @item.member_groups.active.map(&:name) %>
    <% end %>
  </dd>
</dl>

<% if @model.member_include_member_ids? %>
<dl class="see">
  <dt><%= @model.t :member_ids %></dt>
  <dd>
    <%= render SS::MoreContentComponent.new(cur_site: @cur_site, cur_user: @cur_user, max_height: "10em") do %>
      <% @item.sorted_members.each do |item| %>
        <%= link_to gws_public_user_long_name(item.long_name), gws_apis_user_detail_path(id: item), class: "user-detail link" %><br>
      <% end %>
    <% end %>
  </dd>
</dl>
<% end %>
