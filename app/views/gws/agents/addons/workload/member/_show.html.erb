<dl class="see">
  <dt><%= @model.t :member_group_id %></dt>
  <dd><%= @item.member_group.try(:name) %></dd>

  <% if @model.use_member_ids? %>
    <dt><%= @model.t :member_ids %></dt>
    <dd>
      <%= render SS::MoreContentComponent.new(cur_site: @cur_site, cur_user: @cur_user, max_height: "20em") do %>
        <%= br @item.members.map(&:long_name).join("\n") %>
      <% end %>
    </dd>
  <% end %>
</dl>
