          <td style="padding: 5px"><%= tryb { I18n.l(record.break_leave2, format: :attendance_time_only) } %></td>
          <td style="padding: 5px"><%= tryb { record.memo } %></td>
        </tr>
        <% date += 1.day %>
      <% end %>
      </tbody>
    </table>
