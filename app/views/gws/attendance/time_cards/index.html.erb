            <th style="padding: 5px; width: 3.5em;">外出</th>
            <th style="padding: 5px; width: 3.5em;">外戻</th>
            <th>備考</th>
          </tr>
        <% end %>
        <tr class="<%= Time.zone.now.beginning_of_day == date ? 'current' : '' %>">
          <% record = @item.records.where(date: date).first %>
          <td style="padding: 5px"><%= I18n.l(date.to_date, format: :attendance_month_day) %></td>
          <td style="padding: 5px"><%= tryb { I18n.l(record.enter, format: :attendance_time_only) } %></td>
          <td style="padding: 5px"><%= tryb { I18n.l(record.leave, format: :attendance_time_only) } %></td>
          <td style="padding: 5px"><%= tryb { I18n.l(record.break_enter1, format: :attendance_time_only) } %></td>
          <td style="padding: 5px"><%= tryb { I18n.l(record.break_leave1, format: :attendance_time_only) } %></td>
