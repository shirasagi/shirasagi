    </nav>

    <table class="index">
      <tbody>
      <% date = @cur_month %>
      <% while date <= @cur_month.end_of_month %>
        <% if date.day == 1 || date.day == 16 %>
          <tr style="background-color: #ddd">
            <th style="padding: 5px; width: 7.5em;">日付</th>
            <th style="padding: 5px; width: 3.5em;">出勤</th>
