<div class="attendance-box monthly">
  <h2 class="attendance-box-title h4"><%= t('gws/attendance.formats.time_card_name', month: I18n.l(@cur_month.to_date, format: :attendance_year_month)) %></h2>
  <div class="attendance-box-main main">
    <%= render 'time_card_nav' %>

    <% if @item.blank? %>
      <p><%= t('gws/attendance.no_time_cards') %></p>
    <% else %>
      <%= render 'time_card' %>
    <% end %>
  </div>
</div>
