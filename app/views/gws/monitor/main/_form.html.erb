<%= jquery do %>
  Gws_Monitor_Topic.renderForm({ maxDate: "<%= @cur_site.schedule_max_at.strftime('%Y/%m/%d') %>" });
<% end %>

<dl class="see">
  <dt class="required"><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name, autofocus: true %></dd>

  <dt><%= @model.t :spec_config %><%= @model.tt :spec_config %></dt>
  <dd><%= f.select :spec_config, @item.spec_config_options %></dd>

  <dt><%= @model.t :notice_state %><%= @model.tt :notice_state %></dt>
  <dd><%= f.select :notice_state, @item.notice_state_options, include_blank: t('gws/monitor.options.notice_state.none') %></dd>

  <dt><%= @model.t :due_date %><%= @model.tt :due_date %></dt>
  <dd><%= f.text_field :due_date, class: 'datetime', value: tryb { @item.due_date.strftime('%Y/%m/%d %H:%M') } %></dd>

  <dt><%= @model.t :mode %><%= @model.tt :mode %></dt>
  <dd><%= f.select :mode, @item.mode_options %></dd>

  <%= f.hidden_field :permit_comment, value: 'allow' %>
  <%= f.hidden_field :severity %>
</dl>
