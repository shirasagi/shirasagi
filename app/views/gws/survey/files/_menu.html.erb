<nav class="nav-menu gws-survey">
  <% if params[:action] =~ /index/ %>
    <% if @model.allowed?(:edit, @cur_user, site: @cur_site) %>
      <%= link_to t('ss.links.new'), action: :new %>
    <% end %>
  <% elsif params[:action] =~ /destroy_all/ %>
    <%= link_to t('ss.links.back_to_index'), action: :index %>
  <% elsif params[:action] =~ /new|create|lock|destroy_all/ %>
    <%= link_to t('ss.links.back_to_index'), gws_survey_readables_path %>
    <%= link_to t('ss.links.print'), action: :print %>
  <% elsif params[:action] =~ /edit|update|delete|move|others/ %>
    <%= link_to t('ss.links.print'), action: :print, id: @item %>
    <% if @cur_form.file_editable? %>
      <%= link_to t('ss.links.delete'), action: :delete, id: @item %>
    <% end %>
    <%= link_to t('ss.links.back_to_index'), gws_survey_readables_path %>
  <% else %>
    <% if @item.allowed?(:edit, @cur_user, site: @cur_site) %>
      <%= link_to t('ss.links.edit'), action: :edit, id: @item %>
    <% end %>
    <% if @item.allowed?(:delete, @cur_user, site: @cur_site) %>
      <%= link_to t('ss.links.delete'), action: :delete, id: @item %>
    <% end %>
    <%= link_to t('ss.links.back_to_index'), gws_survey_readables_path %>
  <% end %>
</nav>
