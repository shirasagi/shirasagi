<div class="list-head-search">
  <%= form_for :s, url: "", html: { class: "index-search", method: :get } do |f| %>
    <%= f.select :sort, @model.sort_options, {}, { data: { controller: "ss--submit-on-change" } } %>
    <%= f.select :answered_state, @model.answered_state_options, {}, { data: { controller: "ss--submit-on-change" } } %>
    <%= f.text_field :keyword, style: "width: 220px;" %>
    <input type="submit" value="<%= t('ss.buttons.search') %>" class="btn"/>
  <% end %>
</div>
