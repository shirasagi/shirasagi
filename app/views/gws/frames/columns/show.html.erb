<div class="gws-column-item" data-id="<%= item.id %>">
  <div class="main-box">
    <div class="gws-column-item-drag-handle">
      <h2 class="header"><%= item.class.model_name.human %></h2>
      <%= md_icons.outlined "drag_handle", class: "gws-column-item-drag-handle-icon" %>
    </div>

    <%= error_messages_for :item %>

    <div class="gws-column-item-preview" data-controller="ss--click-disabler">
      <dl class="see gws-column-see">
        <%= render(item.column_form_partial_path, column: item, object_name: 'custom', value: nil) %>
      </dl>
    </div>
    <hr class="gws-column-item-divider">
    <div class="gws-column-item-toolbar-list" data-controller="gws--column--item-toolbar">
      <div class="gws-column-item-toolbar-item-group">
        <div class="gws-column-item-toolbar-item gws-column-item-edit">
          <%= link_to edit_gws_frames_column_path(id: item, ref: ref), class: "btn", title: I18n.t("ss.links.edit"), data: { turbo: true } do %>
            <%= md_icons.outlined "edit", size: 15, style: "vertical-align: -3px" %>
          <% end %>
        </div>
        <div class="gws-column-item-toolbar-item gws-column-item-detail">
          <%= button_tag name: "detail", type: :button, class: "btn btn-gws-column-item-detail", title: t("gws/column.links.edit_in_detail"), data: { ref: edit_gws_apis_column_path(form_id: item.form, id: item, ref: ref) } do %>
            <%= md_icons.outlined "open_in_new", size: 15, style: "vertical-align: -3px" %>
          <% end %>
        </div>
        <% if item.class == Gws::Column::RadioButton %>
          <div class="gws-column-item-toolbar-item gws-column-item-branch">
            <%= link_to edit_gws_frames_column_path(id: item, ref: ref, form: 'branch'), class: "btn", title: t("gws/column.links.edit_conditional_branch"), data: { turbo: true } do %>
              <%= md_icons.outlined "format_list_bulleted", size: 15, style: "vertical-align: -3px" %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="gws-column-item-toolbar-item-group">
        <div class="gws-column-item-toolbar-item gws-column-item-delete">
          <%= button_tag name: "delete", type: :button, class: "btn btn-red btn-gws-column-item-delete", title: t("ss.links.delete"), data: { ref: gws_frames_column_path(id: item, ref: ref) } do %>
            <%= md_icons.outlined "delete", size: 15, style: "vertical-align: -3px" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
