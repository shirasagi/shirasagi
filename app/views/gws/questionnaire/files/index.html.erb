<div class="index gws-questionnaire">
  <%= render file: "_list_head" %>

  <div class="form-table">
    <div class="form-table-header" style="display: none;">
      <div class="form-table-header-inner">
        <table>
          <thead>
          <tr>
            <% @cur_form.columns.each do |column| %>
              <th><%= column.name %></th>
            <% end %>
          </tr>
          </thead>
        </table>
      </div>
    </div>
    <div class="form-table-body">
      <div class="form-table-body-inner">
        <table>
          <thead>
          <tr>
            <% @cur_form.columns.order_by(order: 1, name: 1).each do |column| %>
              <th><%= column.name %></th>
            <% end %>
          </tr>
          </thead>
          <tbody>
          <% @items.each do |item| %>
          <tr>
            <% @cur_form.columns.order_by(order: 1, name: 1).each do |column| %>
              <% column_value = item.column_values.where(column_id: column.id).first %>
              <td>
                <%= column.try(:prefix_label) %>
                <%= br(column_value ? column_value.value : '') %>
                <%= column.try(:postfix_label) %>
              </td>
            <% end %>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= paginate @items if @items.try(:current_page) %>

