<ul class="list-items">
  <% if @items.present? %>
    <% @items.each do |item| %>
      <li class="list-item <%= item.unseen?(@cur_user) ? 'unseen' : 'seen' %>">
        <div class="info">
          <%= link_to item.subject_with_group, { action: :show, id: item.id, site: (item.try(:group_id) || @cur_site.id) }, class: "title" %>
          <div class="meta">
            <span class="datetime"><%= item.display_send_date %></span>
          </div>
        </div>
      </li>
    <% end %>
  <% else %>
    <li class="list-item empty">
      <div class="info"><%= t("gws/memo/message.notice.no_recents") %></div>
    </li>
  <% end %>
</ul>
