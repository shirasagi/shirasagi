<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <dt><%= @model.t :sender_name %></dt>
  <dd><%= @item.sender_name %></dd>

  <dt><%= @model.t :signature %></dt>
  <dd><%= br @item.signature %></dd>

  <dt><%= @model.t :category_ids %></dt>
  <dd>
    <% @item.categories.each do |category| %>
      <% next unless category %>
      <span class="gws-category-label" style="<%= category_label_css(category) %>"><%= category.trailing_name %></span>
    <% end %>
  </dd>
</dl>
