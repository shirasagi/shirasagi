<div class="index">
  <%= render file: '_list_head' %>
  <ul class="list-items ss-messages gws-memos">
    <li class="list-item-head">
      <div class="head">
        <% if @cur_folder.path == "INBOX.Sent" %>
          <span class="field to"><%= @model.t :to %></span>
        <% else %>
          <span class="field from"><%= @model.t :from %></span>
        <% end %>
        <span class="field title"><%= @model.t :subject %></span>
        <span class="field datetime"><%= @model.t :display_send_date %></span>
        <span class="field size"><%= @model.t :size %></span>
      </div>
    </li>

    <% @items.each do |item| %>
      <% if @cur_folder.sent_box? || @cur_folder.draft_box? %>
        <li class="list-item seen">
      <% else %>
        <li class="list-item <%= item.unseen?(@cur_user) ? 'unseen' : 'seen' %>">
      <% end %>

        <label class="check">
          <%= check_box_tag 'ids[]', item.id %>
        </label>

        <div class="icon icon-star <%= item.star?(@cur_user) ? 'on' : 'off' %>">
          <%= link_to options={action: :toggle_star, id: item.id}, method: :post do %>
            <i class="material-icons md-18">&#xE838;</i>
          <% end %>
        </div>

        <div class="icon icon-attachment">
          <i class="material-icons md-15"><%== item.attachments? ? '&#xE226;' : '&nbsp;' %></i>
        </div>

        <div class="info">
          <% if @cur_folder.sent_box? == "INBOX.Sent" %>
            <span class="field to">
              <%= item.display_to.first if item.to.present? %>
            </span>
          <% else %>
            <span class="field from"><%= item.user.long_name %></span>
          <% end %>
          <%= link_to item.display_subject, { action: :show, id: item.id }, class: 'field title' %>
          <span class="field datetime"><%= item.display_send_date %></span>
          <span class="field size"><%= item.display_size %></span>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<%= paginate @items if @items.try(:current_page) %>

<%= jquery do %>
  Gws_Memo_Message.render();

  <% if %w(INBOX.Sent INBOX.Draft).exclude?(params[:folder]) %>
    $(".list-item").draggable({
      zIndex: 100,
      opacity: 0.75,
      cursorAt: {top: 16, left: 5},
      helper: function(){
        var checkbox = $(this).find("label.check input[name='ids[]']");
        if (!checkbox.prop("checked")){ checkbox.prop("checked", true) };

        var checked = $(".list-item input:checkbox:checked");
        var helper = $('<div style="background-color: lightgreen; padding: 2px 10px;"></div>');
        helper.html(checked.length + "<%= t('gws/memo/message.select_check') %>");

        return helper;
      }
    });
  <% end %>

  $(".droppable").droppable({
    tolerance: "pointer",
    drop: function(e, obj){
      var folder = $(this).find("td a.title");
      var form = Gws_Memo_Message.buildForm("<%= move_all_gws_memo_messages_path(folder: params[:folder]) %>", folder.text() + "<%= t('gws/memo/message.confirm.move_drop') %>");
      form.append($("<input/>", {name: "path", value: folder.attr("data-path"), type: "hidden"} ));
      form.appendTo(document.body).submit();
    }
  });
<% end %>
