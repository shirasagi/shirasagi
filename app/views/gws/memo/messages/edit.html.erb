<%= jquery do %>
  Gws_Memo_Message.render();
  $("#addon-basic").hide();
<% end %>

<% @crud_buttons = proc do |f| %>
  <% if @item.draft? %>
    <%= f.submit t('ss.buttons.send'), class: 'btn-primary save js-send' %>
    <%= f.submit t('ss.buttons.draft_save'), class: 'btn-default js-save' %>
    <%= f.button t('ss.buttons.cancel'), class: 'btn-default', type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;" %>
  <% else %>
    <%= f.submit t('ss.buttons.save'), class: 'btn-primary save js-send' %>
    <%= f.button t('ss.buttons.cancel'), class: 'btn-default', type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;" %>
  <% end %>
<% end %>

