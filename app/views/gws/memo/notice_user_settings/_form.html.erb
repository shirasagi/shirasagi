<% render_notice_user_setting = proc do |type| %>
  <dt class="depth-2"><%= @model.t("notice_#{type}_user_setting") %></dt>
  <dd></dd>
  <dt class="depth-3"><%= t("modules.gws/memo/notice")%></dt>
  <dd>
    <%= f.select "notice_#{type}_user_setting", @item.send("notice_#{type}_user_setting_options") %>
  </dd>
  <dt class="depth-3"><%= t("gws/memo/notice_user_settings.send_mail_setting") %></dt>
  <dd>
    <%= f.select "notice_#{type}_email_user_setting", @item.send("notice_#{type}_email_user_setting_options") %>
  </dd>
