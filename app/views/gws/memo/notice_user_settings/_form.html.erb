  <% render_notice_user_setting.call(:monitor) %>
  <% render_notice_user_setting.call(:survey) %>
  <% render_notice_user_setting.call(:board) %>
  <% render_notice_user_setting.call(:faq) %>
  <% render_notice_user_setting.call(:qna) %>
  <% render_notice_user_setting.call(:discussion) %>
  <% render_notice_user_setting.call(:report) %>
  <% render_notice_user_setting.call(:announcement) %>
