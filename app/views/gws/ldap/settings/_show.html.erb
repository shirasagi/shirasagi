<dl class="see">
  <dt><%= @model.t :ldap_use_state %></dt>
  <dd><%= @item.label(:ldap_use_state) || t("ldap.options.use_state.use_sys") %></dd>

  <% if @item.ldap_use_state_individual? %>
    <dt><%= @model.t :ldap_url %></dt>
    <dd><%= @item.ldap_url %></dd>

    <dt><%= @model.t :ldap_openssl_verify_mode %></dt>
    <dd><%= @item.label(:ldap_openssl_verify_mode) %></dd>

    <%
      scheme = @cur_site.canonical_scheme.presence || SS.config.gws.canonical_scheme
      domain = @cur_site.canonical_domain.presence || SS.config.gws.canonical_domain
      path = gws_login_path(site: @cur_site)
      url = gws_login_url(protocol: scheme, host: domain, site: @cur_site)
    %>
    <dd class="wide"><%= t("ldap.gws_login_notice_html", gws_login_path: path, gws_login_url: url) %></dd>
  <% end %>
</dl>
