<dl class="see">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :description %><%= @model.tt :description %></dt>
  <dd><%= f.text_area :description %></dd>

  <dt><%= @model.t :order %><%= @model.tt :order %></dt>
  <dd><%= f.number_field :order %></dd>

  <dt><%= @model.t :release_date %><%= @model.tt :release_date %></dt>
  <dd><%= f.text_field :release_date, class: 'datetime js-date', value: tryb { @item.release_date.strftime("%Y/%m/%d") } %></dd>

  <dt><%= @model.t :close_date %><%= @model.tt :close_date %></dt>
  <dd><%= f.text_field :close_date, class: 'datetime js-date', value: tryb { @item.close_date.strftime("%Y/%m/%d") } %></dd>

  <dt><%= @model.t :anonymous_state %><%= @model.tt :anonymous_state %></dt>
  <dd><%= f.select :anonymous_state, @item.anonymous_state_options %></dd>

  <dt><%= @model.t :answer_limit_state %><%= @model.tt :answer_limit_state %></dt>
  <dd><%= f.select :answer_limit_state, @item.answer_limit_state_options, include_blank: true %></dd>

  <dt><%= @model.t :memo %><%= @model.tt :memo %></dt>
  <dd><%= f.text_area :memo %></dd>
</dl>
