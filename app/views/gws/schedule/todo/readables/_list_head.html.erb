<div class="list-head">
  <label class="check"><input type="checkbox" /></label>

  <div class="list-head-action">
    <%= ss_button_to t("ss.links.delete"), url_for(action: :soft_delete_all), model: @model, class: "disable-all btn btn-list-head-action", method: "post", confirm: t('ss.confirm.soft_delete') %>
    <%= ss_button_to t("gws/schedule/todo.links.finish"), url_for(action: :finish_all), model: @model, class: "finish-all btn btn-list-head-action", method: "post", confirm: t('gws/schedule/todo.confirm.finish_all') %>
    <%= ss_button_to t("gws/schedule/todo.links.revert"), url_for(action: :revert_all), model: @model, class: "revert-all btn btn-list-head-action", method: "post", confirm: t('gws/schedule/todo.confirm.revert_all') %>
  </div>

  <div class="list-head-search">
    <%= render template: '_search' %>
  </div>
</div>
