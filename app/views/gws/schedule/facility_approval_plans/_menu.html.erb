<% return if params[:action] =~ /index/ %>

<nav class="nav-menu">
  <% if params[:action] =~ /edit|update|soft_delete/ %>
    <%= link_to(t('ss.links.back_to_show'), { action: :show, id: @item }, class: "back-to-show") %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% else %>
    <%= link_to t('ss.links.edit'), action: :edit, id: @item if @item.allowed?(:edit, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.delete'), { action: :soft_delete, id: @item }, class: :delete) if @model.allowed?(:delete, @cur_user, site: @cur_site) %>
    <%= link_to(t('ss.links.back_to_index'), { action: :index }, class: "back-to-index") %>
  <% end %>
</nav>
