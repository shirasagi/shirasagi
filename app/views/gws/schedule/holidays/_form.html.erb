<%= jquery do %>
  Gws_Schedule_Plan.renderForm();
  $('#item_color').colorPicker().data('colorMode', 'HEX');
<% end %>

<dl class="see">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name, autofocus: true %></dd>

  <dt><%= @model.t :term %><%= @model.tt :term %></dt>
  <dd>
    <div class="dates-field">
      <%= f.text_field :start_on, class: "date start", value: tryb{@item.start_on.strftime("%Y/%m/%d")} %>
      - <%= f.text_field :end_on, class: "date end", value: tryb{@item.end_on.strftime("%Y/%m/%d")} %>
    </div>
  </dd>

  <dt><%= @model.t :color %><%= @model.tt :color %></dt>
  <dd><%= f.text_field :color, style: 'width: 8em' %></dd>
</dl>
