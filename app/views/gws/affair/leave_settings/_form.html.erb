<dl class="see">
  <dt><%= @model.t :year_id %></dt>
  <dd><%= @cur_year.name %></dd>

  <dt><%= @model.t :target_user_id %><%= @model.tt :target_user_id %></dt>
  <dd>
    <%= f.hidden_field "target_user_id", value: "", class: "hidden-ids" %>
    <%= link_to t("ss.apis.users.index"), gws_apis_users_path(single: true), class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead><tr><th class="name"><%= Gws::User.t :name %></th><th class="deselect"></th></tr></thead>
      <tbody>
        <% if @item.target_user %>
          <tr data-id="<%= @item.target_user_id %>">
            <td><%= f.hidden_field "target_user_id", value: @item.target_user_id, id: nil %> <%= @item.target_user.name %></td>
            <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>
