<% if @cur_year %>
<div class="list-search">
  <%= @cur_year.name %> <%= t 'gws/staff_record.staff_records' %>
  <%= render partial: 'search' %>
</div>
<% end %>

<div class="main-box">
  <% if @items.blank? %>
    <div class="gws-staff-record-no-data"><%= I18n.t('gws/staff_record.errors.no_data') %></div>
  <% else %>
    <table class="index data-table">
      <thead>
        <tr>
          <th><%= @model.t :section_name %></th>
          <th><%= @model.t :charge_name %></th>
          <th><%= @model.t :title_name %></th>
          <th><%= @model.t :name %></th>
          <th><%= @model.t :kana %></th>
          <th><%= @model.t :tel_ext %></th>
          <th><%= @model.t :remark %></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.send :section_name %></td>
          <td><%= link_to item.charge_name, { action: :show, id: item.id } %></td>
          <td><%= item.send :title_name %></td>
          <td><%= item.send :name %></td>
          <td><%= item.send :kana %></td>
          <td><%= item.send :tel_ext %></td>
          <td><%= item.send :remark %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<%= paginate @items if @items.try(:current_page) %>
