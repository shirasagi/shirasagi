<% if @cur_year %>
<div class="list-search">
  <h2 class="title">
    <%= @cur_year.name %> <%= t 'mongoid.models.gws/staff_record/seating' %>
  </h2>
  <%= render partial: 'search' %>
</div>
<% end %>

<div class="main-box">
  <table class="index data-table">
    <thead>
      <tr>
        <th style="width: 40%"><%= @model.t :name %></th>
        <th><%= @model.t :remark %></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item.url %></td>
          <td><%= item.send :remark %></td>
        </tr>
      <% end %>

      <% if @items.blank? %>
        <tr><td colspan="10"><%= I18n.t('gws/staff_record.errors.no_data') %></td></tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @items if @items.try(:current_page) %>
