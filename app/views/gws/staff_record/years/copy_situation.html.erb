<%= form_for :item, url: { action: :copy_situation }, html: { method: :post } do |f| %>
<%= error_messages_for :item %>

<div class="addon-views">
  <div class="addon-view" id="addon-basic">
    <div class="addon-head"><h2><%= t('gws/staff_record.confirm.copy_situation') %></h2></div>
    <div class="addon-body">
      <%= render template: '_delete' %>
    </div>
  </div>
</div>

<footer class="send">
  <%= f.submit t('ss.buttons.run'), class: 'btn-primary run', data: { disable_with: t("ss.buttons.running") } %>
  <%= f.button t('ss.buttons.cancel'), class: 'btn-default', type: :reset, onclick: "location.href='#{url_for(action: :show)}'; return false;" %>
</footer>
<% end %>
