<dl class="see mod-jmaxml-recipient">
  <dt><%= @model.t :recipient_user_ids %><%= @model.tt :recipient_user_ids %></dt>
  <dd>
    <%= f.hidden_field "recipient_user_ids[]", value: "", class: "hidden-ids" %>
    <%= link_to t("cms.apis.users.index"), cms_apis_users_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead>
      <tr>
        <th class="name"><%= Cms::User.t :name %></th>
        <th style="width: 20%;"></th>
      </tr>
      </thead>
      <tbody>
      <% @item.recipient_users.each do |user| %>
        <tr data-id="<%= user.id %>">
          <td><%= f.hidden_field "recipient_user_ids[]", value: user.id %> <%= user.name %></td>
          <td style="width: 20%;"><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </dd>
</dl>

