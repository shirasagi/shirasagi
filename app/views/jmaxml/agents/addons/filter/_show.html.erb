<% cid = params[:cid].presence || params[:id] %>
<dl class="see mod-rss-weather-xml-filter">
  <dt class="wide"></dt>
  <dd class="wide">
    <% path = jmaxml_filters_path(cid: cid) %>
    <%= link_to t("jmaxml.manage_filter"), path, class: :btn %>
  </dd>
  <dd class="wide">
    <table class="index">
      <tbody>
      <% @item.filters.each do |filter| %>
      <tr>
        <td><%= link_to filter.name, jmaxml_filter_path(cid: cid, id: filter.id) %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </dd>
</dl>
