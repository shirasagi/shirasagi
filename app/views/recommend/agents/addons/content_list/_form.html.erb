<%= code_editor ".mod-mod-recommend-contentlist .html", mode: :html %>

<dl class="see mod-recommend-contentlist">
  <dt><%= @model.t :limit %><%= @model.tt :limit %></dt>
  <dd><%= f.number_field :limit %></dd>

  <dt><%= @model.t :upper_html %><%= @model.tt :upper_html %></dt>
  <dd><%= f.text_area :upper_html, class: :html %></dd>

  <dt><%= @model.t :loop_html_id %><%= @model.tt :loop_html_id %></dt>
  <dd><%= f.select :loop_html_id, ancestral_loop_htmls, include_blank: " " %></dd>

  <dt><%= @model.t :loop_html %><%= @model.tt :loop_html %></dt>
  <dd><%= f.select :loop_html_id, ancestral_loop_htmls, include_blank: " " %></dd>
  <dd><%= f.text_area :loop_html, class: :html, style: "height: 100px;" %></dd>

  <dt><%= @model.t :lower_html %><%= @model.tt :lower_html %></dt>
  <dd><%= f.text_area :lower_html, class: :html %></dd>

  <dt><%= @model.t :exclude_paths %><%= @model.tt :exclude_paths %></dt>
  <dd><%= f.text_area :exclude_paths, value: @item.exclude_paths.join("\n"), style: "height: 100px;" %></dd>
</dl>
