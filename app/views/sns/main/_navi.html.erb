  <h2>
    <%= link_to sns_cur_user_account_path do %>
      <i class="material-icons">&#xE853;</i><%= t("sns.account") %>
    <% end %>
  </h2>

  <% if @cur_setting.menu_file_visible? %>
    <h2>
      <%= link_to sns_cur_user_files_path do %>
