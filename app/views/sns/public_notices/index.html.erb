<div class="index notices">
  <div class="list-head"><%= t "sys.notice" %></div>

  <ul class="list-items">
    <% @items.each do |item| %>
    <li class="list-item">
      <div class="info">
        <%= link_to item.name, { action: :show, id: item}, class: "title notice-severity-#{item.notice_severity}" %>
      </div>
      <div class="meta">
        <span class="datetime"><%= ss_time_tag item.released %></span>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<%= paginate @items if @items.try(:current_page) %>
