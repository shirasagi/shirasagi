<dl class="see">
  <dt><%= @model.t :map_search_options %></dt>
  <dd></dd>

  <% @item.map_search_options.each_with_index do |options, i| %>
    <dt class="depth-2"><%= @model.t :column_name %> (<%= i + 1 %>)</dt>
    <dd class="">
      <%= options['name'] %>
    </dd>

    <dt class="mt-1 depth-2"><%= @model.t :column_values %></dt>
    <dd class="mt-1">
      <%= options['values'].join(" , ") if options['values'] %>
    </dd>
  <% end %>
</dl>
