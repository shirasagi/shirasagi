<%= jquery do %>
  $(".reset").on("click", function () {
    $(".prop").prop("checked", false);
    $(".keyword").val("");
    return false;
  });
<% end %>

<%= form_tag search_path, multipart: true, method: "get" do %>
  <%= render "settings" %>
  <footer class="send">
    <%= submit_tag t('facility.submit.search'), name: nil %>
    <%= submit_tag t('facility.submit.reset'), name: nil, class: :reset %>
  </footer>
<% end %>
