<%= html_editor ".column-html", height: "180px", advanced: Cms::EditorExtension.allowed?(:use, @cur_user, site: @cur_site) %>

<dl class="see">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name %></dd>
  <dt><%= @model.t :html %></dt>
  <dd><%= f.text_area :html, class: "column-html", style: "height:180px;" %></dd>
  <dt><%= @model.t :state %><%= @model.tt :state %></dt>
  <dd><%= f.select :state, @item.state_options %></dd>
  <dt><%= @model.t :order %><%= @model.tt :order %></dt>
  <dd><%= f.number_field :order %></dd>
</dl>
