<% if @cur_page.html.present? || @cur_page.text.present? %>
<article class="body">
  <% if @cur_page.html.present? %>
    <% if SS.config.cms.html_editor == "markdown" %>
    <%== ::Redcarpet::Markdown.new(Redcarpet::Render::HTML).render(@cur_page.html) %>
    <% else %>
    <%== @cur_page.html %>
    <% end %>
  <% else %>
    <p><%= auto_link br @cur_page.text %></p>
  <% end %>
</article>
<% end %>
