<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <dt><%= @model.t :basename %></dt>
  <dd>
    <%= @item.public? ? link_to(@item.full_url, @item.full_url, target: "_blank") : @item.full_url %>
    (
    <%= link_to :"cms.preview_pc_page", cms_preview_path(path: @item.filename), target: "_blank" %>
    |
    <%= link_to :"cms.preview_mobile_page", cms_mobile_preview_path(path: @item.filename), target: :_blank %>
    )
  </dd>

  <dt><%= @model.t :layout_id %></dt>
  <dd><%= @item.layout.name %></dd>
</dl>
