<% @index_title = proc do |item| %>
  <% link = item.respond_to?(:view_route) ? contents_path(item) : { action: :show, id: item } %>
  <%= link_to item.name, link, class: "title" %>
<% end %>

<div class="index">
  <%= render file: "_list_head" %>

  <ul class="list-items">
    <% @items.each do |item| %>
      <li class="list-item">
        <nav class="tap-menu">
          <%= link_to t('ss.links.show'), action: :show, id: item if item.allowed?(:read, @cur_user, site: @cur_site) %>
          <%= link_to t('ss.links.edit'), action: :edit, id: item if item.allowed?(:edit, @cur_user, site: @cur_site) %>
          <%= link_to t('ss.links.delete'), action: :delete, id: item if item.allowed?(:delete, @cur_user, site: @cur_site) %>

          <% if @model.collection_name == :cms_nodes %>
            <%= link_to t('ss.links.view_site'), item.full_url, target: :_blank if item.public? %>
            <%= link_to t('ss.links.pc_preview'), cms_preview_path(path: item.preview_path), target: :_blank %>
            <%= link_to(t('ss.links.mobile_preview'), cms_preview_path(path: item.mobile_preview_path), target: :_blank) if @cur_site.mobile_enabled? %>
          <% elsif @model.collection_name == :cms_pages %>
            <%= link_to t('ss.links.view_site'), item.full_url, target: :_blank if item.public? %>
            <%= link_to t('ss.links.pc_preview'), cms_preview_path(path: item.preview_path), target: :_blank %>
            <%= link_to(t('ss.links.mobile_preview'), cms_preview_path(path: item.mobile_preview_path), target: :_blank) if @cur_site.mobile_enabled? %>
          <% end %>

          <% if item.try(:image) %>
            <%= link_to image_tag(item.image.thumb_url), item.image.url, { class: "thumb", target: "_blank" } %>
          <% elsif item.try(:image?) %>
            <%= link_to image_tag(item.thumb_url), item.url, { class: "thumb", target: "_blank" } %>
          <% end %>
        </nav>

        <label class="check"><input type="checkbox" name="ids[]" value="<%= item.id %>"/></label>
        <div class="info">
          <% if @index_title %>
            <% @index_title.call item %>
          <% else %>
            <% title = item.try(:name) || item.try(:title) || item.try(:filename) || "##{item.id}" %>
            <%= link_to title, { action: :show, id: item }, class: "title" %>
          <% end %>

          <div class="meta">
            <% if @index_meta %>
              <% @index_meta.call item %>
            <% else %>
              <span class="id">#<%= item.id %></span>
              <% if item.try(:updated) %>
                <span class="datetime"><%= item.updated.strftime("%Y/%m/%d %H:%M") %></span>
              <% end %>
              <% if item.try(:filename) %>
                <span class="filename"><%= File.basename item.filename %></span>
              <% end %>
              <% if item.try(:route) %>
                <span class="route"><%= t "modules.#{item.route.sub(/\/.*/, '')}" %></span>
              <% end %>
              <% if item.try(:status) %>
                <%= colored_state_label(item) %>
              <% end %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<%= paginate @items if @items.try(:current_page) %>
