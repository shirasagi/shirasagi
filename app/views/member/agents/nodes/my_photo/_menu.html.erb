<%== render_mypage_navi current_node: @cur_node %>

<nav class="mypage-nav nav-menu">
  <% if params[:action] =~ /index/ %>
    <%= link_to t('ss.links.new_post'), "#{@cur_node.url}new" %>
  <% elsif params[:action] =~ /show/ %>
    <%= link_to t('ss.links.edit'), "#{@cur_node.url}#{@item.id}/edit" %>
    <%= link_to t('ss.links.delete'), "#{@cur_node.url}#{@item.id}/delete" %>
    <%= link_to t('ss.links.back_to_index'), @cur_node.url %>
  <% else %>
    <%= link_to t('ss.links.back'), @cur_node.url %>
  <% end %>
</nav>
