<%= jquery do %>
  $("input[type=submit]").on("click", function(e) {
    if ($("#item_state").val() === 'public') {
      $("<input />").attr("type", "hidden")
        .attr("name", "item[workflow_reset]")
        .attr("value", "1")
        .appendTo("#item-form");
    }
  });
<% end %>

<%= render partial: "menu" %>

<%= form_for :item, url: @cur_node.url, html: { method: :post, multipart: true, autocomplete: :off, class: "mypage-new member-photo-page" } do |f| %>

<div class="mypage-form member-photo-page">
  <%= error_messages_for :item, header_message: false %>

  <div class="columns">
    <%= render partial: "form", locals: { f: f }  %>
    <% @model.addons.each do |addon| %>
      <% file = "#{Rails.root}/app/views/#{addon.path}/view/_form.html.erb" %>
      <%= render file: file, locals: { f: f } if File.exists?(file) %>
    <% end %>
    <dl class="column">
      <dt><%= @model.t :state %></dt>
      <dd><%= f.select :state, @item.state_options %></dd>
    </dl>
  </div>

  <footer class="send">
    <%= f.submit t("ss.buttons.save") %>
    <%= f.button t("ss.buttons.cancel"), type: :reset, onclick: "location.href='#{@cur_node.url}'; return false;" %>
  </footer>
</div>

<% end %>
