<%= render partial: "menu" %>

<%= form_for :item, url: "#{@cur_node.url}#{@item.id}", html: { method: :delete, id: "item-form", multipart: true, class: "mypage-delete member-photo-page" } do |f| %>
  <%= error_messages_for :item %>

  <div class="mypage-form member-blog-page">
    <div class="columns">
      <%= render template: "_delete" %>
    </div>

    <footer class="send">
      <%= f.submit t("ss.buttons.delete"), class: 'btn-danger delete' %>
      <%= f.button t("ss.buttons.cancel"), class: 'btn-default', type: :reset, onclick: "location.href='#{@cur_node.url}'; return false;" %>
    </footer>
  </div>
<% end %>
