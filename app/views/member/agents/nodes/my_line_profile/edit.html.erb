<%= render partial: "menu" %>
<%= form_for :item, url: "#{@cur_node.url}", html: { method: :put, multipart: true, autocomplete: :off, class: "mypage-edit member-profile" } do |f| %>

<div class="mypage-form member-profile">
  <%= error_messages_for :item, header_message: false %>

  <div class="columns">
    <%= render template: "_basic_form", locals: { f: f }  %>
    <%= render template: "_condition_form", locals: { f: f }  %>
  </div>

  <footer class="send">
    <%= f.submit t("ss.buttons.save"), data: { disable_with: t("ss.buttons.saving") } %>
    <%= f.button t("ss.buttons.cancel"), type: :reset, onclick: "location.href='#{@cur_node.url}'; return false;" %>
  </footer>
</div>

<% end %>
