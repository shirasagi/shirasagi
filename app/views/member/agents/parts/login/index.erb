<% if @cur_member %>
  <%= link_to "#{@cur_member.name}さん", "#{@login_link_url}", class: "member", rel: "nofollow" %>
  <%= link_to t("ss.logout"), "#{@login_node.url}logout.html?ref=#{@cur_path}", class: "logout", rel: "nofollow" %>
<% else %>
  <%= link_to t("ss.login"), "#{@login_link_url}", class: "login", rel: "nofollow" %>
<% end %>
