<% if @items.present? %>
  <div class="invited-groups">
    <h3>招待されたグループがあります。</h3>
    <table class="index mypage-index member-group-page">
      <thead>
      <tr>
        <th class="name">名前</th>
        <th class="operation">参加 | 辞退</th>
      </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td class="item name"><%= link_to item.name, "#{@my_group_node.url}#{item.id}/" %></td>
          <td class="item operation">
            <%= link_to t("member.button.accept"), "#{@my_group_node.url}#{item.id}/accept" %>
            |
            <%= link_to t("member.button.reject"), "#{@my_group_node.url}#{item.id}/reject" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>
