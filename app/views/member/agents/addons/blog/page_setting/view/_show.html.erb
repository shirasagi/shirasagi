<dl class="column">
  <dt><%= @model.t :image_id %></dt>
  <dd><%= image_tag @item.thumb_url %></dd>
</dl>

<dl class="column">
  <dt><%= @model.t :description %></dt>
  <dd><%= @item.description %></dd>
</dl>

<dl class="column">
  <dt><%= @model.t :genres %></dt>
  <dd><%=br @item.genres.join("\n") %></dd>
</dl>

<% if @item.blog_page_locations.present? %>
<dl class="column">
  <dt><%= @model.t :blog_page_locations %></dt>
  <dd><%=br @item.blog_page_locations.join("\n") %></dd>
</dl>
<% end %>
