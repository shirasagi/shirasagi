<% return "" unless @locations.present? %>

<dl class="column blog_page-locations">
  <dt><%= @model.t :blog_page_locations %></dt>
  <dd>
    <%= f.hidden_field "blog_page_location_ids[]", value: "" %>
    <% @locations.each do |loc| %>
      <label>
        <%= f.check_box("blog_page_location_ids[]", {}, loc.id) %>
        <%= loc.name %>
      </label>
    <% end %>
  </dd>
</dl>
