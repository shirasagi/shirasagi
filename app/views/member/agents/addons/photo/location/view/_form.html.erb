<dl class="column photo-locations">
  <dt><%= @model.t :photo_locations %></dt>
  <dd>
    <%= f.hidden_field "photo_location_ids[]", value: "" %>
    <% if @locations.present? %>
      <% @locations.each do |loc| %>
        <label>
          <%= f.check_box("photo_location_ids[]", {}, loc.id) %>
          <%= loc.name %>
        </label>
      <% end %>
    <% end %>
  </dd>
</dl>
