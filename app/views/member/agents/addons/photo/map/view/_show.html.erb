<% return if @item.map_points.blank? %>

<%= javascript_include_tag "//maps.googleapis.com/maps/api/js?v=3" %>
<%= jquery do %>
  Map.load("#map-canvas");
  Map.setMarkers(<%= raw @item.map_points.to_json %>);
<% end %>

<div class="mod-map">
  <dl class="marker-setting">
    <dt><%= @model.t :map_points %></dt>
    <dd class="marker">
      <div id="map-canvas" style="width: 100%; height: 320px"></div>
    </dd>
  </dl>
</div>
