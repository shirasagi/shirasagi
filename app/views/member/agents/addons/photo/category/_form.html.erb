<dl class="see mod-category">
  <dt><%= @model.t :photo_categories %><%= @model.tt :photo_categories %></dt>
  <dd class="wide" style="line-height: 2.5">
    <%= f.hidden_field "photo_category_ids[]", value: "" %>
    <% if @categories.present? %>
      <% @categories.each do |cate| %>
        <label>
          <%= f.check_box("photo_category_ids[]", {}, cate.id) %>
          <%= cate.name %>
        </label>
      <% end %>
    <% end %>
  </dd>
</dl>
