<dl class="see mod-line-member-additional-attributes">
  <dt><%= @item.t(:first_registered) %></dt>
  <dd><%= tryb{ @item.first_registered.strftime("%Y/%m/%d %H:%M") } %></dd>

  <dt><%= @item.t(:subscribe_richmenu_id) %></dt>
  <dd><%= @item.subscribe_richmenu_id %></dd>

  <dt><%= @item.t(:subscribe_line_message) %></dt>
  <dd><%= @item.label :subscribe_line_message %></dd>

  <% @item.each_deliver_categories do |root, children| %>
    <% if root.effective_with?(@item.deliver_category_ids) %>
      <dt><%= root.name %></dt>
      <dd><%= children.map(&:name).join(", ") %></dd>
    <% end %>
  <% end %>
</dl>
