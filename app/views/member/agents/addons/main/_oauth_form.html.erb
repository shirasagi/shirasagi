<dl class="see mod-member-formauth">
  <dt><%= @model.t "#{provider}_oauth" %><%= @model.tt "#{provider}_oauth" %></dt>
  <dd><%= f.select "#{provider}_oauth", @item.send("#{provider}_oauth_options") %></dd>
  <dd>
    <% callback_url = "#{@item.full_url}#{provider}/callback" %>
    有効にする場合、以下のコールバックURLを登録してください。<br>
    <%= tag.code callback_url %>
    <%= button_tag I18n.t('gws/share.url_copy'), type: "button", name: "clipboard-copy", class: "btn clipboard-copy-button", data: { text: callback_url } %>
  </dd>
  <dt><%= @model.t "#{provider}_client_id" %><%= @model.tt "#{provider}_client_id" %></dt>
  <dd><%= f.text_field "#{provider}_client_id" %></dd>
  <dt><%= @model.t "#{provider}_client_secret" %><%= @model.tt "#{provider}_client_secret" %></dt>
  <dd><%= f.text_field "#{provider}_client_secret" %></dd>
</dl>

<%= jquery do %>
  SS_Clipboard.renderCopy();
<% end %>
