<%= form_tag search_path, multipart: true, method: "get" do %>
  <fieldset class="name">
    <legend><%= label_tag :name, t("garbage.item") %></legend>
    <%= text_field_tag :name, @name %>
  </fieldset>

  <fieldset class="category">
    <legend><%= label_tag 'category_ids[]', t("garbage.category.setting") %></legend>
    <%= select_tag 'category_ids[]', options_for_select(@options, @category_ids.first), include_blank: "" %>
  </fieldset>

  <footer class="send">
    <%= submit_tag t('facility.submit.search'), name: nil %>
  </footer>
<% end %>
