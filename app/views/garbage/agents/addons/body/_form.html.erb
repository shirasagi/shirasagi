<dl class="see mod-garbage-body">
  <dt><%= t("garbage.category.name") %><%= @model.tt :category_ids %></dt>
  <dd>
    <%= f.hidden_field "category_ids[]", value: "", id: nil %>
    <% if @cur_node.present? %>
      <% @cur_node.st_categories.each do |cate| %>
        <label>
          <%= f.check_box("category_ids[]", {}, cate._id) %>
          <%= cate.name %>
        </label>
      <% end %>
    <% end %>
  </dd>

  <dt><%= @model.t :kana %><%= @model.tt :kana %></dt>
  <dd><%= f.text_field :kana %></dd>

  <dt><%= @model.t :remark %><%= @model.tt :remark %></dt>
  <dd><%= f.text_area :remark %></dd>
</dl>
