<%= coffee do %>
$ ->
  $(".mod-facility-additional-info .add-info").on 'click', ->
    if $(".mod-facility-additional-info").length < 10
      dd = $(".mod-facility-additional-info dd:last").clone(true)
      dt = $(".mod-facility-additional-info dt:last").clone(true)
      dd.find("input").val("")
      dd.find("textarea").val("")
      dt.find("input").val("")
      dt.find("textarea").val("")
      $(".mod-facility-additional-info dd:last").after(dt)
      $(".mod-facility-additional-info dt:last").after(dd)
    return false

  $(".mod-facility-additional-info .clear").on 'click', ->
    dd = $(this).closest("dd")
    dt = dd.prev("dt")

    if $(".mod-facility-additional-info dt").length > 2
      if dt.find("input").val() != "" || dd.find("textarea").val() != ""
        if confirm("<%= t("facility.button.del_info_confirm") %>")
          dt.remove()
          dd.remove()
      else
        dt.remove()
        dd.remove()
    else
      if dt.find("input").val() != "" || dd.find("textarea").val() != ""
        if confirm("<%= t("facility.button.del_info_confirm") %>")
          dt.find("input").val("")
          dd.find("textarea").val("")
      else
        dt.find("input").val("")
        dd.find("textarea").val("")
    return false

<% end %>

<dl class="see mod-facility-additional-info">
  <dt class="field"><%= @item.t :field %><%= @item.tt :field %></dt>
  <dd class="value"><%= @item.t :value %><%= @item.tt :value %></dd>

  <% if @item.additional_info.blank? %>
    <dt><%= text_field_tag "item[additional_info][][field]" %></dt>
    <dd>
      <%= text_area_tag "item[additional_info][][value]" %>
      <%= button_tag t("facility.button.del_info"), { type: :button, class: "clear" } %>
    </dd>
  <% end %>

  <% @item.additional_info.each do |info| %>
    <dt><%= text_field_tag "item[additional_info][][field]", info[:field] %></dt>
    <dd>
      <%= text_area_tag "item[additional_info][][value]", info[:value] %>
      <%= button_tag t("facility.button.del_info"), { type: :button, class: "clear" } %>
    </dd>
  <% end %>

  <%= button_tag t("facility.button.add_info"), { type: :button, class: "add-info" }  %>
</dl>
