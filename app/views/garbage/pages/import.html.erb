<%= form_for :item, url: { action: :import }, html: { method: :post } do |f| %>
<%= error_messages_for :item %>

<section class="main-box">
  <header><h2><%= t(:import) %></h2></header>
  <dl class="see">
    <dt><%= t(:file) %></dt>
    <dd><%= f.file_field :file %></dd>
  </dl>
</section>

<footer class="send">
  <%= f.submit t(:import), class: :save, onclick: "return confirm('既に登録されているごみ品目をすべて削除しインポートを行います。更新処理を開始してよろしいですか？');" %>
  <%= f.button t("views.button.cancel"), onclick: "location.href='#{url_for(action: :index)}'; return false;", class: "btn-default" %>
</footer>
<% end %>
