<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.send :order %></dd>

  <% if @item.activation_date.present? %>
  <dt><%= @model.t :activation_date %></dt>
  <dd><%= @item.send :activation_date %></dd>
  <dd><%= tryb { @item.activation_date.strftime("%Y/%m/%d %H:%M") } %></dd>
  <% end %>

  <% if @item.expiration_date.present? %>
  <dt><%= @model.t :expiration_date %></dt>
  <dd><%= @item.send :expiration_date %></dd>
  <dd><%= tryb { @item.expiration_date.strftime("%Y/%m/%d %H:%M") } %></dd>
  <% end %>
</dl>
