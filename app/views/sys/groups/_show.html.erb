<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <% if @item.domains.present? %>
  <dt><%= @model.t :domains %></dt>
  <dd><%= @item.send :domains %></dd>
  <% end %>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.send :order %></dd>

  <% if @item.activation_date.present? %>
  <dt><%= @model.t :activation_date %></dt>
  <dd><%= tryb { ss_time_tag @item.activation_date } %></dd>
  <% end %>

  <% if @item.expiration_date.present? %>
  <dt><%= @model.t :expiration_date %></dt>
  <dd><%= tryb { ss_time_tag @item.expiration_date } %></dd>
  <% end %>

  <% if @item.root? %>
  <dt><%= @model.t :gws_use %></dt>
  <dd><%= @item.label :gws_use %></dd>
  <% end %>

  <% if @item.root? && SS.config.ss.upload_policy.present? %>
  <dt><%= @model.t :upload_policy %></dt>
  <dd><%= @item.label :upload_policy %></dd>
  <% end %>
</dl>
