<dl class="see">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <% if @item.domain_editable? %>
  <dt><%= @model.t :domains %><%= @model.tt :domains %></dt>
  <dd><%= f.text_field :domains %></dd>
  <% end %>

  <dt><%= @model.t :order %><%= @model.tt :order %></dt>
  <dd><%= f.number_field :order %></dd>

  <dt><%= @model.t :activation_date %><%= @model.tt :activation_date %></dt>
  <dd><%= f.ss_datetime_field :activation_date %></dd>

  <dt><%= @model.t :expiration_date %><%= @model.tt :expiration_date %></dt>
  <dd><%= f.ss_datetime_field :expiration_date %></dd>

  <% if @item.persisted? && @item.root? %>
  <dt><%= @model.t :gws_use %><%= @model.tt :gws_use %></dt>
  <dd><%= f.select :gws_use, @item.gws_use_options, include_blank: true %></dd>
  <% end %>

  <% if @item.root? && SS.config.ss.upload_policy.present? %>
  <dt><%= @model.t :upload_policy %><%= @model.tt :upload_policy %></dt>
  <dd><%= f.select :upload_policy, @item.upload_policy_options %></dd>
  <% end %>
</dl>
