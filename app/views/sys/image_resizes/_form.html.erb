<%
  @item.in_size_mb = @item.size / (1_024 * 1_024) if @item.size
%>
<dl class="see">
  <dt><%= @model.t :state %><%= @model.tt :state %></dt>
  <dd><%= f.select :state, @item.state_options %></dd>

  <dt><%= @model.t :max_width %><%= @model.tt :max_width %></dt>
  <dd><%= f.number_field :max_width %></dd>

  <dt><%= @model.t :max_height %><%= @model.tt :max_height %></dt>
  <dd><%= f.number_field :max_height %></dd>

  <dt><%= @model.t :quality %></dt>
  <dd></dd>

  <dt class="depth-2"><%= @model.t :size %><%= @model.tt :size %></dt>
  <dd class="depth-2"><%= f.number_field :in_size_mb %> <%= t "ss.units.mega_byte" %></dd>

  <dt class="depth-2"><%= @model.t :quality %><%= @model.tt :quality %></dt>
  <dd class="depth-2"><%= f.number_field :quality, in: 0..100 %></dd>
</dl>
