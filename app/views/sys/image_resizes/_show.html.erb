<dl class="see">
  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>

  <dt><%= @model.t :max_width %></dt>
  <dd><%= @item.max_width %></dd>

  <dt><%= @model.t :max_height %></dt>
  <dd><%= @item.max_height %></dd>

  <% unless SS::File.system_quality_option_disable? %>
    <dt><%= @model.t :size %></dt>
    <dd><%= number_to_human_size(@item.size) %></dd>

    <dt><%= @model.t :quality %></dt>
    <dd><%= @item.quality %></dd>
  <% end %>
</dl>
