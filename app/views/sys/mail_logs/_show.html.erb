<dl class="see">
  <dt><%= @model.t :mailer %></dt>
  <dd><%= @item.mailer %></dd>

  <% if @item.error.present? %>
  <dt><%= @model.t :error %></dt>
  <dd><%= br @item.error %></dd>
  <% end %>

  <dt><%= @model.t :subject %></dt>
  <dd><%= @item.subject %></dd>

  <dt><%= @model.t :from %></dt>
  <dd><%= @item.from %></dd>

  <dt><%= @model.t :to %></dt>
  <dd><%= @item.to %></dd>

  <dt><%= @model.t :cc %></dt>
  <dd><%= @item.cc %></dd>

  <dt><%= @model.t :bcc %></dt>
  <dd><%= @item.bcc %></dd>

  <dt><%= @model.t :mail %></dt>
  <dd><%= text_area_tag :mail, @item.mail, readonly: true, style: "height: 400px" %></dd>
  <dd>
    <% if Sys::MailLog.allowed?(:edit, @cur_user) %>
      <%= link_to(t('ss.links.decode'), { action: :decode, id: @item }, class: "btn decode") %>
    <% end %>
  </dd>
</dl>
