<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :host %></dt>
  <dd><%= @item.send :host %></dd>

  <dt><%= @model.t :domains %></dt>
  <dd><%= @item.send :domains %></dd>

  <dt><%= @model.t :subdir %></dt>
  <dd><%= @item.send :subdir %></dd>

  <dt><%= @model.t :parent_id %></dt>
  <dd><%= @item.parent.try(:name) %></dd>

  <dt><%= @model.t :https %></dt>
  <dd><%= @item.label :https %></dd>

  <dt><%= @model.t :mypage_scheme %></dt>
  <dd><%= @item.label :mypage_scheme %></dd>

  <dt><%= @model.t :mypage_domain %></dt>
  <dd><%= @item.send :mypage_domain %></dd>

  <dt><%= @model.t :group_ids %></dt>
  <dd><%=br @item.groups.order_by(name: 1).pluck(:name) %></dd>

  <dt><%= @model.t :partner_site_ids %></dt>
  <dd><%=br @item.partner_sites.reorder(id: 1).pluck(:name) %></dd>

  <dt><%= @model.t :chorg_site_ids %></dt>
  <dd><%=br @item.chorg_sites.reorder(id: 1).pluck(:name) %></dd>

  <% if SS.config.ss.upload_policy.present? %>
  <dt><%= @model.t :upload_policy %></dt>
  <dd><%= @item.label :upload_policy %></dd>
  <% end %>
</dl>
