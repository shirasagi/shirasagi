<dl class="see">
  <dt><%= @model.t :target_host_name %></dt>
  <dd>
    <%= @item.target_host_name %>
    <%= f.hidden_field :target_host_name %>
  </dd>
  <dt><%= @model.t :target_host_host %></dt>
  <dd>
    <%= @item.target_host_host %>
    <%= f.hidden_field :target_host_host %>
  </dd>
  <dt><%= @model.t :target_host_domains %></dt>
  <dd>
    <%= @item.target_host_domains %>
    <%= f.hidden_field :target_host_domains %>
  </dd>
  <dt><%= @model.t :target_host_subdir %></dt>
