<nav class="nav-menu">
  <% if params[:action] =~ /index/ %>
    <%= link_to :new, { action: :new }, class: :new if @model.allowed?(:edit, @cur_user) %>
    <%= link_to :"sys.links.new_from_metadata", { controller: 'sys/auth/samls/metadata', action: :new }, class: :new if @model.allowed?(:edit, @cur_user) %>
  <% elsif params[:action] =~ /new|create/ %>
    <%= link_to :back_to_index, { action: :index }, class: "back-to-index" %>
  <% elsif params[:action] =~ /edit|update|delete/ %>
    <%= link_to :back_to_show, { action: :show, id: @item }, class: "back-to-show" if @item.allowed?(:edit, @cur_user) %>
    <%= link_to :back_to_index, { action: :index }, class: "back-to-index" %>
  <% else %>
    <%= link_to :edit, { action: :edit, id: @item }, class: :edit if @item.allowed?(:edit, @cur_user) %>
    <%= link_to :delete, { action: :delete, id: @item }, class: :delete if @item.allowed?(:edit, @cur_user) %>
    <%= link_to :back_to_index, { action: :index }, class: "back-to-index" %>
  <% end %>
</nav>
