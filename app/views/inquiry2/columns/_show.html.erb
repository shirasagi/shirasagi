<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>
  <dt><%= @model.t :html %></dt>
  <dd>
    <% if @item.send(:html).present?  %>
      <%= html_editor "#inquiry2_column_html", height: "200px", readonly: true %>
      <%= text_area_tag "inquiry2_column_html", @item.html, style: "height: 200px;" %>
    <% end %>
  </dd>
  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>
  <dt><%= @model.t :order %></dt>
  <dd><%= @item.send :order %></dd>
</dl>
