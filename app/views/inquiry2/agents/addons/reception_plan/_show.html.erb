<%

return if @item.reception_start_date.blank? && @item.reception_close_date.blank?

%>
<% if !@item.reception_enabled? %>
<%= jquery do %>
  $('#addon-basic dd a[href="<%= @item.full_url %>"]').replaceWith("<%= @item.full_url %>");
<% end %>
<% end %>
<dl class="see">
  <dt><%= @model.t :reception_start_date %></dt>
  <dd><%= ss_time_tag(@item.reception_start_date, type: :date) %></dd>

  <dt><%= @model.t :reception_close_date %></dt>
  <dd><%= ss_time_tag(@item.reception_close_date, type: :date) %></dd>
</dl>
