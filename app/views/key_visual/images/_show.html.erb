<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.name %></dd>

  <% if @item.link_url.present? %>
  <dt><%= @model.t :link_url %></dt>
  <dd><%= link_to @item.link_url, @item.link_url, target: "_blank", rel: "noopener" %></dd>
  <% end %>

  <dt><%= @model.t :file_id %></dt>
  <dd><%= show_image_info @item.file %></dd>

  <dt><%= @model.t :remark %></dt>
  <dd><%=br @item.remark %></dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.order %></dd>
</dl>
