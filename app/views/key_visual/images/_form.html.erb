<dl class="see">
  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :link_url %><%= @model.tt :link_url %></dt>
  <dd><%= f.text_field :link_url, class: "alnum" %></dd>

  <dt><%= @model.t :file_id %><%= @model.tt :file_id %></dt>
  <dd><%= f.file_field :in_file %></dd>
  <% if @item.file %>
  <dd><label><%= f.check_box :rm_file %><%= t "ss.buttons.delete" %> (<%= @item.file.filename %>)</label></dd>
  <% end %>

  <dt><%= @model.t :order %><%= @model.tt :order %></dt>
  <dd><%= f.number_field :order %></dd>
</dl>
