<%= code_editor ".mod-key_visual-pagelist .html", mode: :html %>

<dl class="see mod-key_visual-pagelist">
  <dt><%= @model.t :link_target %><%= @model.tt :link_target %></dt>
  <dd><%= f.select :link_target, @item.link_target_options %></dd>

  <dt><%= @model.t :upper_html %><%= @model.tt :upper_html %></dt>
  <dd><%= f.text_area :upper_html, class: :html %></dd>

  <dt><%= @model.t :lower_html %><%= @model.tt :lower_html %></dt>
  <dd><%= f.text_area :lower_html, class: :html %></dd>

  <dt><%= @model.t :kv_speed %><%= @model.tt :kv_speed %></dt>
  <dd><%= f.number_field :kv_speed %><%= I18n.t("datetime.prompts.milli_second") %></dd>

  <dt><%= @model.t :kv_pause %><%= @model.tt :kv_pause %></dt>
  <dd><%= f.number_field :kv_pause %><%= I18n.t("datetime.prompts.milli_second") %></dd>
</dl>
