  <dd><%= f.select :notice_state, @item.notice_state_options %></dd>
  <dt><%= @model.t :notice_content %><%= @model.tt :notice_content %></dt>
  <dd><%= f.select :notice_content, @item.notice_content_options %></dd>
  <dt><%= @model.t :notice_emails %><%= @model.tt :notice_emails %></dt>
  <dd><%= f.ss_lines_field :notice_emails, value: @item.notice_emails.join("\n") %></dd>
  <dt><%= @model.t :from_name %><%= @model.tt :from_name %></dt>
  <dd><%= f.text_field :from_name %></dd>
  <dt><%= @model.t :from_email %><%= @model.tt :from_email %></dt>
  <dd><%= f.text_field :from_email %></dd>
</dl>
