<% message.subject = @subject %>
<% if @node.reply_upper_text.present? %>
<%= sanitize(@node.reply_upper_text, tags: []) %>
<%= "" %>
<% end %>
<% if @node.reply_content_static? %>
<%= sanitize(@node.reply_content_static.presence || I18n.t("inquiry.default_reply_content_static"), tags: []) %>
<% else %>
<% @answer.data.each do |data| %>
<%= "- #{sanitize(data.column.name, tags: [])}" %>
<%= convert_to_lines(sanitize(data.value.to_s, tags: [])) %>
<%= "" %>
<% end %>
<% end %>
<% if @node.reply_lower_text.present? %>
<%= "" %>
<%= sanitize(@node.reply_lower_text, tags: []) %>
<%= "" %>
<% end %>
