<% kintone_app_enabled = tryb { @cur_node.becomes_with_route.kintone_app_enabled? } %>

<div class="main-box">
  <table class="index">
    <thead class="list-head">
      <tr>
        <th class="checkbox" style="width: 120px;">
          <input type="checkbox" />
          <% if @cur_node.allowed?(:edit, @cur_user, site: @cur_site) %>
            <%= ss_button_to t("ss.links.delete"), "", class: "destroy-all btn btn-list-head-action", method: "delete", confirm: t('ss.confirm.delete') %>
          <% end %>
        </th>
        <th><%= @model.t :name %></th>
        <% if kintone_app_enabled %>
          <th><%= @model.t :kintone_field_code %></th>
        <% end %>
        <th><%= @model.t :order %></th>
        <th class="datetime"><%= @model.t :updated %></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr class="list-item">
        <td class="checkbox">
          <input type="checkbox" name="ids[]" value="<%= item.id %>" />
          <nav class="tap-menu">
            <%= link_to t('ss.links.show'), action: :show, id: item if item.allowed?(:read, @cur_user, site: @cur_site) %>
            <%= link_to t('ss.links.edit'), action: :edit, id: item if item.allowed?(:edit, @cur_user, site: @cur_site) %>
            <%= link_to t('ss.links.delete'), action: :delete, id: item if item.allowed?(:delete, @cur_user, site: @cur_site) %>
          </nav>
        </td>
        <td><%= link_to item.name, action: :show, id: item %></td>
        <% if kintone_app_enabled %>
          <td><%= item.kintone_field_code %></td>
        <% end %>
        <td><%= item.order %></td>
        <td><%= ss_time_tag item.updated %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @items if @items.try(:current_page) %>
