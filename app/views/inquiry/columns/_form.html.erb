<%= html_editor ".inquiry-column-html", height: "180px", advanced: Cms::EditorExtension.allowed?(:use, @cur_user, site: @cur_site) %>

<div class="see">
  <div class="col12 mb-3">
    <label><%= @model.t :name %><%= @model.tt :name %></label>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="col12 mb-3">
    <label><%= @model.t :html %><%= @model.tt :html %></label>
    <%= f.text_area :html, class: "inquiry-column-html form-control", style: "height:180px;" %>
  </div>
  <div class="col12 mb-3">
    <label><%= @model.t :state %><%= @model.tt :state %></label>
    <%= f.select :state, @item.state_options, class: "form-control" %>
  </div>
  <div class="col12 mb-3">
    <label><%= @model.t :order %><%= @model.tt :order %></label>
    <%= f.number_field :order, class: "form-control" %>
  </div>
</div>
