<% if @main_box %>
  <% @main_box.call %>
<% else %>
<div class="see mt-3 mb-3">
  <h2 class="h5"><%= t "inquiry.total_count" %></h2>
  <p><%= @answer_count %><%= t "ss.units.count" %></p>
</div>
<% end %>

<% @columns.each do |column| %>
<div class="card mb-3">
  <div class="card-body">
    <div class="column" style="overflow: auto; max-height: 200px;">
      <table class="table table-striped">
        <thead><tr><th colspan="2"><%= column.name %></th></tr></thead>
        <tbody>
          <% if column.input_type =~ /(select|radio_button|check_box)/ %>
            <% column.select_options.each do |opts| %>
              <tr>
                <td><%= opts %></td>
                <td class="count">
                  <%= @aggregation[{ "column_id" => column.id, "value" => opts }] %>
                  <%= t "ss.units.count" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <% column.answer_data(@answer_data_opts).each do |data| %>
              <% if data.value.present? %>
                <tr><td colspan="2"><%= data.value %></td></tr>
              <% end %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>
