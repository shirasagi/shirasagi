<%= node_navi :inquiry do %>
  <% if @cur_node.route == "inquiry/form" %>
    <% Inquiry.enum_menu_items(@cur_site, @cur_node, @cur_user).each do |menu_item| %>
      <h3><%= link_to menu_item.label, menu_item.path, class: menu_item.css_classes %></h3>
    <% end %>
  <% else %>
    <h3><%= link_to t("inquiry.nodes"), inquiry_nodes_path %></h3>
  <% end %>
<% end %>
