<%= form_for :item, url: { action: :destroy }, html: { method: :delete, id: "item-form", multipart: true } do |f| %>
  <%= error_messages_for :item %>

  <div class="addon-views">
    <div class="addon-view" id="addon-basic">
      <div class="addon-head"><h2><%= t("ss.confirm.delete") %></h2></div>
      <div class="addon-body">
        <%= render template: "_delete" %>
      </div>
    </div>
  </div>

  <footer class="send ss-sticky ss-sticky-bottom">
    <%= f.submit t("ss.buttons.delete"), class: "delete btn-primary", data: { disable_with: t("ss.buttons.deleting") } %>
    <%= f.button t("ss.buttons.cancel"), type: :reset, onclick: "location.href='#{url_for(action: :file, filename: @item.filename, do: "show")}'; return false;", class: "btn-default" %>
  </footer>
<% end %>
