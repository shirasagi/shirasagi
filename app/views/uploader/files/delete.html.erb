<%= form_for :item, url: { action: :destroy }, html: { method: :delete, multipart: true } do |f| %>
<%= error_messages_for :item %>

<div class="addon-view" id="addon-basic">
<%= render file: "_delete" %>
</div>

<footer class="send">
<%= f.submit t("ss.buttons.delete"), class: "delete btn-primary" %>
<%= f.button t("ss.buttons.cancel"), type: :reset, onclick: "location.href='#{url_for(action: :file, filename: @item.filename, do: "show")}'; return false;", class: "btn-default" %>
</footer>
<% end %>
