<%= jquery do %> SS.confirmUnloading(); <% end %>

<%= form_for :item, url: { action: :update, filename: @item.filename }, html: { method: :put, multipart: true } do |f| %>
<%= error_messages_for :item %>

<% if ::File.exists?("#{Rails.root}/app/views/#{params[:controller]}/_form.html.erb") %>
<%= render partial: 'form', locals: { f: f } %>
<% else %>
<%= render file: "#{Rails.root}/app/views/ss/crud/_form", locals: { f: f } %>
<% end %>
<footer class="send">
<%= f.submit t("views.button.save"), class: :save %>
<%= f.button t("views.button.cancel"), onclick: "location.href='#{url_for(action: :show, filename: @item.filename, do: "show")}'; return false;" %>
</footer>
<% end %>
