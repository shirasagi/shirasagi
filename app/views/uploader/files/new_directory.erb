<%= jquery do %> SS.confirmUnloading(); <% end %>

<%= form_for :item, url: { action: :create, filename: @item.filename }, html: { multipart: true } do |f| %>
<%= error_messages_for :item %>
<div class="addon-view mb-5">
  <dl class="see">
    <dt><%= t('uploader.new_directory') %></dt>
    <dd><%= f.text_field :directory, value: @directory %></dd>
  </dl>
</div>
<footer class="send">
  <%= f.submit t("ss.buttons.save"), class: "save btn-primary" %>
  <%= f.button t("ss.buttons.cancel"), type: :reset, onclick: "location.href='#{url_for(action: :file, filename: @item.filename)}'; return false;", class: "btn-default" %>
</footer>
<% end %>
