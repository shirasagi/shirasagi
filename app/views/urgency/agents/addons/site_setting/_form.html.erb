<%
  addon ||= local_assigns.fetch(:addon, {})
  addon[:display_body] = "hide"
%>

<dl class="see mod-urgency-site_setting">
  <dt><%= @model.t :related_urgency_site_ids %><%= @model.tt :related_urgency_site_ids %></dt>
  <dd>
    <%= f.hidden_field "related_urgency_site_ids[]", value: "", class: "hidden-ids" %>
    <%= link_to t("cms.apis.sites.index"), cms_apis_sites_path, class: "ajax-box" %>
  </dd>
  <dd>
    <table class="index ajax-selected">
      <thead>
        <tr>
          <th class="name"><%= t("mongoid.models.cms/site") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @item.related_urgency_sites.each do |site| %>
        <tr data-id="<%= site.id %>">
          <td><%= f.hidden_field "related_urgency_site_ids[]", value: site.id %> <%= site.host %></td>
          <td><%= link_to t("ss.buttons.delete"), "#", class: "deselect btn" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>
