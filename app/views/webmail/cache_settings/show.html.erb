<style>
.webmail-cache-settings form {
  display: inline-block;
}
</style>

<div class="main-box webmail-cache-settings webmail-mail-cache">
  <header><h2><%= t('webmail.mail') %></h2></header>
  <%= form_for :item, url: { action: :update }, html: { id: "item-form1", method: :put } do |f| %>
    <%= hidden_field_tag :model, 'mail', id: nil %>
    <%= f.submit t('webmail.buttons.clear_cache'), class: 'btn save', data: { confirm: t('webmail.confirm.clear_cache') } %>
  <% end %>

  <% if SS::User.allowed?(:edit, @cur_user) %>
    <%= form_for :item, url: { action: :update }, html: { id: "item-form2", method: :put } do |f| %>
      <%= hidden_field_tag :model, 'mail', id: nil %>
      <%= hidden_field_tag :target, 'all', id: nil %>
      <%= f.submit t('webmail.buttons.clear_cache_all'), class: 'btn save', data: { confirm: t('webmail.confirm.clear_cache') } %>
    <% end %>
  <% end %>
</div>

