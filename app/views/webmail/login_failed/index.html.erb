<div class="addon-views">
  <div class="addon-view">
    <div class="addon-body">
      <% if @webmail_mode == :group ||!@cur_user.webmail_permitted_any?(:edit_webmail_user_accounts) %>
        <%== I18n.t("webmail.notice.imap_login_failed_group") %>
      <% else %>
        <%== I18n.t("webmail.notice.imap_login_failed", account_settings: link_to(t("webmail.account_setting"), webmail_account_setting_path)) %>
      <% end %>
    </div>
  </div>

  <% if @imap_setting %>
  <div class="addon-view">
    <div class="addon-body">
      <dl class="see">
        <dt><%= @model.t :imap_setting_name %></dt>
        <dd><%= @imap_setting.name %></dd>
      </dl>
    </div>
  </div>
  <% end %>
</div>
