<%= form_for :item, url: { action: :import }, html: { method: :post } do |f| %>
<%= error_messages_for :item %>

<section class="main-box">
  <header><h2><%= t("ss.import") %></h2></header>

  <dl class="see">
    <dt><%= I18n.t('ss.file') %><%= @model.tt :in_file %></dt>
    <dd><%= f.file_field :in_file %></dd>
  </dl>
</section>

<footer class="send">
  <%= f.submit t("ss.import"), class: :save %>
</footer>
<% end %>
