<dl class="see">
  <dt><%= @model.t :name %></dt>
  <dd><%= @item.send :name %></dd>

  <dt><%= @model.t :conditions %></dt>

  <% @item.conditions.each do |cond| %>
  <dd>
    <em>"<%= @item.label :field, value: cond[:field] %>"</em>
    <%= @item.label :operator, value: cond[:operator] %>
    <em>"<%= cond[:value] %>"</em>
  </dd>
  <% end %>

  <dt><%= @model.t :action %></dt>
  <dd><%= @item.label :action %></dd>

  <dt><%= @model.t :mailbox %></dt>
  <dd><%= @item.send :decode_mailbox %></dd>

  <dt><%= @model.t :state %></dt>
  <dd><%= @item.label :state %></dd>

  <dt><%= @model.t :order %></dt>
  <dd><%= @item.send :order %></dd>
</dl>
