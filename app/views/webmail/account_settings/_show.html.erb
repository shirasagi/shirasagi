<% default = t('webmail.default_settings') %>

<dl class="see">
  <dt><%= @model.t :imap_setting_name %></dt>
  <dd><%= setting.name %></dd>

  <dt><%= @model.t :from %></dt>
  <dd><%= setting.from.presence || @cur_user.name %></dd>

  <dt><%= @model.t :address %></dt>
  <dd><%= setting.address.presence || @cur_user.email %></dd>

  <dt><%= @model.t :imap_host %></dt>
  <dd><%= setting.imap_host.presence || default %></dd>

  <dt><%= @model.t :imap_auth_type %></dt>
  <dd><%= setting.imap_auth_type.presence || default %></dd>

  <dt><%= @model.t :imap_account %></dt>
  <dd><%= setting.imap_account.presence || default %></dd>

  <dt><%= @model.t :imap_password %></dt>
  <dd><%= ('*' * setting.decrypt_imap_password.to_s.size).presence || default %></dd>

  <dt><%= @model.t :imap_sent_box %></dt>
  <dd><%= setting.imap_sent_box %></dd>

  <dt><%= @model.t :imap_draft_box %></dt>
  <dd><%= setting.imap_draft_box %></dd>

  <dt><%= @model.t :imap_account %></dt>
  <dd><%= setting.imap_trash_box %></dd>

  <% if setting.threshold_mb %>
  <dt><%= @model.t :threshold_mb %></dt>
  <dd><%= setting.threshold_mb %><%= t "ss.units.mega_byte" %></dd>
  <% end %>

  <dt><%= @model.t :imap_default_index %></dt>
  <dd><%= check_box_tag "", 1, default_index, class: "default-index", disabled: true %></dd>
</dl>
