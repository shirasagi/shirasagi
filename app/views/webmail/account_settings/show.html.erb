<div class="addon-views">
  <% number = 1 %>
  <% @item.imap_settings.each_with_index do |setting, i| %>
    <div class="addon-view imap-setting" data-id="<%= number %>">
      <div class="addon-head"><h2><%= "#{t('webmail.account_setting')}#{number}" %></h2></div>
      <div class="addon-body">
        <%= render file: '_show', locals: { number: number, setting: setting, default_index: (@cur_user.imap_default_index == i) } %>
      </div>
    </div>
    <% number += 1 %>
  <% end %>

  <% if @item.imap_settings.blank? %>
    <% setting = Webmail::ImapSetting.default %>
    <div class="addon-view imap-setting" data-id="<%= number %>">
      <div class="addon-head"><h2><%= "#{t('webmail.account_setting')}#{number}" %></h2></div>
      <div class="addon-body">
        <%= render file: '_show', locals: { number: number, setting: setting, default_index: true } %>
      </div>
    </div>
  <% end %>
</div>
