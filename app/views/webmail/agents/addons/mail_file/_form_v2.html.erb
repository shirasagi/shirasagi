<%
  addon ||= local_assigns.fetch(:addon, {})
  if @item.respond_to?(:form) && @item.form.present?
    css_class = Array(addon[:class])
    addon[:class] = css_class + %w(hide)
  end
%>

<%=
  component = SS::FileSelectBoxComponent.new(
    ss_mode: @ss_mode, cur_site: @cur_site, cur_user: @cur_user, item: @item,
    show_properties: false, show_attach: false, show_opendata: false, show_reorder: false
  )
  render component
%>
