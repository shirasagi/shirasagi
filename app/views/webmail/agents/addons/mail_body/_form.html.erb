<div class="webmail-addon-mail-body">
  <div class="subject">
    <%= f.text_field :subject, placeholder: @model.t(:subject) %>
  </div>
  <div class="options">
    <%= f.select :format, @item.format_options, selected: @item.format %>
    <%= f.select :signature, @item.signature_options, include_blank: t('mongoid.models.webmail/signature') %>
  </div>
  <div class="body-content body-text">
    <%= f.text_area :text, style: "height: 400px;", placeholder: @model.t(:body) %>
  </div>
  <div class="body-content body-html">
    <%= html_editor ".webmail-addon-mail-body .html", advanced: true, templates: false %>
    <%= f.text_area :html, class: "html", style: "height: 400px;" %>
  </div>

  <div class="header-options">
    <lable for="in-request-mdn"><%= f.check_box :in_request_mdn, :id => "in-request-mdn" %>開封確認メッセージを要求する</lable><br>
    <lable for="in-request-dsn"><%= f.check_box :in_request_dsn, :id => "in-request-dsn" %>配信確認メッセージを要求する</lable>
  </div>
</div>
