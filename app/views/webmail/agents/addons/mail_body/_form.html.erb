<div class="webmail-addon-mail-body">
  <div class="subject">
    <%= f.text_field :subject, placeholder: @model.t(:subject) %>
  </div>
  <div class="options">
    <%= f.select :format, @item.format_options, selected: @item.format %>
    <%= f.select :signature, Webmail::Signature.signature_options(@imap), include_blank: t('mongoid.models.webmail/signature') %>
  </div>
  <div class="body-content body-text">
    <%= f.text_area :text, style: "height: 400px;", placeholder: @model.t(:body) %>
  </div>
  <div class="body-content body-html">
    <%= webmail_html_editor ".webmail-addon-mail-body .html", advanced: true, templates: false %>
    <%= f.text_area :html, class: "html", style: "height: 400px;" %>
  </div>

  <div class="header-options">
    <label for="in-request-mdn"><%= f.check_box :in_request_mdn, :id => "in-request-mdn" %><%= t('webmail.options.action.request_mdn') %></label><br>
    <label for="in-request-dsn"><%= f.check_box :in_request_dsn, :id => "in-request-dsn" %><%= t('webmail.options.action.request_dsn') %></label>
  </div>
</div>
