<%= render partial: "opendata/nodes/user/view/navi" %>

<div class="opendata-ideas">
<% @items.each do |item| %>
  <article>
    <header>
      <h2><a href="<%= "#{item.id}/" %>"><%= item.name %></a></h2>
    </header>
  </article>
<% end %>
</div>

<%= paginate @items if @items.try(:current_page) %>
