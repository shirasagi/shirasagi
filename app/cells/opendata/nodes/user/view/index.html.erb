<% if session[:user] == nil %>
  <%= form_for :item, url: "#{@cur_node.url}login.html", html: { multipart: true } do |f| %>
    <%= error_messages_for :item %>
    <%= hidden_field_tag :ref, params[:ref] %>

    Email<br />
    <%= email_field :item, :email %><br />
    <br />
    Password<br />
    <%= password_field :item, :password %><br />

    <%= submit_tag t(:login), name: :submit %>

  <% end %>
<% else %>
  <%= render partial: "opendata/nodes/user/view/navi" %>
  <%= form_for :item, url: "#{@cur_node.url}logout.html", html: { multipart: true } do |f| %>
    <%= submit_tag t(:logout), name: :submit %>
  <% end %>
<% end %>
