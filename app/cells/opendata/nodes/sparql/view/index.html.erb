<div class="opendata-sparql">
  <form method="get" action="">
    <table>
      <tr>
        <th>Query</th>
        <td>
          <textarea name="query"
           style="width: 400px; height: 100px;">select distinct * where { ?s ?p ?o . }</textarea>
        </td>
      </tr>
      <tr>
        <th>Format</th>
        <td>
          <select>
            <option>HTML</option>
            <option>JSON</option>
            <option>CSV</option>
            <option>TSV</option>
            <option>XML</option>
          </select>
        </td>
      </tr>
    </table>

    <div style="margin: 20px 50px;">
      <input type="submit" value="Run Query" />
    </div>
  </form>
</div>
