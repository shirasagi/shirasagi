function SS_Color() {
}

SS_Color.render = function () {
  $(".js-color").each(function () {
    var sel = $(this);
    sel.minicolors();
    if (sel.data('clear')) {
      var btn = $("<input type='button' class='btn btn-outline' value='<%= I18n.t('ss.buttons.clear') %>' />").uniqueId();
      $(sel).after(btn).after(' ');
      return $('#' + btn.attr('id')).click(function () {
        return $(sel).minicolors('value', {
          color: 'transparent'
        });
      });
    }
  });
};

