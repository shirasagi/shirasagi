class @SS_Color
  @render: ->
    $(".js-color").each ->
      sel = $(this)
      sel.minicolors()
      if sel.data('clear')
        btn = $("<input type='button' class='btn' value='<%= I18n.t('views.button.clear') %>' />").uniqueId()
        $(sel).after(btn).after(' ')
        $('#' + btn.attr('id')).click ->
          $(sel).minicolors('value', { color: 'transparent' })
