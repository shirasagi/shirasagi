class @SS_AddonTabs
  @render: ->
    $('.toggle-head').on 'click', ->
      $(this).parent().find('.toggle-body').animate( { height: 'toggle' }, 'fast' )

  @head: (content) ->
    $(content).parent().parent().find('.addon-head')

  @show: (view) ->
    $(view).parent().show()

  @hide: (view) ->
    $(view).parent().hide()

  # TODO: deprecated
  @toggleView: (view) ->
    console.log "SS_AddonTabs.toggleView is deprecated"
    $(view).parent().hide()
