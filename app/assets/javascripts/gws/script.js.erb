$(function () {
  // external link
  $('a[href^=http]').not('[href*="' + location.hostname + '"]').attr({ target: '_blank' });

  // tabs
  var path = location.pathname + "/";
  $(".gws-schedule-tabs a").each(function () {
    var menu = $(this);
    if (path.match(new RegExp('^' + menu.attr('href') + '(\/|$)'))) {
      menu.addClass("current");
    }
  });

  Gws_Member.render();
});
