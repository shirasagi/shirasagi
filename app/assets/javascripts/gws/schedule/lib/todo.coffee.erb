class @Gws_Schedule_Todo
  @render: ->
    $(".list-head .finish-all").on "click", ->
      form = Gws_Schedule_Todo.buildForm("todos/finish_all", "<%= I18n.t('gws/schedule/todo.confirm.finish_all') %>")
      form.appendTo(document.body).submit()

    $(".list-head .revert-all").on "click", ->
      form = Gws_Schedule_Todo.buildForm("todos/revert_all", "<%= I18n.t('gws/schedule/todo.confirm.revert_all') %>")
      form.appendTo(document.body).submit()

    $(".list-head .disable-all").on "click", ->
      form = Gws_Schedule_Todo.buildForm("todos/disable_all", "<%= I18n.t('gws/schedule/todo.confirm.disable_all') %>")
      form.appendTo(document.body).submit()

    $(".list-head .active-all").on "click", ->
      form = Gws_Schedule_Todo.buildForm("todo_management/active_all", "<%= I18n.t('gws/schedule/todo_management.confirm.active_all') %>")
      form.appendTo(document.body).submit()

  @buildForm: (action, confirm)->
    checked = $(".list-item input:checkbox:checked").map ->
      $(this).val()
    return false if checked.length == 0
    token = $('meta[name="csrf-token"]').attr('content')
    form = $("<form/>", action: action, method: "post", data: {confirm: confirm})
    form.append($("<input/>", name: "authenticity_token", value: token, type: "hidden"))
    for id in checked
      form.append($("<input/>", name: "ids[]", value: id, type: "hidden"))
    form
