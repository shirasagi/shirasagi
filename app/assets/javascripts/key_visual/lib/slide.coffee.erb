//= require bxslider
//= require_self

class @KeyVisual_Image
  @slide: (selector, opts = {}) ->
    defaultOpts =
      auto: true
      autoControls: true
      startText: "<%= I18n.t 'key_visual.controls.start' %>"
      stopText: "<%= I18n.t 'key_visual.controls.stop' %>"
      controls: false
      pagerCustom: "#{selector} .bx-thumbs"
    slider = $("#{selector} .images").bxSlider($.extend(defaultOpts, opts))

  @randomize: (selector) ->
    wrap = $(selector)
    list = wrap.find("li")
    list = list.sort ->
      return Math.random() - .5
    list.each ->
      wrap.append $(this)
