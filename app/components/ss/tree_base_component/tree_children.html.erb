<ul class="ss-tree-subtree" role="group">
  <% children.each do |child_node| %>
    <% if child_node.children? %>
      <li class="ss-tree-item" role="treeitem">
        <details class="ss-tree-subtree-wrap"<% if child_node.opens %> open<% end %>>
          <summary>
            <%= link_to tag.span(child_node.name, class: "ss-tree-item-title"), child_node.url, class: "ss-tree-item-link", title: child_node.name, data: { turbo: false, node_id: child_node.id } %>
          </summary>

          <%= render SS::TreeBaseComponent::TreeChildren.new(component: component, children: child_node.children) %>
        </details>
      </li>
    <% else %>
      <li class="ss-tree-item no-children" role="treeitem">
        <%= link_to tag.span(child_node.name, class: "ss-tree-item-title"), child_node.url, class: "ss-tree-item-link", title: child_node.name, data: { turbo: false, node_id: child_node.id } %>
      </li>
    <% end %>
  <% end %>
</ul>
