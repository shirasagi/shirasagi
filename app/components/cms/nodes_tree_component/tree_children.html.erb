<ul class="ss-tree-subtree">
  <% children.each do |child| %>
    <% if child.children? %>
      <li class="ss-tree-item">
        <details class="ss-tree-subtree-wrap">
          <summary>
            <a href="<%= child.url %>" class="ss-tree-item-link" data-turbo="false" data-node-id="<%= child.id %>">
              <span class="ss-tree-item-title"><%= child.name %></span>
            </a>
          </summary>

          <%= render Cms::NodesTreeComponent::TreeChildren.new(site: site, children: child.children) %>
        </details>
      </li>
    <% else %>
      <li class="ss-tree-item no-children">
        <a href="<%= child.url %>" class="ss-tree-item-link" data-turbo="false" data-node-id="<%= child.id %>">
          <span class="ss-tree-item-title"><%= child.name %></span>
        </a>
      </li>
    <% end %>
  <% end %>
</ul>
