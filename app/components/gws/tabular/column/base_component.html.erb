<% if type == :form || type == :show %>
  <dt>
    <%= sanitize_easy column.name %>
    <% if type == :form && column.tooltips.present? %>
      <div class="tooltip">?
        <ul class="tooltip-content">
          <% column.tooltips.each do |tooltip| %>
            <li><%= tooltip %><br></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <% if column.required? %>
      <%= required_mark %>
    <% end %>
  </dt>
  <dd>
    <% if type == :form && column.prefix_explanation.present? %>
      <div class="prefix-block"><%= sanitize_easy(br(column.prefix_explanation)) %></div>
    <% end %>
    <div class="gws-tabular-column <%= column.class.name.underscore.gsub('/', '-') %>" data-column-id="<%= column.id %>">
      <div class="input-group">
        <% if column.prefix_label.present? %>
          <span class="prefix"><%= column.prefix_label %></span>
        <% end %>

        <%= content %>

        <% if column.postfix_label.present? %>
          <span class="postfix"><%= column.postfix_label %></span>
        <% end %>
      </div>
    </div>
    <% if type == :form && column.postfix_explanation.present? %>
      <div class="postfix-block"><%= sanitize_easy(br(column.postfix_explanation)) %></div>
    <% end %>
  </dd>
<% elsif type == :title || type == :meta %>
  <div class="gws-tabular-column <%= column.class.name.underscore.gsub('/', '-') %>" data-column-id="<%= column.id %>">
    <%= content %>
  </div>
<% else %>
  <%= content %>
<% end %>
